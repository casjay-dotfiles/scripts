[Desktop Entry]
Type=Application
Version=1.0
Name=Screenshot Menu
GenericName=Screenshot Utility
Comment=Advanced screenshot utility with multiple capture modes and tools
Icon=camera-photo
Exec=screenshot-menu
Terminal=false
Categories=Graphics;Photography;Utility;
Keywords=screenshot;capture;screen;image;photo;picture;
StartupNotify=true
StartupWMClass=screenshot-menu

# Actions for different screenshot modes
Actions=full;window;region;monitor;quick;annotate;record;

[Desktop Action full]
Name=Fullscreen Screenshot
Exec=screenshot-menu full
Icon=camera-photo

[Desktop Action window]
Name=Window Screenshot
Exec=screenshot-menu window
Icon=camera-photo

[Desktop Action region]
Name=Region Screenshot
Exec=screenshot-menu region
Icon=camera-photo

[Desktop Action monitor]
Name=Monitor Screenshot
Exec=screenshot-menu monitor
Icon=camera-photo

[Desktop Action quick]
Name=Quick Clipboard
Exec=screenshot-menu quick
Icon=camera-photo

[Desktop Action annotate]
Name=Capture & Annotate
Exec=screenshot-menu annotate
Icon=camera-photo

[Desktop Action record]
Name=Record Screen
Exec=screenshot-menu record
Icon=camera-video