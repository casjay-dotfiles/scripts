# begin main app
case "$1" in
list)
  shift 1
  list_aliases alias '*'
  ;;

add)
  shift 1
  add_alias "$1" "$2"
  ;;

modify)
  shift 1
  [ -z "$1" ] && [ -z "$2" ] && [ -n "$EDITOR" ] &&
    $EDITOR "$CDD_CONFIG_DIR/$CDD_ALIAS_FILE" || printf_exit "Usage: modify alias directory"
  add_alias "$1" "$2"
  ;;

remove)
  shift 1
  rm_alias "$@"
  ;;

*)
  [ $# -le 1 ] || printf_exit "Usage: [alias]"
  cd_goto "${CDD_PROJECT:-$1}"
  ;;
esac
