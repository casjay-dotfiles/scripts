CHECK_APP_NOTIFY_CLIENT_NAME="${CHECK_APP_NOTIFY_CLIENT_NAME:-$APPNAME}"
CHECK_APP_NOTIFY_CLIENT_ICON="${CHECK_APP_NOTIFY_CLIENT_ICON:-notification-new}"
