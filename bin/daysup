DAYSUP_RUN_DIR="${DAYSUP_RUN_DIR:-$HOME/.local/run/system_scripts/$DAYSUP_SCRIPTS_PREFIX}"
DAYSUP_TEMP_DIR="${DAYSUP_TEMP_DIR:-$HOME/.local/tmp/system_scripts/daysup}"
