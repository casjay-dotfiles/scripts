# - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
[ "$CONSOLE_APP" = "true" ] && __yad__text() { tee | printf_readline "$DEFINE_OUTPUT_COLOR_2"; }

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
multiple | multi)
  shift 1
  [ -z "$1" ] && {
    printf_red "Usage: define multiple [word] [databases]"
    exit 1
  }
  __lookup_multiple "$1" "$2"
  ;;
etymology | etym)
  shift 1
  [ -z "$1" ] && {
    printf_red "Usage: define etymology [word]"
    exit 1
  }
  __lookup_etymology "$1"
  ;;
cached | cache)
  shift 1
  [ -z "$1" ] && {
    printf_red "Usage: define cached [word]"
    exit 1
  }
  results="$(__lookup_cached "$1")"
  [ -n "$results" ] && echo "$results" | __yad__text "$1" || printf_red "Nothing was found for $1"
  ;;
similar)
  shift 1
  [ -z "$1" ] && {
    printf_red "Usage: define similar [word]"
    exit 1
  }
  __lookup_similar "$1"
  ;;
clear-cache)
  __clear_cache
  ;;
*)
  # Original functionality preserved
  [ $# -eq 0 ] && search="${search:-$(INPUT_NAME="$APPNAME" ask_for_input "Define:")}" || search="$*"
  if [ -z "$search" ]; then
    __notifications "Usage: $APPNAME [query]"
    exit 1
  fi
  results="$(__lookup "${search:-$*}")"
  if [ -n "$results" ]; then
    echo "$results" | __yad__text "$1" || echo "$results" | printf_readline "$DEFINE_OUTPUT_COLOR_2"
  else
    printf_red "Nothing was found for $1"
    __notifications "Nothing was found for $1"
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
