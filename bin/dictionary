[ -d "$DICTIONARY_TEMP_DIR" ] || mkdir -p "$DICTIONARY_TEMP_DIR" |& __devnull
[ -d "$DICTIONARY_CACHE_DIR" ] || mkdir -p "$DICTIONARY_CACHE_DIR" |& __devnull
