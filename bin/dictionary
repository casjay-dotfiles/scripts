DICTIONARY_NOTIFY_CLIENT_ICON="${DICTIONARY_NOTIFY_CLIENT_ICON:-notification-new}"
DICTIONARY_NOTIFY_CLIENT_URGENCY="${DICTIONARY_NOTIFY_CLIENT_URGENCY:-normal}"
