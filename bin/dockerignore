# begin main app
if [ -f "$DOCKERIGNORE_IGNORE_FILE" ]; then
  printf_blue "Updating $DOCKERIGNORE_IGNORE_FILE"
else
  printf_blue "Creating $DOCKERIGNORE_IGNORE_FILE"
  printf '# Files to ignore\n' >"$DOCKERIGNORE_IGNORE_FILE"
fi
__create_default
