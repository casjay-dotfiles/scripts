[ -d "$DOS2UNIX_TEMP_DIR" ] || mkdir -p "$DOS2UNIX_TEMP_DIR" |& __devnull
[ -d "$DOS2UNIX_CACHE_DIR" ] || mkdir -p "$DOS2UNIX_CACHE_DIR" |& __devnull
