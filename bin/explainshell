EXPLAINSHELL_OUTPUT_COLOR_GOOD="${EXPLAINSHELL_OUTPUT_COLOR_GOOD:-2}"
EXPLAINSHELL_OUTPUT_COLOR_ERROR="${EXPLAINSHELL_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
