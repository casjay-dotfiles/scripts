FINDINSTALLAPP_EXIT_STATUS=0
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
FINDINSTALLAPP_CONFIG_DIR="${FINDINSTALLAPP_CONFIG_DIR:-$HOME/.config/myscripts/findInstallApp}"
FINDINSTALLAPP_CONFIG_BACKUP_DIR="${FINDINSTALLAPP_CONFIG_BACKUP_DIR:-$HOME/.local/share/myscripts/findInstallApp/backups}"
FINDINSTALLAPP_LOG_DIR="${FINDINSTALLAPP_LOG_DIR:-$HOME/.local/log/findInstallApp}"
FINDINSTALLAPP_RUN_DIR="${FINDINSTALLAPP_RUN_DIR:-$HOME/.local/run/system_scripts/$FINDINSTALLAPP_SCRIPTS_PREFIX}"
FINDINSTALLAPP_TEMP_DIR="${FINDINSTALLAPP_TEMP_DIR:-$HOME/.local/tmp/system_scripts/findInstallApp}"
FINDINSTALLAPP_CACHE_DIR="${FINDINSTALLAPP_CACHE_DIR:-$HOME/.cache/findInstallApp}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# File settings
FINDINSTALLAPP_CONFIG_FILE="${FINDINSTALLAPP_CONFIG_FILE:-settings.conf}"
FINDINSTALLAPP_LOG_ERROR_FILE="${FINDINSTALLAPP_LOG_ERROR_FILE:-$FINDINSTALLAPP_LOG_DIR/error.log}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
FINDINSTALLAPP_OUTPUT_COLOR_1="${FINDINSTALLAPP_OUTPUT_COLOR_1:-33}"
FINDINSTALLAPP_OUTPUT_COLOR_2="${FINDINSTALLAPP_OUTPUT_COLOR_2:-5}"
FINDINSTALLAPP_OUTPUT_COLOR_GOOD="${FINDINSTALLAPP_OUTPUT_COLOR_GOOD:-2}"
FINDINSTALLAPP_OUTPUT_COLOR_ERROR="${FINDINSTALLAPP_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
FINDINSTALLAPP_NOTIFY_ENABLED="${FINDINSTALLAPP_NOTIFY_ENABLED:-yes}"
FINDINSTALLAPP_GOOD_NAME="${FINDINSTALLAPP_GOOD_NAME:-Great:}"
FINDINSTALLAPP_ERROR_NAME="${FINDINSTALLAPP_ERROR_NAME:-Error:}"
FINDINSTALLAPP_GOOD_MESSAGE="${FINDINSTALLAPP_GOOD_MESSAGE:-No errors reported}"
FINDINSTALLAPP_ERROR_MESSAGE="${FINDINSTALLAPP_ERROR_MESSAGE:-Errors were reported}"
FINDINSTALLAPP_NOTIFY_CLIENT_NAME="${FINDINSTALLAPP_NOTIFY_CLIENT_NAME:-$APPNAME}"
FINDINSTALLAPP_NOTIFY_CLIENT_ICON="${FINDINSTALLAPP_NOTIFY_CLIENT_ICON:-notification-new}"
FINDINSTALLAPP_NOTIFY_CLIENT_URGENCY="${FINDINSTALLAPP_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE" ] || [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE" ] && . "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$FINDINSTALLAPP_RUN_DIR" ] || mkdir -p "$FINDINSTALLAPP_RUN_DIR" |& __devnull
[ -d "$FINDINSTALLAPP_LOG_DIR" ] || mkdir -p "$FINDINSTALLAPP_LOG_DIR" |& __devnull
[ -d "$FINDINSTALLAPP_TEMP_DIR" ] || mkdir -p "$FINDINSTALLAPP_TEMP_DIR" |& __devnull
[ -d "$FINDINSTALLAPP_CACHE_DIR" ] || mkdir -p "$FINDINSTALLAPP_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
FINDINSTALLAPP_TEMP_FILE="${FINDINSTALLAPP_TEMP_FILE:-$(mktemp $FINDINSTALLAPP_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$FINDINSTALLAPP_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$FINDINSTALLAPP_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$FINDINSTALLAPP_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$FINDINSTALLAPP_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$FINDINSTALLAPP_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$FINDINSTALLAPP_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom actions

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS=""
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY=""
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    FINDINSTALLAPP_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    FINDINSTALLAPP_CWD="$2"
    [ -d "$FINDINSTALLAPP_CWD" ] || mkdir -p "$FINDINSTALLAPP_CWD" |& __devnull
    shift 2
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Get directory from args
# set -- "$@"
# for arg in "$@"; do
# if [ -d "$arg" ]; then
# FINDINSTALLAPP_CWD="$arg" && shift 1 && SET_NEW_ARGS=("$@") && break
# elif [ -f "$arg" ]; then
# FINDINSTALLAPP_CWD="$(dirname "$arg" 2>/dev/null)" && shift 1 && SET_NEW_ARGS=("$@") && break
# else
# SET_NEW_ARGS+=("$arg")
# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && FINDINSTALLAPP_CWD="$1" && shift 1 || FINDINSTALLAPP_CWD="${FINDINSTALLAPP_CWD:-$PWD}"
FINDINSTALLAPP_CWD="$(realpath "${FINDINSTALLAPP_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$FINDINSTALLAPP_CWD" ] && cd "$FINDINSTALLAPP_CWD"; then
# if [ "$FINDINSTALLAPP_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $FINDINSTALLAPP_CWD"
# fi
# else
# printf_exit "ðŸ’” $FINDINSTALLAPP_CWD does not exist ðŸ’”"
# fi
export FINDINSTALLAPP_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
__sudoif || printf_exit "$APPNAME requires root privileges"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
[ $# -ne 0 ] || __help
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Export variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
if [ -n "$DISPLAY" ] && [ -z "$SSH_TTY" ]; then
  if __run "$@" | zenity --progress --no-cancel --pulsate --auto-close --title="Attempting install" --text="Trying to install $*" --height=200 --width=400; then exitCode=0; else exitCode=1; fi
else
  if __run "$@"; then exitCode=0; else exitCode=1; fi
fi
if [ "$exitCode" = 0 ]; then
  if [ -n "$DISPLAY" ] && [ -z "$SSH_TTY" ]; then
    zenity --timeout=10 --height=200 --width=400 --info --title="Install successful" --text="Successfully installed $*"
  else
    printf_green "Successfully installed $*"
  fi
  exitCode=0
else
  if [ -n "$DISPLAY" ] && [ -z "$SSH_TTY" ]; then
    zenity --timeout=10 --height=200 --width=400 --error --title="Install unsuccessful" --text="Failed to install $*"
  else
    printf_error "Failed to install $*"
  fi
  exitCode=1
fi
FINDINSTALLAPP_EXIT_STATUS=$exitCode
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
FINDINSTALLAPP_EXIT_STATUS="${FINDINSTALLAPP_EXIT_STATUS:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${FINDINSTALLAPP_EXIT_STATUS:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
