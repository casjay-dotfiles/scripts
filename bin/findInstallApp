user_install && __options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && FINDINSTALLAPP_EXIT_STATUS=0 || FINDINSTALLAPP_EXIT_STATUS=1
  return ${FINDINSTALLAPP_EXIT_STATUS:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && FINDINSTALLAPP_EXIT_STATUS=0 || FINDINSTALLAPP_EXIT_STATUS=1
  return ${FINDINSTALLAPP_EXIT_STATUS:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  FINDINSTALLAPP_EXIT_STATUS=0
  [ -n "$1" ] && local FINDINSTALLAPP_EXIT_STATUS="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && FINDINSTALLAPP_EXIT_STATUS+=$(($FINDINSTALLAPP_EXIT_STATUS + 0)) || FINDINSTALLAPP_EXIT_STATUS+=$(($FINDINSTALLAPP_EXIT_STATUS + 1))
  done
  [ $FINDINSTALLAPP_EXIT_STATUS -eq 0 ] || FINDINSTALLAPP_EXIT_STATUS=3
  return ${FINDINSTALLAPP_EXIT_STATUS:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local FINDINSTALLAPP_EXIT_STATUS=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || FINDINSTALLAPP_EXIT_STATUS=4
  return ${FINDINSTALLAPP_EXIT_STATUS:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE"
  fi
  [ -d "$FINDINSTALLAPP_CONFIG_DIR" ] || mkdir -p "$FINDINSTALLAPP_CONFIG_DIR"
  [ -d "$FINDINSTALLAPP_CONFIG_BACKUP_DIR" ] || mkdir -p "$FINDINSTALLAPP_CONFIG_BACKUP_DIR"
  [ -f "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE" ] &&
    cp -Rf "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE" "$FINDINSTALLAPP_CONFIG_BACKUP_DIR/$FINDINSTALLAPP_CONFIG_FILE.$$"
  cat <<EOF >"$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE"
# Settings for findInstallApp

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
FINDINSTALLAPP_OUTPUT_COLOR_1="${FINDINSTALLAPP_OUTPUT_COLOR_1:-}"
FINDINSTALLAPP_OUTPUT_COLOR_2="${FINDINSTALLAPP_OUTPUT_COLOR_2:-}"
FINDINSTALLAPP_OUTPUT_COLOR_GOOD="${FINDINSTALLAPP_OUTPUT_COLOR_GOOD:-}"
FINDINSTALLAPP_OUTPUT_COLOR_ERROR="${FINDINSTALLAPP_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
FINDINSTALLAPP_NOTIFY_ENABLED="${FINDINSTALLAPP_NOTIFY_ENABLED:-}"
FINDINSTALLAPP_GOOD_NAME="${FINDINSTALLAPP_GOOD_NAME:-}"
FINDINSTALLAPP_ERROR_NAME="${FINDINSTALLAPP_ERROR_NAME:-}"
FINDINSTALLAPP_GOOD_MESSAGE="${FINDINSTALLAPP_GOOD_MESSAGE:-}"
FINDINSTALLAPP_ERROR_MESSAGE="${FINDINSTALLAPP_ERROR_MESSAGE:-}"
FINDINSTALLAPP_NOTIFY_CLIENT_NAME="${FINDINSTALLAPP_NOTIFY_CLIENT_NAME:-}"
FINDINSTALLAPP_NOTIFY_CLIENT_ICON="${FINDINSTALLAPP_NOTIFY_CLIENT_ICON:-}"
FINDINSTALLAPP_NOTIFY_CLIENT_URGENCY="${FINDINSTALLAPP_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$FINDINSTALLAPP_CONFIG_DIR/$FINDINSTALLAPP_CONFIG_FILE"
    FINDINSTALLAPP_EXIT_STATUS=0
  else
    printf_red "Failed to create the config file"
    FINDINSTALLAPP_EXIT_STATUS=1
  fi
  return ${FINDINSTALLAPP_EXIT_STATUS:-$?}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "findInstallApp:  Try to find and install the application - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: findInstallApp [options] [commands]"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__grep() { grep "$@" 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$FINDINSTALLAPP_REQUIRE_SUDO" = "yes" ] && [ -z "$FINDINSTALLAPP_REQUIRE_SUDO_RUN" ]; then
    export FINDINSTALLAPP_REQUIRE_SUDO="no"
    export FINDINSTALLAPP_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    FINDINSTALLAPP_EXIT_STATUS=$?
  else
    printf '%s\n' "This requires root to run"
    FINDINSTALLAPP_EXIT_STATUS=1
  fi
  return ${FINDINSTALLAPP_EXIT_STATUS:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  FINDINSTALLAPP_EXIT_STATUS=${FINDINSTALLAPP_EXIT_STATUS:-$?}
  [ -f "$FINDINSTALLAPP_TEMP_FILE" ] && rm -Rf "$FINDINSTALLAPP_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $FINDINSTALLAPP_EXIT_STATUS
}
# Additional functions
__dfmgr() { dfmgr "$*" &>/dev/null && return 0 || return 1; }
__pkmgr() { pkmgr "$*" &>/dev/null && return 0 || return 1; }
__systemmgr() { sudo systemmgr "$*" &>/dev/null && return 0 || return 1; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__message() {
  local mgr="$1" && shift 1
  local arg="$*" && shift $#
  if [ -z "$DISPLAY" ] || [ -n "$SSH_TTY" ]; then
    printf_green "Trying to find $arg via $mgr"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
run_requires() {
  local ARGS="$*"
  local exitCode=0
  for cmd in $ARGS; do
    __cmd_exists "$cmd " || local CMD+="$cmd "
  done
  if [ -n "$CMD" ]; then __require_app "$CMD" && exitCode=0 || exitCode=1; fi
  [ $exitCode -eq 0 ] && return 0 || exit 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
run_pkmgr_findInstallApp() {
  __cmd_exists pkmgr || return 1
  local exitCode=0
  local pkg LISTARRAY
  declare -a LISTARRAY=("$@")
  __message "pkmgr" "${LISTARRAY[*]}"
  for pkg in "${LISTARRAY[@]}"; do
    __cmd_exists "$pkg" || __pkmgr install "$pkg"
    exitCode+=$(($? + exitCode))
  done
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
run_dfmgr_findInstallApp() {
  __cmd_exists dfmgr || return 1
  local exitCode=0
  local pkg LISTARRAY
  declare -a LISTARRAY=("$@")
  __message "dfmgr" "${LISTARRAY[*]}"
  for pkg in "${LISTARRAY[@]}"; do
    __cmd_exists "$pkg" || __dfmgr install "$pkg"
    exitCode+=$(($? + exitCode))
  done
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
run_systemmgr_findInstallApp() {
  __cmd_exists systemmgr || return 1
  local exitCode=0
  local pkg LISTARRAY
  declare -a LISTARRAY=("$@")
  __message "systemmgr" "${LISTARRAY[*]}"
  for pkg in "${LISTARRAY[@]}"; do
    __cmd_exists "$pkg" || __systemmgr install "$pkg"
    exitCode+=$(($? + exitCode))
  done
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
run_npm_findInstallApp() {
  __cmd_exists npm || return 1
  local exitCode=0
  local pkg LISTARRAY
  declare -a LISTARRAY=("$@")
  __message "npm" "${LISTARRAY[*]}"
  for pkg in "${LISTARRAY[@]}"; do
    __cmd_exists "$pkg" || __pkmgr npm install "$pkg"
    exitCode+=$(($? + exitCode))
  done
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__run() {
  if __am_i_online && [ $# -ne 0 ]; then
    run_pkmgr_findInstallApp "$@" || run_dfmgr_findInstallApp "$@" ||
      run_systemmgr_findInstallApp "$@" || run_npm_findInstallApp "$@"
    exitCode=$?
  else
    sleep 3
    exitCode=1
  fi
  return=$exitCode
}
