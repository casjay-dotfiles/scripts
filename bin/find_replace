# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && FIND_REPLACE_EXIT_STATUS=0 || FIND_REPLACE_EXIT_STATUS=1
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && FIND_REPLACE_EXIT_STATUS=0 || FIND_REPLACE_EXIT_STATUS=1
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  FIND_REPLACE_EXIT_STATUS=0
  [ -n "$1" ] && local FIND_REPLACE_EXIT_STATUS="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && FIND_REPLACE_EXIT_STATUS+=$(($FIND_REPLACE_EXIT_STATUS + 0)) || FIND_REPLACE_EXIT_STATUS+=$(($FIND_REPLACE_EXIT_STATUS + 1))
  done
  [ $FIND_REPLACE_EXIT_STATUS -eq 0 ] || FIND_REPLACE_EXIT_STATUS=3
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local FIND_REPLACE_EXIT_STATUS=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || FIND_REPLACE_EXIT_STATUS=4
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE"
  fi
  [ -d "$FIND_REPLACE_CONFIG_DIR" ] || mkdir -p "$FIND_REPLACE_CONFIG_DIR"
  [ -d "$FIND_REPLACE_CONFIG_BACKUP_DIR" ] || mkdir -p "$FIND_REPLACE_CONFIG_BACKUP_DIR"
  [ -f "$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE" ] &&
    cp -Rf "$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE" "$FIND_REPLACE_CONFIG_BACKUP_DIR/$FIND_REPLACE_CONFIG_FILE.$$"
  cat <<EOF >"$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE"
# Settings for find_replace

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
FIND_REPLACE_OUTPUT_COLOR_1="${FIND_REPLACE_OUTPUT_COLOR_1:-}"
FIND_REPLACE_OUTPUT_COLOR_2="${FIND_REPLACE_OUTPUT_COLOR_2:-}"
FIND_REPLACE_OUTPUT_COLOR_GOOD="${FIND_REPLACE_OUTPUT_COLOR_GOOD:-}"
FIND_REPLACE_OUTPUT_COLOR_ERROR="${FIND_REPLACE_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
FIND_REPLACE_NOTIFY_ENABLED="${FIND_REPLACE_NOTIFY_ENABLED:-}"
FIND_REPLACE_GOOD_NAME="${FIND_REPLACE_GOOD_NAME:-}"
FIND_REPLACE_ERROR_NAME="${FIND_REPLACE_ERROR_NAME:-}"
FIND_REPLACE_GOOD_MESSAGE="${FIND_REPLACE_GOOD_MESSAGE:-}"
FIND_REPLACE_ERROR_MESSAGE="${FIND_REPLACE_ERROR_MESSAGE:-}"
FIND_REPLACE_NOTIFY_CLIENT_NAME="${FIND_REPLACE_NOTIFY_CLIENT_NAME:-}"
FIND_REPLACE_NOTIFY_CLIENT_ICON="${FIND_REPLACE_NOTIFY_CLIENT_ICON:-}"
FIND_REPLACE_NOTIFY_CLIENT_URGENCY="${FIND_REPLACE_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$FIND_REPLACE_CONFIG_DIR/$FIND_REPLACE_CONFIG_FILE"
    FIND_REPLACE_EXIT_STATUS=0
  else
    printf_red "Failed to create the config file"
    FIND_REPLACE_EXIT_STATUS=1
  fi
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "find_replace:  - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: find_replace [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__grep() { grep "$@" 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$FIND_REPLACE_REQUIRE_SUDO" = "yes" ] && [ -z "$FIND_REPLACE_REQUIRE_SUDO_RUN" ]; then
    export FIND_REPLACE_REQUIRE_SUDO="no"
    export FIND_REPLACE_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    FIND_REPLACE_EXIT_STATUS=$?
  else
    printf '%s\n' "This requires root to run"
    FIND_REPLACE_EXIT_STATUS=1
  fi
  return ${FIND_REPLACE_EXIT_STATUS:-0}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__how_long_did_it_take() {
  local retprev=$?
  local retval=${1:-$retprev}
  __cmd_exists bc || return $retval
  local stop_time="$(date +%s.%N)"
  local dt=$(echo "$stop_time - $FIND_REPLACE_START_TIMER" | bc)
  local dd=$(echo "$dt/86400" | bc)
  local dt2=$(echo "$dt-86400*$dd" | bc)
  local dh=$(echo "$dt2/3600" | bc)
  local dt3=$(echo "$dt2-3600*$dh" | bc)
  local dm=$(echo "$dt3/60" | bc)
  local ds=$(echo "$dt3-60*$dm" | bc)
  printf_purple "$(LC_NUMERIC=C printf "Total runtime: %d Days, %02d Hours, %02d Minutes, %02.4f Seconds\n" $dd $dh $dm $ds)"
  return $retval
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  FIND_REPLACE_EXIT_STATUS=${FIND_REPLACE_EXIT_STATUS:-0}
  [ -f "$FIND_REPLACE_TEMP_FILE" ] && rm -Rf "$FIND_REPLACE_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD//$HOME/\~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $FIND_REPLACE_EXIT_STATUS
}
