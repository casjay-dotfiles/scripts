# [ -d "$1" ] && __is_an_option "$1" && FINDMYDEVICES_CWD="$1" && shift 1 || FINDMYDEVICES_CWD="${FINDMYDEVICES_CWD:-$PWD}"
FINDMYDEVICES_CWD="$(realpath "${FINDMYDEVICES_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$FINDMYDEVICES_CWD" ] && cd "$FINDMYDEVICES_CWD"; then
