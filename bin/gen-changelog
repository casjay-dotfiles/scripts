  --categorize)
    shift 1
    GEN_CHANGELOG_CATEGORIZE="true"
    ;;
  --conventional)
    shift 1
    GEN_CHANGELOG_CONVENTIONAL="true"
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
