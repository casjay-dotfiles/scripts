# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
[ -d "$1" ] && __is_an_option "$1" && GEN_GITATTR_CWD="$1" && shift 1 || GEN_GITATTR_CWD="${GEN_GITATTR_CWD:-$PWD}"
GEN_GITATTR_CWD="$(realpath "${GEN_GITATTR_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$GEN_GITATTR_CWD" ] && cd "$GEN_GITATTR_CWD"; then
# if [ "$GEN_GITATTR_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $GEN_GITATTR_CWD"
# fi
# else
# printf_exit "ðŸ’” $GEN_GITATTR_CWD does not exist ðŸ’”"
# fi
export GEN_GITATTR_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
__template_check || __create_files

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Export variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
create | update)
  shift 1
  __create_files
  ;;
list)
  shift 1
  __list_files
  exit $?
  ;;
default)
  shift 1
  [ -d "$GEN_GITATTR_CWD/.git" ] || printf_yellow "$GEN_GITATTR_CWD is not a git repo. Saving anyway"
  __gitattributes_show "default" >"$GEN_GITATTR_CWD/.gitattributes"
  exit $?
  ;;
save)
  shift 1
  [ -d "$GEN_GITATTR_CWD/.git" ] || printf_yellow "$GEN_GITATTR_CWD is not a git repo. Saving anyway"
  printf_green "Saving ${*:-default lfs} to $GEN_GITATTR_CWD/.gitattributes"
  __gitattributes_show "${*:-default lfs}" >"$GEN_GITATTR_CWD/.gitattributes"
  exit $?
  ;;
print)
  shift 1
  __gitattributes_show "${*:-default lfs}"
  ;;
*)
  __gitattributes_show "${*:-default lfs}"
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
GEN_GITATTR_EXIT_STATUS="${GEN_GITATTR_EXIT_STATUS:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${GEN_GITATTR_EXIT_STATUS:-0}
