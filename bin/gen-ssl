# - - - - - - - - - - - - - - - - - - - - - - - - -
__letsencrypt_create() {
  local le_domain=""
  local domains="${GEN_SSL_DOMAINS:-$*}"
  local set_le_domains="${domains//,/ }"
  __certbot_bin
  for domain in $set_le_domains; do
    le_domain+="-d $domain "
    [ -z "$GEN_SSL_DNS" ] || le_domain+="-d *.$domain "
  done
  printf_exit "Coming Soon!"
}
