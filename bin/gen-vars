# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
  GEN_VARS_ENV="$(cat - | grep '=')"
elif [ -f "$1" ]; then
  GEN_VARS_ENV="$(cat "$@" | grep '=' | awk -F '=' '{print $1}')"
elif [ -n "$1" ]; then
  GEN_VARS_ENV="$(printf '%b\n' "${@:-}")"
else
  printf_exit "Usage: $APPNAME [file/varName]"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Export variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
printf '%s\n' "# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
printf '%b\n' $"$GEN_VARS_ENV" | sed 's/^[ \t]*//;s|=.*||g' | grep -vE '#|^$| |[+]' | while read -r line; do
  for l in $line; do
    e="$l"
    n="$(basename -- "$e")"
    f="$(echo "$n" | __tr_default)"
    if [ -n "$n" ] && [ -n "$f" ]; then
      if [ -n "$GEN_VARS_PREFIX" ]; then
        printf_yellow ''${GEN_VARS_PREFIX}_${f}''='"\${'ENV_${f}':-$'${f}'}"'
      elif [ -n "$GEN_VARS_SUFFIX" ]; then
        printf_yellow ''${f}_${GEN_VARS_SUFFIX}''='"\${'ENV_${f}':-$'${f}'}"'
      else
        printf_yellow ''${f}''='"\${'ENV_${f}':-$'${f}'}"'
      fi
    fi
  done
done
GEN_VARS_EXIT_STATUS=$?
printf '%s\n' "# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
GEN_VARS_EXIT_STATUS="${GEN_VARS_EXIT_STATUS:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${GEN_VARS_EXIT_STATUS:-0}
