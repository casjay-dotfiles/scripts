# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && GEN_VARS_CWD="$1" && shift 1 || GEN_VARS_CWD="${GEN_VARS_CWD:-$PWD}"
GEN_VARS_CWD="$(realpath "${GEN_VARS_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$GEN_VARS_CWD" ] && cd "$GEN_VARS_CWD"; then
# if [ "$GEN_VARS_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
