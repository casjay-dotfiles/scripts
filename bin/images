# [ -d "$1" ] && __is_an_option "$1" && IMAGES_CWD="$1" && shift 1 || IMAGES_CWD="${IMAGES_CWD:-$PWD}"
IMAGES_CWD="$(realpath "${IMAGES_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$IMAGES_CWD" ] && cd "$IMAGES_CWD"; then
