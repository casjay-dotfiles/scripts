# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && LASTFM_EXIT_STATUS=0 || LASTFM_EXIT_STATUS=1
  return ${LASTFM_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && LASTFM_EXIT_STATUS=0 || LASTFM_EXIT_STATUS=1
  return ${LASTFM_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  LASTFM_EXIT_STATUS=0
  [ -n "$1" ] && local LASTFM_EXIT_STATUS="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && LASTFM_EXIT_STATUS+=$(($LASTFM_EXIT_STATUS + 0)) || LASTFM_EXIT_STATUS+=$(($LASTFM_EXIT_STATUS + 1))
  done
  [ $LASTFM_EXIT_STATUS -eq 0 ] || LASTFM_EXIT_STATUS=3
  return ${LASTFM_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local LASTFM_EXIT_STATUS=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || LASTFM_EXIT_STATUS=4
  return ${LASTFM_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE"
  fi
  [ -d "$LASTFM_CONFIG_DIR" ] || mkdir -p "$LASTFM_CONFIG_DIR"
  [ -d "$LASTFM_CONFIG_BACKUP_DIR" ] || mkdir -p "$LASTFM_CONFIG_BACKUP_DIR"
  [ -f "$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE" ] &&
    cp -Rf "$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE" "$LASTFM_CONFIG_BACKUP_DIR/$LASTFM_CONFIG_FILE.$$"
  cat <<EOF >"$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE"
# Settings for lastfm
LASTFM_USER="${LASTFM_USER:-}"
LASTFM_API_KEY="${LASTFM_API_KEY:-}"
LASTFM_SAVE_DIR="${LASTFM_SAVE_DIR:-}"
LASTFM_SAVE_FILE="${LASTFM_SAVE_FILE:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
LASTFM_OUTPUT_COLOR_1="${LASTFM_OUTPUT_COLOR_1:-}"
LASTFM_OUTPUT_COLOR_2="${LASTFM_OUTPUT_COLOR_2:-}"
LASTFM_OUTPUT_COLOR_GOOD="${LASTFM_OUTPUT_COLOR_GOOD:-}"
LASTFM_OUTPUT_COLOR_ERROR="${LASTFM_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
LASTFM_SYSTEM_NOTIFY_ENABLED="${LASTFM_SYSTEM_NOTIFY_ENABLED:-}"
LASTFM_GOOD_NAME="${LASTFM_GOOD_NAME:-}"
LASTFM_ERROR_NAME="${LASTFM_ERROR_NAME:-}"
LASTFM_GOOD_MESSAGE="${LASTFM_GOOD_MESSAGE:-}"
LASTFM_ERROR_MESSAGE="${LASTFM_ERROR_MESSAGE:-}"
LASTFM_NOTIFY_CLIENT_NAME="${LASTFM_NOTIFY_CLIENT_NAME:-}"
LASTFM_NOTIFY_CLIENT_ICON="${LASTFM_NOTIFY_CLIENT_ICON:-}"
LASTFM_NOTIFY_CLIENT_URGENCY="${LASTFM_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$LASTFM_CONFIG_DIR/$LASTFM_CONFIG_FILE"
    LASTFM_EXIT_STATUS=0
  else
    printf_red "Failed to create the config file"
    LASTFM_EXIT_STATUS=1
  fi
  return ${LASTFM_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "lastfm:  - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: lastfm [options] [commands]"
  __printf_line "--key                           - Sets the Last.fm API key"
  __printf_line "--user                          - Sets the Last.fm username"
  __printf_line "--dir                           - Sets the history directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_line "--no                            - No options"
  __printf_line "--yes                           - Yes options"
  __printf_line ""
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__grep() { grep "$@" 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$LASTFM_REQUIRE_SUDO" = "yes" ] && [ -z "$LASTFM_REQUIRE_SUDO_RUN" ]; then
    export LASTFM_REQUIRE_SUDO="no"
    export LASTFM_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    LASTFM_EXIT_STATUS=$?
  else
    printf '%s\n' "This requires root to run"
    LASTFM_EXIT_STATUS=1
  fi
  return ${LASTFM_EXIT_STATUS:-0}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__how_long_did_it_take() {
  local retprev=$?
  local retval=${1:-$retprev}
  __cmd_exists bc || return $retval
  [ -n "$LASTFM_START_TIMER" ] || return 0
  local stop_time="$(date +%s.%N)"
  local dt=$(echo "$stop_time - $LASTFM_START_TIMER" | bc)
  local dd=$(echo "$dt/86400" | bc)
  local dt2=$(echo "$dt-86400*$dd" | bc)
  local dh=$(echo "$dt2/3600" | bc)
  local dt3=$(echo "$dt2-3600*$dh" | bc)
  local dm=$(echo "$dt3/60" | bc)
  local ds=$(echo "$dt3-60*$dm" | bc)
  printf_purple "$(LC_NUMERIC=C printf "Total runtime: %d Days, %02d Hours, %02d Minutes, %02.4f Seconds\n" $dd $dh $dm $ds)"
  return $retval
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit_lastfm() {
  LASTFM_EXIT_STATUS=${LASTFM_EXIT_STATUS:-0}
  [ -f "$LASTFM_TEMP_FILE" ] && rm -Rf "$LASTFM_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $LASTFM_EXIT_STATUS
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Create a --no-* options function
__options_function_no() {
  local options="${1//=*/}"
  local argument="${1//*=/}"
  case "$options" in
  *) echo "${argument:-No argument provided}" && shift ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Create a --yes-* options function
__options_function_yes() {
  local options="${1//=*/}"
  local argument="${1//*=/}"
  case "$options" in
  *) echo "${argument:-No argument provided}" && shift ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$LASTFM_SYSTEM_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$LASTFM_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$LASTFM_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$LASTFM_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$LASTFM_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$LASTFM_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__notify_remote() {
  local cmd="$(echo "$LASTFM_REMOTE_NOTIFY_COMMAND" | awk -F ' ' '{print $1}')"
  if [ "$LASTFM_REMOTE_NOTIFY_ENABLED" = "yes" ]; then
    if [ -n "$(command -v "$cmd")" ]; then
      eval $LASTFM_REMOTE_NOTIFY_COMMAND "$@"
    fi
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__jq() { jq "$@" 2>/dev/null; }
__curl() { curl -q -LSsf "$@" 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__main() {
  # The name of the output CSV file.
  OUTPUT_FILE="$LASTFM_SAVE_FILE"
  # The Last.fm API endpoint for recent tracks.
  API_URL="http://ws.audioscrobbler.com/2.0/?method=user.getrecenttracks&user=${LASTFM_USER}&api_key=${LASTFM_API_KEY}&format=json&page="
  # Function to display an error message and exit.
  if [ -z "$LASTFM_USER" ] || [ -z "$LASTFM_API_KEY" ]; then
    printf_red "Usage: $APPNAME lastfm_username lastfm_api_key"
    return 1
  fi
  [ -d "$LASTFM_SAVE_DIR" ] || mkdir -p "$LASTFM_SAVE_DIR"
  # Write the CSV header.
  printf '%s\n' "artist,album,track,date" >"$OUTPUT_FILE"
  # Get the total number of pages.
  total_pages=$(__curl "${API_URL}1" | __jq -r '.recenttracks["@attr"].totalPages')
  # Check if the API call was successful.
  if [ -z "$total_pages" ] || [ "$total_pages" = "null" ]; then
    printf_red "Could not retrieve data from Last.fm. Check your username and API key."
    return 1
  fi
  printf_cyan "Found $total_pages pages of listening history. This may take a while..."
  # Loop through each page of results.
  current_page=1
  while [ "$current_page" -le "$total_pages" ]; do
    printf '\r%b%s%b' "$BLUE" "Fetching page $current_page of $total_pages... " "$RESET"
    # Make the API call and extract the track data.
    # The jq filter selects tracks that have a date (i.e., are not "now playing")
    # and formats the artist, album, name, and UTS date into a CSV row.
    __curl "${API_URL}${current_page}" | __jq -r '.recenttracks.track[] | select(.date) | [.artist."#text", .album."#text", .name, .date.uts] | @csv' >>"$OUTPUT_FILE"
    # Increment the page number.
    current_page=$((current_page + 1))
  done
  printf '\r                                                                                                               \n'
  printf_green "Done! Your Last.fm listening history has been saved to $OUTPUT_FILE."
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
