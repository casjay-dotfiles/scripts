#!/usr/bin/env bash
# shellcheck shell=bash
# - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version           :  202601011727-git
# @@Author           :  Jason Hempstead
# @@Contact          :  jason@casjaysdev.pro
# @@License          :  WTFPL
# @@ReadME           :  latest-iso --help
# @@Copyright        :  Copyright: (c) 2022 Jason Hempstead, Casjays Developments
# @@Created          :  Friday, Aug 12, 2022 15:05 EDT
# @@File             :  latest-iso
# @@Description      :  Find and download the latest ISO for a given distro
# @@Changelog        :  ISO-only extraction, removes .img file support
# @@TODO             :  Refactor code
# @@Other            :
# @@Resource         :
# @@Terminal App     :  no
# @@sudo/root        :  no
# @@Template         :  bash/system
# - - - - - - - - - - - - - - - - - - - - - - - - -
# shellcheck disable=SC1001,SC1003,SC2001,SC2003,SC2016,SC2031,SC2090,SC2115,SC2120,SC2155,SC2199,SC2229,SC2317,SC2329
# - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename -- "$0" 2>/dev/null)"
VERSION="202601011727-git"
USER="${SUDO_USER:-$USER}"
RUN_USER="${RUN_USER:-$USER}"
USER_HOME="${USER_HOME:-$HOME}"
SCRIPT_SRC_DIR="${BASH_SOURCE%/*}"
LATEST_ISO_REQUIRE_SUDO="${LATEST_ISO_REQUIRE_SUDO:-no}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Reopen in a terminal
#if [ ! -t 0 ] && { [ "$1" = --term ] || [ $# = 0 ]; }; then { [ "$1" = --term ] && shift 1 || true; } && TERMINAL_APP="TRUE" myterminal -e "$APPNAME $*" && exit || exit 1; fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set script title
#CASJAYS_DEV_TILE_FORMAT="${USER}@${HOSTNAME}:${PWD/#$HOME/~} - $APPNAME"
#CASJAYSDEV_TITLE_PREV="${CASJAYSDEV_TITLE_PREV:-${CASJAYSDEV_TITLE_SET:-$APPNAME}}"
#[ -z "$CASJAYSDEV_TITLE_SET" ] && printf '\033]0;%s\007' "$CASJAYS_DEV_TILE_FORMAT" && CASJAYSDEV_TITLE_SET="$APPNAME"
export CASJAYSDEV_TITLE_PREV="${CASJAYSDEV_TITLE_PREV:-${CASJAYSDEV_TITLE_SET:-$APPNAME}}" CASJAYSDEV_TITLE_SET
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Initial debugging
[ "$1" = "--debug" ] && set -x && export SCRIPT_OPTS="--debug" && export _DEBUG="on"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Disables colorization
[ "$1" = "--raw" ] && export SHOW_RAW="true"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# pipes fail
set -o pipefail
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional command check
cmd_exists() { builtin command -v "$1" &>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  local exitCode=0
  [ -n "$1" ] || return 0
  for cmd in "$@"; do
    if builtin command -v "$cmd" &>/dev/null; then
      exitCode=$((exitCode + 0))
    else
      exitCode=$((exitCode + 1))
    fi
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  __curl -sI "${1:-1.1.1.1}" &>/dev/null && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | __sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Printf wrapper functions (self-contained)
printf_newline() { printf '\n'; }
printf_blue() { printf_color "$1\n" "4"; }
printf_red() { printf_color "$1\n" "1"; }
printf_green() { printf_color "$1\n" "2"; }
printf_cyan() { printf_color "$1\n" "6"; }
printf_yellow() { printf_color "$1\n" "3"; }
printf_purple() { printf_color "$1\n" "5"; }
printf_error() { printf_red "ERROR: $1"; }
printf_exit() { printf_red "$1"; exit "${2:-1}"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | __sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE"
  fi
  [ -d "$LATEST_ISO_CONFIG_DIR" ] || mkdir -p "$LATEST_ISO_CONFIG_DIR"
  [ -d "$LATEST_ISO_CONFIG_BACKUP_DIR" ] || mkdir -p "$LATEST_ISO_CONFIG_BACKUP_DIR"
  [ -f "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE" ] &&
    cp -Rf "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE" "$LATEST_ISO_CONFIG_BACKUP_DIR/$LATEST_ISO_CONFIG_FILE.$$"
  cat <<EOF >"$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE"
# Settings for latest-iso
LATEST_ISO_DOWNLOAD_DIR="${LATEST_ISO_DOWNLOAD_DIR:-}"
LATEST_ISO_DOWNLOAD_LIVE_DIR="${LATEST_ISO_DOWNLOAD_LIVE_DIR:-}"
LATEST_ISO_DOWNLOAD_UTILS_DIR="${LATEST_ISO_DOWNLOAD_UTILS_DIR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# URLs to ISOs
LATEST_ISO_ALMA_URL="${LATEST_ISO_ALMA_URL:-}"
LATEST_ISO_ALPINE_URL="${LATEST_ISO_ALPINE_URL:-}"
LATEST_ISO_ARCHLINUX_URL="${LATEST_ISO_ARCHLINUX_URL:-}"
LATEST_ISO_ARCHCRAFT_URL="${LATEST_ISO_ARCHCRAFT_URL:-}"
LATEST_ISO_ARCOLINUX_URL="${LATEST_ISO_ARCOLINUX_URL:-}"
LATEST_ISO_CACHYOS_URL="${LATEST_ISO_CACHYOS_URL:-}"
LATEST_ISO_BLACKARCH_URL="${LATEST_ISO_BLACKARCH_URL:-}"
LATEST_ISO_CENTOS_URL="${LATEST_ISO_CENTOS_URL:-}"
LATEST_ISO_DEBIAN_URL="${LATEST_ISO_DEBIAN_URL:-}"
LATEST_ISO_ENDEAVOUR_URL="${LATEST_ISO_ENDEAVOUR_URL:-}"
LATEST_ISO_FEDORA_URL="${LATEST_ISO_FEDORA_URL:-}"
LATEST_ISO_FLATCAR_URL="${LATEST_ISO_FLATCAR_URL:-}"
LATEST_ISO_FREENAS_URL="${LATEST_ISO_FREENAS_URL:-}"
LATEST_ISO_GARUDA_URL="${LATEST_ISO_GARUDA_URL:-}"
LATEST_ISO_HEADS_URL="${LATEST_ISO_HEADS_URL:-}"
LATEST_ISO_KALI_URL="${LATEST_ISO_KALI_URL:-}"
LATEST_ISO_OPENSUSE_URL="${LATEST_ISO_OPENSUSE_URL:-}"
LATEST_ISO_OPENVZ_URL="${LATEST_ISO_OPENVZ_URL:-}"
LATEST_ISO_PARROT_URL="${LATEST_ISO_PARROT_URL:-}"
LATEST_ISO_PEPPERMINT_URL="${LATEST_ISO_PEPPERMINT_URL:-}"
LATEST_ISO_PFSENSE_URL="${LATEST_ISO_PFSENSE_URL:-}"
LATEST_ISO_PHOTON_URL="${LATEST_ISO_PHOTON_URL:-}"
LATEST_ISO_PROXMOX_URL="${LATEST_ISO_PROXMOX_URL:-}"
LATEST_ISO_REDCORE_URL="${LATEST_ISO_REDCORE_URL:-}"
LATEST_ISO_ROCKY_URL="${LATEST_ISO_ROCKY_URL:-}"
LATEST_ISO_UBUNTU_URL="${LATEST_ISO_UBUNTU_URL:-}"
LATEST_ISO_VOID_URL="${LATEST_ISO_VOID_URL:-}"
LATEST_ISO_TAILS_URL="${LATEST_ISO_TAILS_URL:-}"
LATEST_ISO_TINYCORE_URL="${LATEST_ISO_TINYCORE_URL:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
LATEST_ISO_ALMA_RELEASE="${LATEST_ISO_ALMA_RELEASE:-}"
LATEST_ISO_ROCKY_RELEASE="${LATEST_ISO_ROCKY_RELEASE:-}"
LATEST_ISO_CENTOS_RELEASE="${LATEST_ISO_CENTOS_RELEASE:-}"
LATEST_ISO_ALPINE_RELEASE="${LATEST_ISO_ALPINE_RELEASE:-}"
LATEST_ISO_ENDEAVOUR_RELEASE="${LATEST_ISO_ENDEAVOUR_RELEASE:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
LATEST_ISO_VOID_FLAVOR="${LATEST_ISO_VOID_FLAVOR:-xfce}"
LATEST_ISO_KALI_FLAVOR="${LATEST_ISO_KALI_FLAVOR:-live}"
LATEST_ISO_RHEL_FLAVOR="${LATEST_ISO_RHEL_FLAVOR:-minimal}"
LATEST_ISO_ALMA_FLAVOR="${LATEST_ISO_ALMA_FLAVOR:-minimal}"
LATEST_ISO_FEDORA_FLAVOR="${LATEST_ISO_FEDORA_FLAVOR:-xfce}"
LATEST_ISO_GARUDA_FLAVOR="${LATEST_ISO_GARUDA_FLAVOR:-xfce}"
LATEST_ISO_ROCKY_FLAVOR="${LATEST_ISO_ROCKY_FLAVOR:-minimal}"
LATEST_ISO_MANJARO_FLAVOR="${LATEST_ISO_MANJARO_FLAVOR:-xfce}"
LATEST_ISO_PARROT_FLAVOR="${LATEST_ISO_PARROT_FLAVOR:-security}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
LATEST_ISO_OUTPUT_COLOR_1="${LATEST_ISO_OUTPUT_COLOR_1:-}"
LATEST_ISO_OUTPUT_COLOR_2="${LATEST_ISO_OUTPUT_COLOR_2:-}"
LATEST_ISO_OUTPUT_COLOR_GOOD="${LATEST_ISO_OUTPUT_COLOR_GOOD:-}"
LATEST_ISO_OUTPUT_COLOR_ERROR="${LATEST_ISO_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
LATEST_ISO_NOTIFY_ENABLED="${LATEST_ISO_NOTIFY_ENABLED:-}"
LATEST_ISO_GOOD_NAME="${LATEST_ISO_GOOD_NAME:-}"
LATEST_ISO_ERROR_NAME="${LATEST_ISO_ERROR_NAME:-}"
LATEST_ISO_GOOD_MESSAGE="${LATEST_ISO_GOOD_MESSAGE:-}"
LATEST_ISO_ERROR_MESSAGE="${LATEST_ISO_ERROR_MESSAGE:-}"
LATEST_ISO_NOTIFY_CLIENT_NAME="${LATEST_ISO_NOTIFY_CLIENT_NAME:-}"
LATEST_ISO_NOTIFY_CLIENT_ICON="${LATEST_ISO_NOTIFY_CLIENT_ICON:-}"
LATEST_ISO_NOTIFY_CLIENT_URGENCY="${LATEST_ISO_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "latest-iso:  Find and download the latest ISO for a given distro - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: latest-iso [options] [commands]"
  __printf_line "iso [url] [name.iso]            - Set custom iso url and iso name"
  __printf_line "alma                            - Download almalinux"
  __printf_line "alpine                          - Download alpinelinux"
  __printf_line "aeryn                           - Download aerynos (serpent)"
  __printf_line "arch                            - Download archlinux"
  __printf_line "archcraft                       - Download archcraft"
  __printf_line "arco                            - Download arcolinux"
  __printf_line "bazzite                         - Download bazzite"
  __printf_line "blackarch                       - Download blackarch"
  __printf_line "cachy                           - Download cachylinux"
  __printf_line "centos                          - Download centos"
  __printf_line "chimera                         - Download chimera"
  __printf_line "clear                           - Clear Linux (DISCONTINUED)"
  __printf_line "debian                          - Download debian"
  __printf_line "endeavour                       - Download endeavour"
  __printf_line "fedora                          - Download fedora"
  __printf_line "flatcar                         - Download flatcar"
  __printf_line "freenas                         - Download freenas"
  __printf_line "garuda                          - Download garuda"
  __printf_line "heads                           - Download heads"
  __printf_line "kali                            - Download kali"
  __printf_line "manjaro                         - Download manjaro"
  __printf_line "nixos                           - Download nixos"
  __printf_line "nobara                          - Download nobara"
  __printf_line "openvz                          - Download openvz"
  __printf_line "parrot                          - Download parrot"
  __printf_line "peppermint                      - Download peppermint"
  __printf_line "pfsense                         - Download pfsense"
  __printf_line "photon                          - Download photon"
  __printf_line "popos                           - Download pop!_os"
  __printf_line "proxmox                         - Download proxmox"
  __printf_line "rocky                           - Download rockylinux"
  __printf_line "solus                           - Download solus"
  __printf_line "ubuntu                          - Download ubuntu"
  __printf_line "vanilla                         - Download vanilla os"
  __printf_line "void                            - Download voidlinux"
  __printf_line "tails                           - Download tails"
  __printf_line "tiny                            - Download tiny"
  __printf_line "--all                           - Download all ISOs"
  __printf_line "--force                         - Force overwriting of ISO"
  __printf_line "--release                       - Sets the release to search for"
  __printf_line "--dir                           - Sets the download directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$LATEST_ISO_TEMP_FILE" ] && rm -Rf "$LATEST_ISO_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__sed() { sed "$@" 2>/dev/null; }
__grep() { grep "$@" 2>/dev/null; }
__cd() { [ -d "$iso_dir" ] && builtin cd "$1" || return 1; }
__strip_href() { __sed 's|.*href="||g;s|".*||g' | __grep -v 'data:image/png' | __grep '^' 2>/dev/null || return 1; }
__rm_rf() { if [ -e "$1" ]; then rm -Rf "$1" && return 0 || return 1; fi; }
__curl() { \curl -q -LSsf --fail-early --connect-timeout "${LATEST_ISO_CONNECT_TIMEOUT:-2}" --retry "${LATEST_ISO_RETRY_COUNT:-5}" --retry-delay "${LATEST_ISO_RETRY_DELAY:-3}" "$@" 2>/dev/null || return 1; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__test_arch() {
  local test_arch="" exclude_arch="" a="" output=""
  local arch="${LATEST_ISO_SYSTEM_ARCH:-$(uname -m)}"
  arch="$(echo "$arch" | tr '[:upper:]' '[:lower:]')"
  local -a input=()
  # Read from arguments or stdin
  if [ $# -gt 0 ]; then
    input=("$@")
  else
    while IFS= read -r line; do
      [ -n "$line" ] && input+=("$line")
    done
  fi
  [ ${#input[@]} -eq 0 ] && return 1
  if [ "$arch" = "x86_64" ]; then
    test_arch="amd64 x86_64 x64"
    exclude_arch="i386|i686|arm64|aarch64|arm"
  elif [ "$arch" = "aarch64" ] || [ "$arch" = "arm64" ]; then
    test_arch="aarch64 arm64"
    exclude_arch="i386|i686|x86_64|amd64|x64"
  else
    test_arch="$arch"
    exclude_arch="aarch64|arm64|x86_64|amd64"
  fi
  # Try to find arch-specific match first
  for a in $test_arch; do
    output="$(printf '%s\n' "${input[@]}" | tr ' ' '\n' | __grep -i "$a" | head -n1)"
    [ -n "$output" ] && echo "$output" && return 0
  done
  # Fallback: return first result that doesn't match other architectures
  output="$(printf '%s\n' "${input[@]}" | tr ' ' '\n' | __grep -vE "$exclude_arch" | head -n1)"
  [ -n "$output" ] && echo "$output"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__unarchive() {
  local archive="${archive_file:-$1}"
  local extract_dir="$(dirname "$archive")"
  local extracted_file=""
  if echo "$archive" | __grep -qE '\.tar$|\.tar\.gz$|\.tar\.bz2$|\.tar\.xz$'; then
    tar xfv "$archive" -C "$extract_dir" && rm -f "$archive"
    return $?
  elif echo "$archive" | __grep -q '\.xz$'; then
    # For .xz files (like .img.xz), decompress in place and remove archive
    xz -fd "$archive"
    return $?
  elif echo "$archive" | __grep -q '\.gz$'; then
    gzip -fd "$archive"
    return $?
  elif echo "$archive" | __grep -q '\.bz2$'; then
    bzip2 -fd "$archive"
    return $?
  elif echo "$archive" | __grep -q '\.zip$'; then
    unzip -o "$archive" -d "$extract_dir" && rm -f "$archive"
    return $?
  elif echo "$archive" | __grep -q '\.7z$'; then
    7z x "$archive" -o"$extract_dir" && rm -f "$archive"
    return $?
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__ex() {
  local d="$PWD"
  download_file="${1:-$download_file}"
  archive="$(realpath "$2" 2>/dev/null || echo '')"
  local tmp_iso_dir="$(dirname "$archive" 2>/dev/null)"
  local extracted_file=""
  if [ -f "$archive" ]; then
    __cd "$tmp_iso_dir"
    printf_cyan "Extracting $archive"
    echo "extracting $archive" >"$LATEST_ISO_LOG_DIR/ex.log"
    __unarchive "$archive" &>>"$LATEST_ISO_LOG_DIR/ex.log"
    # Look for .iso files after extraction (search recursively)
    extracted_file="$(find "$tmp_iso_dir" -type f -name '*.iso' 2>/dev/null | head -n1 || echo '')"
    __cd "$d"
    if [ -n "$extracted_file" ] && [ -f "$extracted_file" ]; then
      iso_dirname="$(dirname "$download_file")"
      [ -d "$iso_dirname" ] || mkdir -p "$iso_dirname"
      # Ensure output has .iso extension
      download_file="$(echo "$download_file" | __sed 's|\.zip$|.iso|g;s|\.xz$|.iso|g;s|\.gz$|.iso|g')"
      if [ "$extracted_file" != "$download_file" ]; then
        printf_cyan "Moving $extracted_file to $download_file"
        if mv -f "$extracted_file" "$download_file"; then
          # Clean up extracted directory if it was a subdirectory
          find "$tmp_iso_dir" -mindepth 1 -type d -empty -delete 2>/dev/null
          [ -f "$archive" ] && rm -Rf "$archive"
          [ -f "$LATEST_ISO_LOG_DIR/ex.log" ] && rm -Rf "$LATEST_ISO_LOG_DIR/ex.log"
          printf_green "Extraction complete: $download_file"
        fi
      fi
    else
      printf_red "Could not find .iso file in $archive"
      printf_red "Check $LATEST_ISO_LOG_DIR/ex.log for details"
      return 1
    fi
  fi
  [ -f "$download_file" ] && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__strip_url() { __grep -v '^$' | head -n1 | __grep '^'; }
__set_filename() {
  local file="$1" arch="$2"
  # Handle various archive/image extensions: .iso, .img.xz, .tar.gz, etc.
  if echo "$file" | __grep -qE '\.(img|tar)\.(xz|gz|bz2)$'; then
    echo "$file" | sed -E "s#\.(img|tar)\.(xz|gz|bz2)\$#.${arch}.\1.\2#g" | __grep '^' || echo "$file"
  elif echo "$file" | __grep -qE '\.iso$'; then
    echo "$file" | sed "s#\.iso\$#.${arch}.iso#g" | __grep '^' || echo "$file"
  elif echo "$file" | __grep -qE '\.(xz|gz|bz2|7z|zip)$'; then
    echo "$file" | sed -E "s#\.(xz|gz|bz2|7z|zip)\$#.${arch}.\1#g" | __grep '^' || echo "$file"
  else
    echo "$file"
  fi
}
__get_filename() { __grep -E '\.iso$|\.tar$|\.gz$|\.xz$|\.bz2$|\.7z$|\.zip$' | __grep $1 '^' || return 2; }
# - - - - - - - - - - - - - - - - - - - - - - - - -

# - - - - - - - - - - - - - - - - - - - - - - - - -
__gui() {
  [ -n "$DISPLAY" ] || return 1
  [ -z "$SSH_CONNECTION" ] || return 1
  url="$(INPUT_NAME="$APPNAME" ask_for_input "What is the url to the iso?" || echo '')"
  iso="$(INPUT_NAME="$APPNAME" ask_for_input "Saved name relative to\n$LATEST_ISO_DOWNLOAD_DIR" || echo '')"
  file=$LATEST_ISO_DOWNLOAD_DIR/${iso%.*}.iso
  [ -n "$url" ] || printf_exit "URL is missing or invalid"
  [ -n "$iso" ] || printf_exit "Filename is missing"
  __notifications "Downloading from $url"
  if [ -n "$url" ] && [ -n "$iso" ]; then
    __latest_iso "$url" "$file" &>"$LATEST_ISO_LOG_DIR/gui.log"
    exitCode=$?
  else
    __notifications "Failed to get file from\n$url"
  fi
  if [ "$exitCode" -eq 0 ]; then
    __notifications "Download saved to $file"
  else
    __notifications "Download has failed"
  fi
  exit $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__run_all() {
  local statusCode=0
  isos="$(echo "${ARRAY//,/ }" | tr ' ' '\n' | sort -u | __grep -Ev 'iso|gui|all' | tr '\n' ' ')"
  for iso in $isos; do
    export LATEST_ISO_FORCE_INST="$LATEST_ISO_FORCE_INST"
    export LATEST_ISO_SYSTEM_ARCH="$LATEST_ISO_SYSTEM_ARCH"
    eval "$0 $iso" || statusCode=$((statusCode + 1))
  done
  return $statusCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__test_iso() {
  local test=""
  local verify=""
  local get_status=""
  # Handle rsync URLs - if URL ends with bootable/archive extension, assume valid
  if echo "$1" | __grep -qE '^rsync://.*\.(iso|xz|gz|bz2|7z)$'; then
    return 0
  fi
  [ -n "$1" ] && test="$(echo "$1" | __grep -E 'https://|http://|ftp://' | __get_filename | __grep '^' || echo '')"
  [ -n "$test" ] && get_status="$(__curl -I "$test" || return 1)"
  verify="$(echo "$get_status" | __grep -q 'HTTP/.* 200' && echo 'valid' || echo '')"
  if [ "$verify" = "valid" ]; then
    return 0
  else
    verify=""
    test=""
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__grep_size_large() { __sort_size | __grep "$@"; }
__awk_nf() { awk '{print $NF}' 2>/dev/null | head -n1; }
__tr_split() { tr '=' '\n' 2>/dev/null | __strip_tags; }
__iso_is_archive() { __grep -E '\.tar$|\.xz$|\.gz$|\.zip$|\.bz2$|\.7z$'; }
__sort_rv() { __strip_tags 2>/dev/null | sort -rV | head -n1 | __sed 's|/$||g' | __sed 's|//|/|g' | __grep '^' 2>/dev/null || false; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sort_v() { __strip_tags 2>/dev/null | __grep '^[0-9]' | sort -rV | __sed 's|/$||g' | __sed 's|//|/|g' | __grep '^' 2>/dev/null || false; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sort_size() { sort -k2 -t' ' -rn 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__strip_iso() { __grep -aE '[_.-].*[_.-]' | __grep -Ev 'torrent|target|ti-download|^$' | __get_filename | head -n1 | __grep '^' || return 1; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_link() { __grep 'href=' | __sed 's/<\/\?[^>]\+>//g;s|(.*)||g' | awk -F ' ' '{print $1}' | __grep '\.iso$'; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
__strip_tags() {
  iso="${iso:-}"
  __sed -r 's/.*href="([^"]+).*/\1/g' |
    __sed 's|^<a href=||g;s|"||g' |
    __sed 's/<..*=//g' |
    __sed 's|>$||g' |
    __sed 's|\\/|/|g' |
    __sed 's|&#x2F;&#x2F;|//|g;s|&#x2F;|/|g' |
    __sed 's|<.*||g' |
    __sed 's|>.*||g' |
    __sed "s|$iso/download$|$iso|g" |
    __sed 's|.iso.torrent|.iso|g' |
    __sed 's|\t||g' |
    __sed 's| *||g' |
    __sed 's|/index.html||g' |
    __sed "s|'||g" | __grep -v '^$' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__verify_arch() {
  # Returns standardized arch for filename: amd64, arm64, arm, i386
  latest="${1:-$latest}"
  if echo "$latest" | __grep -wiq 'x86_64'; then
    verify_arch="amd64"
  elif echo "$latest" | __grep -wiq 'amd64'; then
    verify_arch="amd64"
  elif echo "$latest" | __grep -wiq 'aarch64'; then
    verify_arch="arm64"
  elif echo "$latest" | __grep -wiq 'arm64'; then
    verify_arch="arm64"
  elif echo "$latest" | __grep -iq '\-ARM\-'; then
    # Handle patterns like "Manjaro-ARM-"
    verify_arch="arm64"
  elif echo "$latest" | __grep -wiq 'arm'; then
    verify_arch="arm"
  elif echo "$latest" | __grep -wiqE 'i[1-9]86|x86'; then
    verify_arch="i386"
  else
    verify_arch="amd64"
  fi
  echo "$verify_arch"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_arch() {
  get_arch=$(uname -i | __grep -v 'unknown' | __grep '^' || uname -m | __grep '^' || uname -p | __grep '^')
  if [[ "$get_arch" =~ x86_64* ]]; then
    echo "x86_64"
  elif [[ "$get_arch" =~ i*86 ]]; then
    echo "i386"
  elif [[ "$get_arch" =~ aarch64 ]]; then
    echo "aarch64"
  elif [[ "$get_arch" =~ arm* ]]; then
    echo "$get_arch"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Display architecture not supported message
__arch_not_supported() {
  local msg="${1:-This distribution does not support the requested architecture}"
  printf_red "$msg"
  statusCode=$((1 + ${statusCode:-0}))
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Filter out unstable versions (beta, rc, alpha, dev, test, preview, unstable, nightly)
__filter_stable() {
  __grep -viE '(beta|alpha|rc[0-9]|[-.]rc[-.]|dev|test|preview|unstable|nightly|snapshot|pre[0-9])'
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Generic HTML directory listing parser
# Usage: __parse_html <url> [include_pattern] [exclude_pattern] [options]
# Options: nojs (append ?nojs=1), filename (return filename only)
__parse_html() {
  local url="${1:-}"
  local include="${2:-}"
  local exclude="${3:-^$}"
  local options="${4:-}"
  local result=""
  [ -n "$url" ] || return 1
  [[ "$options" == *"nojs"* ]] && url="${url}?nojs=1"
  result="$(__curl "$url" | __grep -oE '[a-zA-Z0-9._-]+\.(iso|img|raw|qcow2|tar\.[gx]z|zip)' | __grep -E "$include" | __grep -vE "$exclude" | __filter_stable | sort -rV | __test_arch | head -n1)"
  [ -n "$result" ] && echo "$result"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Generic JSON API parser
# Usage: __parse_json <url> <jq_filter> [include_pattern] [exclude_pattern]
__parse_json() {
  local url="${1:-}"
  local jq_filter="${2:-.}"
  local include="${3:-}"
  local exclude="${4:-^$}"
  local result=""
  [ -n "$url" ] || return 1
  result="$(__curl "$url" | jq -r "$jq_filter" 2>/dev/null | __grep -E "$include" | __grep -vE "$exclude" | __filter_stable | sort -rV | __test_arch | head -n1)"
  [ -n "$result" ] && echo "$result"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# GitHub releases API
# Usage: __github <owner/repo> [include_pattern] [exclude_pattern]
__github() {
  local repo="${1:-}"
  local include="${2:-\.iso}"
  local exclude="${3:-^$}"
  local api_url="" result=""
  [ -n "$repo" ] || return 1
  # Clean repo format (remove URL parts if full URL given)
  repo="$(echo "$repo" | __sed 's|.*github\.com/||g;s|/*$||g' | __grep '^' || echo "$repo")"
  api_url="https://api.github.com/repos/$repo/releases/latest"
  result="$(__curl -H "Accept: application/vnd.github+json" "$api_url" | jq -r '.assets[].browser_download_url' 2>/dev/null | __grep -E "$include" | __grep -vE "$exclude" | __filter_stable | sort -rV | __test_arch | head -n1)"
  [ -n "$result" ] && echo "$result"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# GitLab releases API
# Usage: __gitlab <instance> <project_id_or_path> [include_pattern] [exclude_pattern]
__gitlab() {
  local instance="${1:-gitlab.com}"
  local project="${2:-}"
  local include="${3:-\.iso}"
  local exclude="${4:-^$}"
  local api_url="" result=""
  [ -n "$project" ] || return 1
  # URL encode project path if it contains /
  project="$(echo "$project" | __sed 's|/|%2F|g')"
  api_url="https://$instance/api/v4/projects/$project/releases"
  result="$(__curl "$api_url" | jq -r '.[0].assets.links[].url' 2>/dev/null | __grep -E "$include" | __grep -vE "$exclude" | __filter_stable | sort -rV | __test_arch | head -n1)"
  [ -n "$result" ] && echo "$result"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# SourceForge project releases
# Usage: __sourceforge <project> [subdir] [version_pattern]
__sourceforge() {
  local project="${1:-}"
  local subdir="${2:-}"
  local version_pattern="${3:-stable|[0-9].[0-9]|[a-z].*[0-9]}"
  local sf_base="https://sourceforge.net/projects/$project/files"
  local sf_path="$sf_base"
  local get_dirs="" get_isos=""
  [ -n "$project" ] || return 1
  [ -n "$subdir" ] && sf_path="$sf_base/$subdir"
  # Get version/release directory
  get_dirs="$(__curl "$sf_path/" | __grep 'net.sf.files' | head -1 | __sed 's|.*= ||g' | jq -rc '.[].name' 2>/dev/null | __grep -E "$version_pattern" | __filter_stable | __grep -v '^$' | sort -rV | head -n1)"
  if [ -n "$get_dirs" ]; then
    # Try to get ISO from version subdirectory
    get_isos="$(__curl "$sf_path/$get_dirs/" | __grep 'net.sf.files' | head -1 | __sed 's|.*= ||g' | jq -rc '.[].name' 2>/dev/null | __grep -iE '\.(iso|img)$' | __test_arch | sort -rV | head -n1)"
    [ -n "$get_isos" ] && echo "$sf_path/$get_dirs/$get_isos" && return 0
  fi
  # Fallback: ISO directly in path
  get_isos="$(__curl "$sf_path/" | __grep 'net.sf.files' | head -1 | __sed 's|.*= ||g' | jq -rc '.[].name' 2>/dev/null | __grep -iE '\.(iso|img)$' | __test_arch | sort -rV | head -n1)"
  [ -n "$get_isos" ] && echo "$sf_path/$get_isos"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__find_iso() {
  url="$1"
  iso_url=""
  LATEST_ISO_SYSTEM_ARCH="${LATEST_ISO_SYSTEM_ARCH:-$(__get_arch)}"
  if __test_iso "$url"; then
    iso_url="$url"
  else
    iso_url="$(__curl "$url" 2>/dev/null | __grep -i "${LATEST_ISO_SYSTEM_ARCH:-^}" | __grep 'href=".*"' | __grep -E '[http,ftp]*.*\.iso' | __strip_tags | __strip_iso || echo '')"
    [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    if [ -z "$iso_url" ]; then
      iso_url="$(__curl "$url" 2>/dev/null | __grep -i "${LATEST_ISO_SYSTEM_ARCH:-^}" | __grep 'href=".*"' | __strip_tags | __strip_iso || echo '')"
      [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    fi
    if [ -z "$iso_url" ]; then
      iso_url="$(__curl "$url" 2>/dev/null | __grep -E 'x86_64|amd64' | __strip_tags | __strip_iso || echo '')"
      [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    fi
    if [ -z "$iso_url" ]; then
      iso_url="$(__curl "$url" 2>/dev/null | __strip_tags | __strip_iso || echo '')"
      [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    fi
    if [ -z "$iso_url" ]; then
      isor="$(__curl "$url" 2>/dev/null | __grep '\.iso' | __strip_tags | __strip_iso || echo '')"
      iso_url="$url/$isor"
      [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    fi
    if [ -z "$iso_url" ]; then
      iso_url="$(__curl "$url" 2>/dev/null | __strip_tags | __strip_iso || echo '')"
      [ -n "$iso_url" ] && __test_iso "$iso_url" || iso_url=""
    fi
  fi
  if [ -n "$iso_url" ]; then
    echo "$iso_url"
    return 0
  else
    echo ""
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Get macOS recovery image URL from Apple's software update catalog
# Usage: __get_macos_iso <arch> [catalog_url]
# Returns: URL to BaseSystem.dmg and sets MACOS_VERSION variable
__get_macos_iso() {
  local arch="${1:-x86_64}"
  local catalog_url="${2:-$LATEST_ISO_MACOS_CATALOG_URL}"
  local catalog="" all_urls="" url="" ver="" major_ver="" best_url="" best_ver=""
  MACOS_VERSION=""
  # Fetch Apple's software update catalog
  catalog="$(__curl "$catalog_url")"
  [ -z "$catalog" ] && return 1
  # Get all BaseSystem.dmg URLs
  all_urls="$(echo "$catalog" | __grep -oE 'https://[^<]+BaseSystem\.dmg' | sort -u)"
  [ -z "$all_urls" ] && return 1
  # Check each URL's version via the .smd metadata file
  for url in $all_urls; do
    local smd_url="${url/BaseSystem.dmg/InstallAssistantAuto.smd}"
    ver="$(__curl "$smd_url" 2>/dev/null | __grep -A1 'CFBundleShortVersionString' | __grep string | __sed 's/.*<string>\(.*\)<\/string>.*/\1/')"
    [ -z "$ver" ] && continue
    major_ver="${ver%%.*}"
    # Apple Silicon requires macOS 11+ (Big Sur or later with Universal binaries)
    if [ "$arch" = "arm64e" ]; then
      if [ "$major_ver" -ge 11 ] 2>/dev/null; then
        # Keep the latest version found
        if [ -z "$best_ver" ] || __version_gt "$ver" "$best_ver"; then
          best_url="$url"
          best_ver="$ver"
        fi
      fi
    else
      # Intel supports all versions, keep latest
      if [ -z "$best_ver" ] || __version_gt "$ver" "$best_ver"; then
        best_url="$url"
        best_ver="$ver"
      fi
    fi
  done
  if [ -n "$best_url" ]; then
    MACOS_VERSION="$best_ver"
    echo "$best_url"
    return 0
  fi
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Compare versions: returns true if $1 > $2
__version_gt() {
  [ "$(printf '%s\n%s' "$1" "$2" | sort -V | tail -n1)" = "$1" ] && [ "$1" != "$2" ]
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__latest_iso() {
  local exitCode="0"
  __get_torrent "$1" || exitCode=3
  if [ "$LATEST_ISO_IS_TORRENT" = "no" ]; then
    url="${1:-$url}"
    file="${2:-$file}"
    archive_iso_name="${3:-$archive_iso_name}"
    latest=$(__find_iso "$url")
    localname=$(basename -- "$latest" 2>/dev/null)
    download_dir=$(dirname "${2:-$LATEST_ISO_DOWNLOAD_DIR/$localname}" 2>/dev/null)
    download_file="$download_dir/${file//$download_dir\//}"
    [ -d "$download_file" ] && rm -Rf "$download_file"
    [ -d "$download_dir" ] || mkdir -p "$download_dir"
    [ -d "$LATEST_ISO_DOWNLOAD_DIR" ] || mkdir -p "$LATEST_ISO_DOWNLOAD_DIR"
    [ -d "$LATEST_ISO_DOWNLOAD_DIR" ] || { printf_red "The download file should not be a directory: $LATEST_ISO_DOWNLOAD_DIR\n" && return 1; }
    [ -n "$latest" ] || { printf_red "No iso found on ${url:-$real_url}\n" && return 1; }
    echo "$latest" | __get_filename -q || { printf_red "$latest seems to be invalid\n" && return 1; }
    __grab_iso "$latest" "$download_file" "$archive_iso_name" && exitCode="0" || exitCode="2"
  fi
  if [ "$exitCode" = 0 ]; then
    exitCode=0
  else
    exitCode=2
  fi
  unset url latest latest_file remote_filesize system_arch iso_arch download_file save_message local_iso_name remote_iso_name save_message ISOFILE LATEST_ISO_NAME LATEST_RELEASE_VERSION
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: Setup download paths and variables
__setup_download_paths() {
  local url_arg="$1"
  local file_arg="$2"
  local archive_arg="$3"

  GRAB_URL="${url_arg:-$GRAB_URL}"
  GRAB_LATEST="${url_arg:-$GRAB_LATEST}"
  GRAB_LATEST_FILE="${file_arg:-$GRAB_DOWNLOAD_FILE}"
  GRAB_ARCHIVE_NAME="${archive_arg:-$GRAB_ARCHIVE_NAME}"
  GRAB_SYSTEM_ARCH="$(__get_arch)"
  GRAB_REMOTE_ISO_NAME="$(basename -- "$GRAB_LATEST")"
  GRAB_ISO_ARCH="$(__verify_arch "$GRAB_LATEST")"
  GRAB_DOWNLOAD_FILE="$(__set_filename "${GRAB_LATEST_FILE:-$GRAB_DOWNLOAD_FILE}" "$GRAB_ISO_ARCH")"
  GRAB_LOCAL_ISO_NAME="$(basename -- "$GRAB_DOWNLOAD_FILE")"
  GRAB_LATEST_FILE_DIR="$(dirname "$GRAB_LATEST_FILE")"
  GRAB_LOG_FILE="$LATEST_ISO_LOG_DIR/$GRAB_LOCAL_ISO_NAME"

  __remote_filesize "$GRAB_LATEST"
  [ -d "$GRAB_LATEST_FILE_DIR" ] || mkdir -p "$GRAB_LATEST_FILE_DIR"
  [ -d "$LATEST_ISO_DOWNLOAD_DIR" ] || mkdir -p "$LATEST_ISO_DOWNLOAD_DIR"
  [ -f "$GRAB_DOWNLOAD_FILE" ] && [ "$LATEST_ISO_FORCE_INST" = "true" ] && __rm_rf "$GRAB_DOWNLOAD_FILE"

  [ "$GRAB_SYSTEM_ARCH" = "$GRAB_ISO_ARCH" ] && LATEST_ISO_SYSTEM_ARCH="$GRAB_SYSTEM_ARCH" || LATEST_ISO_SYSTEM_ARCH="$GRAB_ISO_ARCH"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: Determine download type and set messages
__determine_download_type() {
  if echo "$GRAB_LATEST" | __iso_is_archive &>/dev/null; then
    [ -z "$GRAB_ARCHIVE_NAME" ] && GRAB_ARCHIVE_NAME="$LATEST_ISO_TEMP_DIR/$GRAB_REMOTE_ISO_NAME"
    GRAB_CURL_FILE="$GRAB_ARCHIVE_NAME"
    GRAB_SAVE_MESSAGE="Attempting to download the compressed ISO from: $(dirname "$GRAB_LATEST")"
  elif echo "$GRAB_LATEST" | __grep -qE '\.iso$' &>/dev/null; then
    GRAB_CURL_FILE="$GRAB_DOWNLOAD_FILE"
    GRAB_SAVE_MESSAGE="Attempting to download the ISO from: $(dirname "$GRAB_LATEST")"
  else
    GRAB_CURL_FILE="$GRAB_DOWNLOAD_FILE"
    GRAB_SAVE_MESSAGE="Attempting to download the file from: $(dirname "$GRAB_LATEST")"
  fi
  GRAB_DOWNLOAD_MESSAGE="Size of $GRAB_REMOTE_ISO_NAME is $remote_filesize and saving it to: $GRAB_DOWNLOAD_FILE"
  mkdir -p "$(dirname "$GRAB_CURL_FILE")"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: Execute the download with retry logic (resumes partial downloads)
__execute_download() {
  local success="" attempt=0
  local max_retries="${LATEST_ISO_DOWNLOAD_RETRIES:-2}"
  local retry_delay="${LATEST_ISO_DOWNLOAD_RETRY_DELAY:-5}"
  while [ "$attempt" -le "$max_retries" ]; do
    if [ "$attempt" -gt 0 ]; then
      printf_yellow "Download failed, resuming in ${retry_delay}s (attempt $((attempt + 1)) of $((max_retries + 1)))..."
      sleep "$retry_delay"
    fi
    if echo "$GRAB_LATEST" | __grep -q '^rsync://'; then
      __rsync_download "$GRAB_LATEST" "$GRAB_CURL_FILE" && success="true" || success=""
    else
      __download_with_progress "$GRAB_LATEST" "$GRAB_CURL_FILE" "$remote_file_size_raw" && success="true" || success=""
    fi
    if [ "$success" = "true" ]; then
      return 0
    fi
    attempt=$((attempt + 1))
  done
  # Only delete partial file after all retries exhausted
  [ -f "$GRAB_CURL_FILE" ] && rm -f "$GRAB_CURL_FILE"
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: Verify download and return exit code
__verify_download() {
  local exitCode=0

  if echo "$GRAB_LATEST" | __iso_is_archive &>/dev/null; then
    __ex "$GRAB_DOWNLOAD_FILE" "$GRAB_CURL_FILE"
  fi

  # Check if downloaded file exists (could be the archive or extracted file)
  local verify_file=""
  if [ -f "$GRAB_DOWNLOAD_FILE" ]; then
    verify_file="$GRAB_DOWNLOAD_FILE"
  elif [ -f "$GRAB_CURL_FILE" ]; then
    verify_file="$GRAB_CURL_FILE"
  else
    printf_red "Downloading of $GRAB_LOCAL_ISO_NAME has failed: no file created"
    return 2
  fi

  __filesize_local "$verify_file"

  if [ -f "$GRAB_DOWNLOAD_FILE" ]; then
    # For compressed files (like .img.xz), extracted size is always larger - skip size check
    if echo "$GRAB_LATEST" | __iso_is_archive &>/dev/null; then
      # For archives: just verify file exists and has reasonable size (> 10MB)
      if [ "$local_file_size_raw" -gt 10000000 ]; then
        printf_green "Downloading and extraction of $GRAB_LOCAL_ISO_NAME was successful"
        exitCode=0
      else
        printf_red "Extraction of $GRAB_LOCAL_ISO_NAME has failed: extracted file too small"
        exitCode=1
      fi
    elif __verify_filesizes "$local_file_size_raw" "$remote_file_size_raw"; then
      printf_green "Downloading of $GRAB_LOCAL_ISO_NAME was successful"
      exitCode=0
    elif __verify_filesizes "$local_file_size" "$remote_file_size"; then
      printf_green "Downloading of $GRAB_LOCAL_ISO_NAME was successful"
      exitCode=0
    else
      printf_red "Downloading of $GRAB_LOCAL_ISO_NAME has failed: file size mismatch (got $local_file_size, expected $remote_filesize)"
      exitCode=1
    fi
  else
    if [ -n "$LATEST_ISO_CURL_ERROR" ] && [ "$LATEST_ISO_CURL_ERROR" != "0" ]; then
      printf_red "Downloading of $GRAB_LOCAL_ISO_NAME has failed: curl error code $LATEST_ISO_CURL_ERROR"
    else
      printf_red "Downloading of $GRAB_LOCAL_ISO_NAME has failed: file not created (disk full or permission denied?)"
    fi
    exitCode=2
  fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: Send notifications based on result
__notify_download_result() {
  local exitCode="$1"
  if [ "$exitCode" -eq 0 ]; then
    __notifications "Downloading of $GRAB_LOCAL_ISO_NAME was successful"
  elif [ "$exitCode" -eq 1 ]; then
    __notifications "Downloading of $GRAB_LOCAL_ISO_NAME has failed: file size mismatch"
  elif [ "$exitCode" -eq 2 ]; then
    if [ -n "$LATEST_ISO_CURL_ERROR" ] && [ "$LATEST_ISO_CURL_ERROR" != "0" ]; then
      __notifications "Downloading of $GRAB_LOCAL_ISO_NAME has failed: curl error code $LATEST_ISO_CURL_ERROR"
    else
      __notifications "Downloading of $GRAB_LOCAL_ISO_NAME has failed: file not created"
    fi
  elif [ "$exitCode" -eq 3 ]; then
    __notifications "Downloading of $GRAB_LOCAL_ISO_NAME has failed: $LATEST_ISO_SPACE_ERROR"
  else
    __notifications "Downloading of $GRAB_LOCAL_ISO_NAME has failed"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__grab_iso() {
  trap 'exitCode=$?;if [ $exitCode -ne 0 ]; then if [ -n "$GRAB_DOWNLOAD_FILE" ] && [ ! -s "$GRAB_DOWNLOAD_FILE" ]; then rm -Rf "$GRAB_DOWNLOAD_FILE";fi;fi' ERR SIGINT
  local exitCode=10

  # Setup paths and variables
  __setup_download_paths "$1" "$2" "$3"

  # Check disk space before downloading
  if ! __check_disk_space "$GRAB_LATEST_FILE_DIR" "$remote_file_size_raw"; then
    printf_red "Downloading of $GRAB_LOCAL_ISO_NAME has failed: $LATEST_ISO_SPACE_ERROR"
    __notify_download_result 3
    echo ""
    return 3
  fi

  # Check if URL is valid
  if [ "$remote_filesize" = "0" ] || [ "$remote_filesize" = "0B" ]; then
    printf_red "URL: $GRAB_LATEST"
    printf_error "doesn't seem to be a valid ISO image"
    __notify_download_result 4
    echo ""
    return 4
  fi

  # Check if file already exists
  if [ -f "$GRAB_DOWNLOAD_FILE" ] && [ "$LATEST_ISO_OVERWRITE" != "yes" ]; then
    __filesize_local "$GRAB_DOWNLOAD_FILE" "silent" &>/dev/null
    printf_cyan "File already exists in: ${PURPLE}$GRAB_DOWNLOAD_FILE : $local_file_size"
    [ -n "$GRAB_LATEST" ] && printf_blue "$GRAB_LATEST : $remote_filesize"
    echo ""
    return 0
  fi

  # Proceed with download
  if [ -n "$GRAB_LATEST" ]; then
    __determine_download_type
    printf_cyan "$GRAB_SAVE_MESSAGE"
    printf_purple "$GRAB_DOWNLOAD_MESSAGE"

    if __execute_download; then
      __verify_download
      exitCode=$?
    else
      printf_red "Failed to download $GRAB_LATEST"
      exitCode=2
    fi
  fi

  __notify_download_result "$exitCode"
  echo ""
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__verify_filesizes() {
  local local_size="" remote_size="" min_size="" max_size="" tolerance=""
  local_size="$(__get_numbers "$1")"
  remote_size="$(__get_numbers "$2")"
  tolerance="${LATEST_ISO_FILESIZE_TOLERANCE:-5}"

  # Allow tolerance % (default 95-105% of expected size)
  min_size=$((remote_size * (100 - tolerance) / 100))
  max_size=$((remote_size * (100 + tolerance) / 100))

  if [ "$local_size" -ge "$min_size" ] && [ "$local_size" -le "$max_size" ]; then
    return 0
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__filesize_local() {
  set -o pipefail
  local filename="${1:-$download_file}"
  if [ -f "$filename" ]; then
    local_file_size="$(find "$filename" -type f -exec du -h {} \; | awk '{print $1}' | __grep -v '^$' || echo '0')"
    local_file_size_raw="$(find "$filename" -type f -exec du -b {} \; | awk '{print $1}' | __grep -v '^$' || echo '0')"
    if [ -n "$local_file_size" ]; then
      [ -n "$2" ] && printf_cyan "The size of the local file is: $local_file_size"
      return 0
    else
      return 1
    fi
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__remote_filesize() {
  set -o pipefail
  local head="" content_length="" content_length_count=""
  local url="$1"

  # Handle rsync URLs differently
  if echo "$url" | __grep -q '^rsync://'; then
    local rsync_dir="" rsync_file=""
    rsync_dir="$(dirname "$url")/"
    rsync_file="$(basename "$url")"
    content_length="$(__rsync_get_filesize "$rsync_dir" "$rsync_file")"
    [ -z "$content_length" ] && content_length=0
  else
    head="$(__curl -I "$url" 2>/dev/null)"
    content_length_count="$(echo "$head" | __grep -ic 'content-length' || echo 1)"
    if [ $content_length_count = 1 ]; then
      content_length="$(echo "$head" | __grep -ai 'content-length' | head -n1 | awk -v IGNORECASE=1 'BEGIN{RS="\r\n"} /^content-length/ { print $2 }')"
    elif [ "$content_length_count" != 1 ]; then
      content_length="$(echo "$head" | __grep -ai 'content-length' | tail -n1 | awk -v IGNORECASE=1 'BEGIN{RS="\r\n"} /^content-length/ { print $2 }')"
    fi
  fi
  if [ "$content_length" = 0B ]; then
    content_length=""
    remote_file_size_raw="0"
  fi
  [ -n "$content_length" ] || content_length=0
  [ -n "$remote_file_size_raw" ] || remote_file_size_raw="$content_length"
  if cmd_exists numfmt; then
    remote_filesize="$(numfmt --to=iec-i --suffix=B "$content_length" | __sed 's|iB$||g')"
  elif cmd_exists gnumfmt; then
    remote_filesize="$(gnumfmt --to=iec-i --suffix=B "$content_length" | __sed 's|iB$||g')"
  else
    remote_filesize="$(printf '%s\n' "$content_length")"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__check_disk_space() {
  local dir="$1"
  local needed="$2"
  local needed_with_buffer=$((needed * 2))
  local available=""

  # Get available space in bytes
  if [ -d "$dir" ]; then
    available=$(df -B1 "$dir" 2>/dev/null | awk 'NR==2 {print $4}')
  else
    available=$(df -B1 "$(dirname "$dir")" 2>/dev/null | awk 'NR==2 {print $4}')
  fi

  [ -z "$available" ] && return 0 # Can't check, assume OK

  if [ "$available" -lt "$needed_with_buffer" ]; then
    # Format sizes for display
    local avail_fmt="" need_fmt=""
    if command -v numfmt &>/dev/null; then
      avail_fmt="$(numfmt --to=iec-i --suffix=B "$available" | __sed 's|iB$||g')"
      need_fmt="$(numfmt --to=iec-i --suffix=B "$needed_with_buffer" | __sed 's|iB$||g')"
    elif command -v gnumfmt &>/dev/null; then
      avail_fmt="$(gnumfmt --to=iec-i --suffix=B "$available" | __sed 's|iB$||g')"
      need_fmt="$(gnumfmt --to=iec-i --suffix=B "$needed_with_buffer" | __sed 's|iB$||g')"
    else
      avail_fmt="$available"
      need_fmt="$needed_with_buffer"
    fi
    export LATEST_ISO_SPACE_ERROR="insufficient disk space (need $need_fmt, have $avail_fmt)"
    return 1
  fi
  return 0
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__distro_arch_schema() {
  local system_arch="$1"
  local distro="${2:-default}"

  case "$distro" in
  # Uses: x86_64, aarch64
  tinycore | tiny | alpine | void)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: amd64, arm64
  debian | ubuntu | kali | parrot | peppermint | tails | clonezilla | gparted | popos | vanilla)
    case "$system_arch" in
    x86_64 | amd64) echo "amd64" ;;
    aarch64 | arm64) echo "arm64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: x86_64, aarch64
  arch | archcraft | arcolinux | arco | blackarch | cachyos | cachy | endeavour | garuda | manjaro | redcore)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: x86_64, aarch64
  alma | rocky | centos | fedora | rhel | photon | openvz | clear | nobara | bazzite)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: x86_64, aarch64
  opensuse | suse)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: amd64, arm64
  freebsd | openbsd | netbsd)
    case "$system_arch" in
    x86_64 | amd64) echo "amd64" ;;
    aarch64 | arm64) echo "arm64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: amd64, arm64
  gentoo)
    case "$system_arch" in
    x86_64 | amd64) echo "amd64" ;;
    aarch64 | arm64) echo "arm64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: x86_64, aarch64
  nixos | chimera)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: x86_64 only
  solus | aeryn)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # Uses: amd64 only
  proxmox | freenas | truenas | pfsense | opnsense | flatcar | heads | hirens | xcp-ng)
    case "$system_arch" in
    x86_64 | amd64) echo "amd64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  # macOS: x86_64 for Intel, arm64e for Apple Silicon
  macos | mac | osx)
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "arm64e" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  *)
    # Default: x86_64, aarch64
    case "$system_arch" in
    x86_64 | amd64) echo "x86_64" ;;
    aarch64 | arm64) echo "aarch64" ;;
    *) echo "$system_arch" ;;
    esac
    ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__rsync_list() {
  local url="$1"
  rsync --list-only "$url" 2>/dev/null
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__rsync_find_latest_version() {
  local url="$1"
  __rsync_list "$url" | awk '{print $NF}' | __grep -E '^[0-9]+\.x$' | sort -rV | head -n1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__rsync_get_filesize() {
  local url="$1"
  local filename="$2"
  __rsync_list "$url" | __grep " ${filename}$" | awk '{print $2}' | tr -d ','
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__rsync_download() {
  local url="$1"
  local output="$2"
  local total_size="${3:-$remote_file_size_raw}"
  local output_dir="$(dirname "$output")"
  local current_size=0
  local rsync_pid=""
  local resume_flag=""

  [ -d "$output_dir" ] || mkdir -p "$output_dir"

  # Check if partial file exists for resume
  if [ -f "$output" ]; then
    current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
    if [ "$current_size" -gt 0 ]; then
      local resume_size=""
      if command -v numfmt &>/dev/null; then
        resume_size="$(numfmt --to=iec-i --suffix=B "$current_size" 2>/dev/null | __sed 's|iB$||g')"
      elif command -v gnumfmt &>/dev/null; then
        resume_size="$(gnumfmt --to=iec-i --suffix=B "$current_size" 2>/dev/null | __sed 's|iB$||g')"
      else
        resume_size="${current_size}B"
      fi
      printf_cyan "Resuming download from $resume_size..."
    fi
  fi

  # Run rsync in background with partial/resume support
  rsync -a --partial --inplace "$url" "$output" >/dev/null 2>&1 &
  rsync_pid=$!

  # Trap CTRL+C to clean up
  trap 'kill $rsync_pid 2>/dev/null; return 130' INT TERM

  # Monitor progress
  while kill -0 $rsync_pid 2>/dev/null; do
    if [ -f "$output" ]; then
      current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
      if [ -n "$total_size" ] && [ "$total_size" -gt 0 ]; then
        __progress_bar "$current_size" "$total_size"
      fi
    fi
    sleep 0.5
  done

  # Reset trap
  trap - INT TERM

  # Wait for rsync to finish and get exit code
  wait $rsync_pid
  local exit_code=$?

  # Final progress update
  if [ -f "$output" ]; then
    current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
    if [ -n "$total_size" ] && [ "$total_size" -gt 0 ]; then
      __progress_bar "$current_size" "$total_size"
    fi
  fi
  printf '\n'

  return $exit_code
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_torrent() {
  local exitTCode=0
  local torrent_url="$1"
  local torrent_name=""
  LATEST_ISO_IS_TORRENT="no"

  if echo "$torrent_url" | __grep -qE 'magnet:|\.torrent$'; then
    LATEST_ISO_IS_TORRENT="yes"
    printf_yellow "This appears to be a torrent"

    # Get torrent name for display
    if echo "$torrent_url" | __grep -q 'magnet:'; then
      torrent_name="$(echo "$torrent_url" | __sed 's|.*dn=||;s|&.*||' | __sed 's|%20| |g')"
    else
      torrent_name="$(basename "$torrent_url")"
    fi
    [ -z "$torrent_name" ] && torrent_name="torrent"

    # Try aria2c first (direct download with progress)
    if __cmd_exists aria2c; then
      printf_blue "Downloading torrent via aria2c"
      aria2c --enable-dht=true --seed-time=0 --summary-interval=1 \
        --console-log-level=warn --download-result=hide \
        -d "$LATEST_ISO_DOWNLOAD_DIR" "$torrent_url"
      exitTCode=$?
      if [ $exitTCode -eq 0 ]; then
        printf_green "Downloading of $torrent_name was successful"
      else
        printf_red "Downloading of $torrent_name has failed: aria2c error code $exitTCode"
      fi
    # Try transadd (transmission wrapper)
    elif __cmd_exists transadd; then
      printf_blue "Adding torrent via transadd"
      transadd "$torrent_url"
      exitTCode=$?
      if [ $exitTCode -eq 0 ]; then
        __monitor_transmission "$torrent_name"
        exitTCode=$?
      else
        printf_red "Downloading of $torrent_name has failed: transadd error"
      fi
    # Try transmission-remote directly
    elif __cmd_exists transmission-remote; then
      printf_blue "Adding torrent via transmission-remote"
      local server="${TORRENT_SERVER:-localhost}:${TORRENT_SERVER_PORT:-9091}"
      transmission-remote "$server" -a "$torrent_url" &>/dev/null
      exitTCode=$?
      if [ $exitTCode -eq 0 ]; then
        __monitor_transmission "$torrent_name"
        exitTCode=$?
      else
        printf_red "Downloading of $torrent_name has failed: transmission-remote error"
      fi
    else
      printf_red "No torrent client found (aria2c, transadd, or transmission-remote)"
      exitTCode=1
    fi
  fi
  return $exitTCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__monitor_transmission() {
  local torrent_name="${1:-torrent}"
  local server="${TORRENT_SERVER:-localhost}:${TORRENT_SERVER_PORT:-9091}"
  local torrent_id=""
  local status="" percent="" done_check=""

  # Get the most recent torrent ID
  sleep 2
  torrent_id="$(transmission-remote "$server" -l 2>/dev/null | tail -2 | head -1 | awk '{print $1}')"

  if [ -z "$torrent_id" ] || [ "$torrent_id" = "ID" ]; then
    printf_yellow "Could not get torrent ID for monitoring"
    return 0
  fi

  printf_cyan "Monitoring torrent download (ID: $torrent_id)"

  # Monitor until complete or stopped
  while true; do
    local info="$(transmission-remote "$server" -t "$torrent_id" -i 2>/dev/null)"

    if [ -z "$info" ]; then
      printf_red "\nDownloading of $torrent_name has failed: torrent removed or connection lost"
      return 1
    fi

    status="$(echo "$info" | __grep 'State:' | __sed 's|.*State: ||')"
    percent="$(echo "$info" | __grep 'Percent Done:' | __sed 's|.*Percent Done: ||')"

    # Check if done
    if [ "$percent" = "100%" ] || echo "$status" | __grep -qi 'seeding\|finished'; then
      printf '\n'
      printf_green "Downloading of $torrent_name was successful"
      return 0
    fi

    # Check if stopped/error
    if echo "$status" | __grep -qi 'stopped\|error'; then
      printf '\n'
      printf_red "Downloading of $torrent_name has failed: $status"
      return 1
    fi

    # Show progress
    printf '\r%b[Torrent] %s - %s%b' \
      "$(tput setaf 6 2>/dev/null)" \
      "$percent" "$status" \
      "$(tput sgr0 2>/dev/null)"

    sleep 2
  done
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__latest_list() {
  local statusCode=0
  case "$1" in
  # Server variants (hyphenated)
  debian-server)
    shift 1
    local debian_arch="" debian_url=""
    debian_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "debian")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/debian-server.iso"
    debian_url="https://cdimage.debian.org/cdimage/release/current/$debian_arch/iso-cd"
    real_url="$debian_url"
    iso_url="$(__curl "$debian_url" | __strip_tags | __grep "netinst" | __grep -i "$debian_arch" | __strip_iso)"
    iso_url_filename="$debian_url/$iso_url"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  ubuntu-server)
    shift 1
    local ubuntu_version="" ubuntu_iso="" ubuntu_arch="" ubuntu_base_url="" ubuntu_versions=""
    ubuntu_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "ubuntu")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/ubuntu-server.iso"
    if [ "$ubuntu_arch" = "arm64" ]; then
      ubuntu_base_url="https://cdimage.ubuntu.com/ubuntu-server/releases"
      # arm64 uses different URL structure
      for ubuntu_version in $(__curl "$ubuntu_base_url" | __strip_tags | __grep -oE '[0-9]+\.[0-9]+' | sort -ruV); do
        ubuntu_iso="$(__curl "$ubuntu_base_url/$ubuntu_version/release/" | __strip_tags | __grep "live-server" | __grep "$ubuntu_arch" | __grep "\.iso$" | head -n1)"
        [ -n "$ubuntu_iso" ] && { iso_url="$ubuntu_base_url/$ubuntu_version/release"; break; }
      done
    else
      ubuntu_base_url="https://releases.ubuntu.com"
      # amd64: iterate through versions to find one with actual ISOs
      for ubuntu_version in $(__curl "$ubuntu_base_url" | __strip_tags | __grep -oE '[0-9]+\.[0-9]+' | sort -ruV); do
        ubuntu_iso="$(__curl "$ubuntu_base_url/$ubuntu_version" | __strip_tags | __grep "live-server" | __grep "$ubuntu_arch" | __grep "\.iso$" | head -n1)"
        [ -n "$ubuntu_iso" ] && { iso_url="$ubuntu_base_url/$ubuntu_version"; break; }
      done
    fi
    real_url="$ubuntu_base_url"
    iso_url_filename="$iso_url/$ubuntu_iso"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  cachy-server)
    shift 1
    printf_yellow "CachyOS Server Edition is coming soon (expected 2026)"
    printf_cyan "See: https://cachyos.org/blog/2025-christmas-new-year/"
    statusCode=$((1 + $statusCode))
    ;;
  # Regular distros
  alma)
    shift 1
    local alma_arch=""
    alma_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "alma")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/alma.iso"
    real_url="$LATEST_ISO_ALMA_URL"
    iso_url="${LATEST_ISO_ALMA_RELEASE:-$(__curl "$LATEST_ISO_ALMA_URL" | __strip_tags | __sort_v | __strip_url)}/isos/$alma_arch"
    iso_url_filename="$(__curl "$LATEST_ISO_ALMA_URL/$iso_url" | __grep -i "$LATEST_ISO_ALMA_FLAVOR" | __strip_tags | __strip_iso || false)"
    [ -n "$iso_url_filename" ] || iso_url_filename="$(__curl "$LATEST_ISO_ALMA_URL/$iso_url" | __strip_tags | __strip_iso)"
    __latest_iso "$LATEST_ISO_ALMA_URL/$iso_url/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  alpine)
    shift 1
    local alpine_arch=""
    alpine_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "alpine")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/alpine.iso"
    real_url="https://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/$alpine_arch"
    iso_url="$(__curl "$real_url" | __strip_tags | sort -rV | __grep -Ei "$LATEST_ISO_ALPINE_FLAVOR" | __strip_iso)"
    [ -z "$iso_url" ] && iso_url="$(__curl "$real_url" | __strip_tags | sort -rV | __grep -E "standard" | __strip_iso)"
    __latest_iso "$LATEST_ISO_ALPINE_URL/$alpine_arch/$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  aeryn | serpent)
    shift 1
    local aeryn_arch=""
    aeryn_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "aeryn")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/aeryn.iso"
    real_url="$LATEST_ISO_AERYN_URL"
    if [ "$aeryn_arch" = "aarch64" ] || [ "$aeryn_arch" = "arm64" ]; then
      __arch_not_supported "AerynOS does not support arm64"
    else
      iso_url="$(__curl "$LATEST_ISO_AERYN_URL/" | __strip_href | __grep -i 'AerynOS.*\.iso$' | sort -rV | head -n1)"
      __latest_iso "$LATEST_ISO_AERYN_URL/$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  arch)
    shift 1
    local arch_arch=""
    arch_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "arch")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/arch.iso"
    # Arch Linux mainline only provides x86_64 ISOs (Arch ARM is a separate project)
    if [ "$arch_arch" = "aarch64" ] || [ "$arch_arch" = "arm64" ]; then
      __arch_not_supported "Arch Linux does not support arm64 (see archlinuxarm.org for ARM builds)"
    else
      real_url="$LATEST_ISO_ARCHLINUX_URL"
      iso_url="$(__curl "$LATEST_ISO_ARCHLINUX_URL" | __strip_tags | __strip_iso)"
      __latest_iso "$LATEST_ISO_ARCHLINUX_URL/$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  archcraft)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/archcraft.iso"
    real_url="$LATEST_ISO_ARCHCRAFT_URL"
    iso_url_filename="$(__sourceforge "archcraft" "" "v[0-9]")"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  arco)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/arco.iso"
    real_url="$LATEST_ISO_ARCOLINUX_URL"
    latest_arcov="$(__curl "$LATEST_ISO_ARCOLINUX_URL" | __strip_tags | __grep '[0-9]' | sort -ruV | __strip_url)"
    iso_url_filename="$(__curl "$LATEST_ISO_ARCOLINUX_URL/$latest_arcov" | __strip_tags | __grep -i "$LATEST_ISO_ARCOLINUX_FLAVOR" | __strip_url)"
    __latest_iso "$LATEST_ISO_ARCOLINUX_URL/$latest_arcov/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  blackarch)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/blackarch.iso"
    real_url="$LATEST_ISO_BLACKARCH_URL"
    iso_url="$(__curl "$LATEST_ISO_BLACKARCH_URL" | __strip_tags | __grep -i "$LATEST_ISO_BLACKARCH_FLAVOR" | __strip_iso)"
    __latest_iso "$LATEST_ISO_BLACKARCH_URL/$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  bazzite)
    shift 1
    local bazzite_arch=""
    bazzite_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "bazzite")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/bazzite.iso"
    real_url="$LATEST_ISO_BAZZITE_URL"
    if [ "$bazzite_arch" = "aarch64" ] || [ "$bazzite_arch" = "arm64" ]; then
      __arch_not_supported "Bazzite does not support arm64"
    else
      iso_url="$LATEST_ISO_BAZZITE_URL/${LATEST_ISO_BAZZITE_FLAVOR:-bazzite-stable}-amd64.iso"
      __latest_iso "$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  cachy)
    shift 1
    local cachy_type=""
    cachy_type="$1"
    if [ "$cachy_type" = "server" ]; then
      shift 1
      printf_yellow "CachyOS Server Edition is coming soon (expected 2026)"
      printf_cyan "See: https://cachyos.org/blog/2025-christmas-new-year/"
      statusCode=$((1 + $statusCode))
    else
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/cachy.iso"
      real_url="${LATEST_ISO_CACHYOS_URL//\/best_release.json/}"
      iso_url="$(__curl "$LATEST_ISO_CACHYOS_URL" | jq -rc '.release|.url' | __sed 's|/download$||g' | __grep -i "$LATEST_ISO_CACHY_FLAVOR")"
      __latest_iso "$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  centos)
    shift 1
    local centos_arch=""
    centos_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "centos")"
    printf_red "This should be avoided unless you have a good reason"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/centos.iso"
    real_url="$LATEST_ISO_CENTOS_URL"
    iso_url="${LATEST_ISO_CENTOS_RELEASE:-$(__curl "$LATEST_ISO_CENTOS_URL" | __strip_tags | __sort_v | __strip_url)}/isos/$centos_arch"
    iso_url_filename="$(__curl "$LATEST_ISO_CENTOS_URL/$iso_url" | __grep -i "$LATEST_ISO_CENTOS_FLAVOR" | __strip_tags | __strip_iso || false)"
    [ -n "$iso_url_filename" ] || iso_url_filename="$(__curl "$LATEST_ISO_CENTOS_URL/$iso_url" | __strip_tags | __strip_iso)"
    __latest_iso "$LATEST_ISO_CENTOS_URL/$iso_url/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  chimera)
    shift 1
    local chimera_arch=""
    chimera_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "chimera")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/chimera.iso"
    real_url="$LATEST_ISO_CHIMERA_URL"
    iso_url="$(__curl "$LATEST_ISO_CHIMERA_URL/" | __strip_href | __grep -i "chimera-linux-${chimera_arch}.*-${LATEST_ISO_CHIMERA_FLAVOR:-gnome}\.iso$" | sort -rV | head -n1)"
    __latest_iso "$LATEST_ISO_CHIMERA_URL/$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  clear)
    shift 1
    # Clear Linux OS was discontinued on July 18, 2025
    # See: https://www.clearlinux.org/
    printf_red "Clear Linux OS has been discontinued (July 18, 2025)"
    printf_red "The download infrastructure is no longer available"
    printf_yellow "Consider using an alternative distribution:"
    printf_yellow "  - Fedora (similar performance focus)"
    printf_yellow "  - openSUSE Tumbleweed (rolling release)"
    printf_yellow "  - Arch Linux (rolling release)"
    statusCode=$((1 + $statusCode))
    ;;
  debian)
    shift 1
    local debian_arch="" debian_type="" debian_url=""
    debian_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "debian")"
    debian_type="$1"
    if [ "$debian_type" = "server" ]; then
      shift 1
      # Server/netinst images from cdimage.debian.org
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/debian-server.iso"
      debian_url="https://cdimage.debian.org/cdimage/release/current/$debian_arch/iso-cd"
      real_url="$debian_url"
      iso_url="$(__curl "$debian_url" | __strip_tags | __grep "netinst" | __grep -i "$debian_arch" | __strip_iso)"
      iso_url_filename="$debian_url/$iso_url"
    else
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/debian.iso"
      real_url="$LATEST_ISO_DEBIAN_URL/$debian_arch/${LATEST_ISO_DEBIAN_FLAVOR}"
      iso_url="$(__curl "$LATEST_ISO_DEBIAN_URL/$debian_arch/${LATEST_ISO_DEBIAN_FLAVOR}" | __strip_tags | __grep -i ".iso$" | __strip_iso)"
      iso_url_filename="$LATEST_ISO_DEBIAN_URL/$debian_arch/${LATEST_ISO_DEBIAN_FLAVOR}/$iso_url"
    fi
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  endeavour)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/endeavour.iso"
    real_url="$LATEST_ISO_ENDEAVOUR_URL"
    iso_url="$(__curl "$LATEST_ISO_ENDEAVOUR_URL" | __tr_split | __grep 'mirrors.gigenet.com' | __strip_iso)"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  fedora)
    shift 1
    local fedora_arch=""
    fedora_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "fedora")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/fedora.iso"
    real_url="$LATEST_ISO_FEDORA_URL"
    release="$(__curl "$LATEST_ISO_FEDORA_URL" | __sort_v | __strip_tags | head -n1)"
    iso_url_filename="$(__curl "$LATEST_ISO_FEDORA_URL/$release/Spins/$fedora_arch/iso" | __grep -i "$LATEST_ISO_FEDORA_FLAVOR" | __strip_tags)"
    url="$LATEST_ISO_FEDORA_URL/$release/Spins/$fedora_arch/iso/$iso_url_filename"
    __latest_iso "$url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  flatcar)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/flatcar.iso"
    real_url="$LATEST_ISO_FLATCAR_URL"
    __latest_iso "$LATEST_ISO_FLATCAR_URL/flatcar_production_iso_image.iso" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  garuda)
    shift 1
    local garuda_arch=""
    garuda_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "garuda")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/garuda.iso"
    real_url="$LATEST_ISO_GARUDA_URL/$LATEST_ISO_GARUDA_FLAVOR"
    __latest_iso "$LATEST_ISO_GARUDA_URL/$LATEST_ISO_GARUDA_FLAVOR/latest.iso" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  gentoo)
    shift 1
    local gentoo_arch=""
    gentoo_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "gentoo")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/gentoo.iso"
    real_url="https://distfiles.gentoo.org/releases/$gentoo_arch/autobuilds/current-livegui-$gentoo_arch"
    iso_url="https://distfiles.gentoo.org/releases/$gentoo_arch/autobuilds/current-livegui-$gentoo_arch"
    iso_url_filename="$(__curl "$iso_url" | __strip_href | __strip_iso)"
    __latest_iso "$iso_url/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  kali)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/kali.iso"
    real_url="$LATEST_ISO_KALI_URL"
    iso_file="$LATEST_ISO_KALI_URL/$(__curl "$LATEST_ISO_KALI_URL" | __strip_href | __grep "$LATEST_ISO_KALI_FLAVOR" | __strip_iso)"
    __latest_iso "$iso_file" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  manjaro)
    shift 1
    local manjaro_arch=""
    manjaro_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "manjaro")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/manjaro.iso"
    if [ "$manjaro_arch" = "aarch64" ] || [ "$manjaro_arch" = "arm64" ]; then
      # Manjaro ARM only provides .img files (not ISOs) - not compatible with multiboot/VMs
      __arch_not_supported "Manjaro does not support arm64 (see manjaro.org/download/#ARM for ARM builds)"
    else
      # x86_64 uses SourceForge
      real_url="https://sourceforge.net/projects/manjarolinux/files/$LATEST_ISO_MANJARO_FLAVOR/"
      iso_url="$(__sourceforge "manjarolinux" "$LATEST_ISO_MANJARO_FLAVOR" "^[0-9]+\.")"
      __latest_iso "$iso_url" "$ISOFILE" ""
      statusCode=$(($? + $statusCode))
    fi
    ;;
  nixos)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/nixos.iso"
    real_url="https://github.com/nix-community/nixos-images/releases/latest"
    iso_url="$(__github "nix-community/nixos-images" "linux.*\.iso")"
    __latest_iso "$iso_url" "$ISOFILE" ""
    statusCode=$(($? + $statusCode))
    ;;
  nobara)
    shift 1
    local nobara_arch=""
    nobara_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "nobara")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/nobara.iso"
    real_url="https://nobaraproject.org/download-nobara/"
    if [ "$nobara_arch" = "aarch64" ] || [ "$nobara_arch" = "arm64" ]; then
      __arch_not_supported "Nobara does not support arm64"
    else
      iso_url="$(__curl "https://nobaraproject.org/download-nobara/" | __grep -oP 'https://[^"]*\.iso' | __grep -i "${LATEST_ISO_NOBARA_FLAVOR:-Official}-[0-9]" | sort -rV | head -n1)"
      __latest_iso "$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  opensuse)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/opensuse.iso"
    real_url="$LATEST_ISO_OPENSUSE_URL"
    __latest_iso "$LATEST_ISO_OPENSUSE_URL" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  parrot)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/parrot.iso"
    real_url="$LATEST_ISO_PARROT_URL"
    release="$(__curl "$LATEST_ISO_PARROT_URL" | __sort_v | __grep -vi '[a-z]' | head -n1)"
    iso_url_filename="$(__curl "$LATEST_ISO_PARROT_URL/$release" | __strip_href | __grep -i "$LATEST_ISO_PARROT_FLAVOR" | __strip_iso)"
    iso_url="$LATEST_ISO_PARROT_URL/$release/$iso_url_filename"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  peppermint)
    shift 1
    local peppermint_arch="" peppermint_pattern=""
    peppermint_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "peppermint")"
    # Map arch to peppermint naming: amd64->64, i386->32
    case "$peppermint_arch" in
    amd64) peppermint_pattern="Debian-64" ;;
    i386) peppermint_pattern="Debian-32" ;;
    *) peppermint_pattern="Debian-64" ;;
    esac
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/peppermint.iso"
    real_url="$LATEST_ISO_PEPPERMINT_URL"
    iso_url_filename="$(__curl "$LATEST_ISO_PEPPERMINT_URL/" | __strip_tags | __grep -E "$peppermint_pattern.iso" | __strip_iso)"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  photon)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/photon.iso"
    real_url="$LATEST_ISO_PHOTON_URL"
    __latest_iso "$LATEST_ISO_PHOTON_URL" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  popos | pop)
    shift 1
    local popos_arch=""
    popos_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "popos")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/popos.iso"
    real_url="$LATEST_ISO_POPOS_URL/${LATEST_ISO_POPOS_VERSION:-22.04}/${LATEST_ISO_POPOS_FLAVOR:-intel}"
    iso_url="$(__curl "$real_url?arch=$popos_arch" | jq -r '.url')"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  redcore)
    shift 1
    local redcore_arch=""
    redcore_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "redcore")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/redcore.iso"
    real_url="$LATEST_ISO_REDCORE_URL"
    iso_url="$LATEST_ISO_REDCORE_URL/$(__curl "$LATEST_ISO_REDCORE_URL/" | __strip_tags | __grep -E "$redcore_arch" | __strip_iso)"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  rocky)
    shift 1
    local rocky_arch=""
    rocky_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "rocky")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/rocky.iso"
    real_url="$LATEST_ISO_ROCKY_URL"
    iso_url="${LATEST_ISO_ROCKY_RELEASE:-$(__curl "$LATEST_ISO_ROCKY_URL" | __strip_tags | __sort_v | __strip_url)}/isos/$rocky_arch"
    iso_url_filename="$(__curl "$LATEST_ISO_ROCKY_URL/$iso_url" | __grep -i "$LATEST_ISO_ROCKY_FLAVOR" | __strip_tags | __strip_iso || false)"
    [ -n "$iso_url_filename" ] || iso_url_filename="$(__curl "$LATEST_ISO_ROCKY_URL/$iso_url" | __strip_tags | __strip_iso)"
    __latest_iso "$LATEST_ISO_ROCKY_URL/$iso_url/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  solus)
    shift 1
    local solus_arch="" solus_release=""
    solus_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "solus")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/solus.iso"
    real_url="$LATEST_ISO_SOLUS_URL"
    if [ "$solus_arch" = "aarch64" ] || [ "$solus_arch" = "arm64" ]; then
      __arch_not_supported "Solus does not support arm64"
    else
      solus_release="$(__curl "$LATEST_ISO_SOLUS_URL/" | __strip_href | __sed 's|^\./||g;s|/$||g' | __grep -E '^[0-9]{4}-[0-9]{2}-[0-9]{2}$' | sort -rV | head -n1)"
      iso_url="$(__curl "$LATEST_ISO_SOLUS_URL/$solus_release/" | __strip_href | __sed 's|^\./||g' | __grep -i "Solus-${LATEST_ISO_SOLUS_FLAVOR:-Xfce}-Release.*\.iso$" | head -n1)"
      __latest_iso "$LATEST_ISO_SOLUS_URL/$solus_release/$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  tiny)
    shift 1
    local tiny_arch="" tiny_version="" tiny_iso="" tiny_versions=""
    tiny_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "tinycore")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/tiny.iso"
    # TinyCore only provides x86 and x86_64 ISOs
    if [ "$tiny_arch" = "aarch64" ] || [ "$tiny_arch" = "arm64" ]; then
      __arch_not_supported "TinyCore does not support arm64"
    else
      real_url="rsync://repo.tinycorelinux.net/tc"
      # Find latest version that has actual ISOs (iterate through versions)
      tiny_versions="$(__rsync_list "rsync://repo.tinycorelinux.net/tc/" | awk '{print $NF}' | __grep -E '^[0-9]+\.x$' | sort -rV)"
      for tiny_version in $tiny_versions; do
        # Find largest *Core*.iso (CorePlus for x86, TinyCorePure64 for x86_64, etc.)
        # Use versioned files (not -current symlinks) for proper filesize detection
        tiny_iso="$(__rsync_list "rsync://repo.tinycorelinux.net/tc/$tiny_version/$tiny_arch/release/" | __grep_size_large 'Core.*[0-9]\+\.[0-9]\+\.iso$' | __awk_nf)"
        [ -n "$tiny_iso" ] && break
      done
      if [ -n "$tiny_iso" ]; then
        iso_url_filename="rsync://repo.tinycorelinux.net/tc/$tiny_version/$tiny_arch/release/$tiny_iso"
        __latest_iso "$iso_url_filename" "$ISOFILE"
        statusCode=$(($? + $statusCode))
      else
        printf_red "Could not find TinyCore ISO for $tiny_arch architecture"
        statusCode=$((1 + $statusCode))
      fi
    fi
    ;;
  ubuntu)
    shift 1
    local ubuntu_version="" ubuntu_iso="" ubuntu_arch="" ubuntu_base_url="" ubuntu_type="" ubuntu_pattern=""
    ubuntu_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "ubuntu")"
    ubuntu_type="$1"
    if [ "$ubuntu_type" = "server" ]; then
      shift 1
      # Ubuntu Server ISOs
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/ubuntu-server.iso"
      ubuntu_pattern="live-server"
      # Server ISOs are at releases.ubuntu.com (amd64) or cdimage.ubuntu.com (arm64)
      if [ "$ubuntu_arch" = "arm64" ]; then
        ubuntu_base_url="https://cdimage.ubuntu.com/ubuntu-server"
      else
        ubuntu_base_url="https://releases.ubuntu.com"
      fi
    else
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/ubuntu.iso"
      ubuntu_pattern="desktop"
      # Desktop: Use cdimage for arm64 (xubuntu only has amd64), otherwise use configured URL
      if [ "$ubuntu_arch" = "arm64" ]; then
        ubuntu_base_url="https://cdimage.ubuntu.com/releases"
      else
        ubuntu_base_url="$LATEST_ISO_UBUNTU_URL"
      fi
    fi
    real_url="$ubuntu_base_url"
    # Find latest version that has actual ISO files (not development releases)
    for ubuntu_version in $(__curl "$ubuntu_base_url" | __sort_v); do
      ubuntu_iso="$(__curl "$ubuntu_base_url/$ubuntu_version/release/" | __strip_tags | __grep "$ubuntu_pattern" | __grep "$ubuntu_arch" | __strip_iso)"
      [ -n "$ubuntu_iso" ] && break
    done
    iso_url="$ubuntu_base_url/$ubuntu_version/release"
    iso_url_filename="$iso_url/$ubuntu_iso"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  vanilla)
    shift 1
    local vanilla_arch=""
    vanilla_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "vanilla")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/vanilla.zip"
    real_url="$LATEST_ISO_VANILLA_URL"
    if [ "$vanilla_arch" = "arm64" ]; then
      __arch_not_supported "Vanilla OS does not support arm64"
    else
      iso_url="$LATEST_ISO_VANILLA_URL/latest.zip"
      __latest_iso "$iso_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  void)
    shift 1
    local void_arch=""
    void_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "void")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/voidlinux.iso"
    real_url="$LATEST_ISO_VOID_URL"
    # Use word boundary pattern to avoid x86 matching x86_64
    iso_url="$LATEST_ISO_VOID_URL/$(__curl "$LATEST_ISO_VOID_URL" | __strip_tags | __grep -v 'musl' | __grep -E "[-_]${void_arch}[-_.]" | __grep "$LATEST_ISO_VOID_FLAVOR" | __strip_iso)"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  macos | mac | osx)
    shift 1
    local macos_arch="" macos_url="" macos_dmg="" macos_iso=""
    macos_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "macos")"
    if [ "$macos_arch" = "arm64e" ]; then
      macos_dmg="$LATEST_ISO_DOWNLOAD_DIR/mac.arm64.dmg"
      macos_iso="$LATEST_ISO_DOWNLOAD_DIR/mac.arm64.iso"
    else
      macos_dmg="$LATEST_ISO_DOWNLOAD_DIR/mac.amd64.dmg"
      macos_iso="$LATEST_ISO_DOWNLOAD_DIR/mac.amd64.iso"
    fi
    ISOFILE="$macos_dmg"
    real_url="$LATEST_ISO_MACOS_CATALOG_URL"
    printf_cyan "Fetching macOS catalog from Apple..."
    macos_url="$(__get_macos_iso "$macos_arch")"
    if [ -n "$macos_url" ]; then
      printf_cyan "Found macOS $MACOS_VERSION recovery image"
      __latest_iso "$macos_url" "$ISOFILE"
      statusCode=$(($? + $statusCode))
      # Convert DMG to ISO if dmg2img is available (Linux)
      if [ "$statusCode" -eq 0 ] && [ -f "$macos_dmg" ]; then
        if command -v dmg2img &>/dev/null; then
          printf_cyan "Converting DMG to ISO..."
          if dmg2img "$macos_dmg" "$macos_iso" &>/dev/null; then
            rm -f "$macos_dmg"
            printf_green "Converted to: $macos_iso"
            ISOFILE="$macos_iso"
          else
            printf_yellow "Conversion failed, keeping DMG format"
          fi
        elif command -v hdiutil &>/dev/null; then
          # macOS native conversion
          printf_cyan "Converting DMG to ISO..."
          local macos_cdr="${macos_iso%.iso}.cdr"
          if hdiutil convert "$macos_dmg" -format UDTO -o "$macos_cdr" &>/dev/null; then
            mv "$macos_cdr" "$macos_iso"
            rm -f "$macos_dmg"
            printf_green "Converted to: $macos_iso"
            ISOFILE="$macos_iso"
          else
            printf_yellow "Conversion failed, keeping DMG format"
          fi
        fi
      fi
    else
      printf_red "No macOS recovery image found for $macos_arch"
      statusCode=$((1 + $statusCode))
    fi
    ;;
  openvz)
    shift 1
    local openvz_arch=""
    openvz_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "openvz")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/openvz.iso"
    real_url="$LATEST_ISO_OPENVZ_URL"
    iso_url="$(__curl "$LATEST_ISO_OPENVZ_URL" | __sort_v | __strip_url)"
    iso_url_filename="$(__curl "$LATEST_ISO_OPENVZ_URL/$iso_url/$openvz_arch/iso/" | __strip_tags | __strip_iso)"
    __latest_iso "$LATEST_ISO_OPENVZ_URL/$iso_url/$openvz_arch/iso/$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  xcp-ng)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/xcp-ng.iso"
    xcpVersion="$(__curl 'https://updates.xcp-ng.org/isos' | __grep 'href="[0-9]' | __sort_rv | __strip_tags | head -n1)"
    iso_url_filename="$(__curl "https://updates.xcp-ng.org/isos/$xcpVersion" | __grep -v 'netinstall' | __strip_tags | __sort_rv | __strip_iso)"
    iso_url="https://updates.xcp-ng.org/isos/$xcpVersion/$iso_url_filename"
    #echo "$iso_url" "$ISOFILE"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  proxmox)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/proxmox.iso"
    real_url="$LATEST_ISO_PROXMOX_URL"
    iso_url="$(__curl "$LATEST_ISO_PROXMOX_URL" | __sort_rv | __grep -i 'proxmox-ve_' | __strip_iso)"
    __latest_iso "$LATEST_ISO_PROXMOX_URL/$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  freenas)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/freenas.iso"
    real_url="$LATEST_ISO_FREENAS_URL"
    iso_url_filename="$(__curl "$LATEST_ISO_FREENAS_URL" | __strip_href | __strip_iso)"
    __latest_iso "$iso_url_filename" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  pfsense)
    shift 1
    local pfsense_arch=""
    pfsense_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "pfsense")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/pfsense.iso"
    # pfSense only provides amd64 ISOs
    if [ "$pfsense_arch" = "aarch64" ] || [ "$pfsense_arch" = "arm64" ]; then
      __arch_not_supported "pfSense does not support arm64"
    else
      real_url="$LATEST_ISO_PFSENSE_URL"
      iso_url_filename="$(__curl "$LATEST_ISO_PFSENSE_URL" | __strip_tags | __grep '\.iso' | __iso_is_archive | __sort_rv)"
      __latest_iso "$LATEST_ISO_PFSENSE_URL/$iso_url_filename" "$ISOFILE" "$LATEST_ISO_TEMP_DIR/pfsense/$iso_url_filename"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  heads)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_LIVE_DIR/heads.iso"
    real_url="$LATEST_ISO_HEADS_URL"
    iso_file="$(__parse_html "$LATEST_ISO_HEADS_URL" "heads-" "" "nojs")"
    iso_url="${LATEST_ISO_HEADS_URL}/${iso_file}"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  tails)
    shift 1
    local tails_arch=""
    tails_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "tails")"
    ISOFILE="$LATEST_ISO_DOWNLOAD_LIVE_DIR/tails.iso"
    # Tails only provides amd64 ISOs
    if [ "$tails_arch" = "aarch64" ] || [ "$tails_arch" = "arm64" ]; then
      __arch_not_supported "Tails does not support arm64"
    else
      real_url="$LATEST_ISO_TAILS_URL"
      __latest_iso "$LATEST_ISO_TAILS_URL" "$ISOFILE"
      statusCode=$(($? + $statusCode))
    fi
    ;;
  clonezilla)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_UTILS_DIR/clonezilla.iso"
    real_url="https://sourceforge.net/projects/clonezilla/files/clonezilla_live_stable"
    iso_url="$(__sourceforge "clonezilla" "clonezilla_live_stable")"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  gparted)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_UTILS_DIR/gparted.iso"
    real_url="https://sourceforge.net/projects/gparted/files/gparted-live-stable"
    iso_url="$(__sourceforge "gparted" "gparted-live-stable")"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  hirens)
    shift 1
    ISOFILE="$LATEST_ISO_DOWNLOAD_UTILS_DIR/hirens.iso"
    real_url="https://www.hirensbootcd.org/download"
    iso_url="https://www.hirensbootcd.org/files/$(__curl "https://www.hirensbootcd.org/download" | __get_link | __grep '.iso')"
    __latest_iso "$iso_url" "$ISOFILE"
    statusCode=$(($? + $statusCode))
    ;;
  server)
    # Server edition downloads: server debian, server ubuntu, server cachy
    shift 1
    local server_distro="${1:-}"
    [ -n "$server_distro" ] && shift 1
    case "$server_distro" in
    debian)
      local debian_arch="" debian_url=""
      debian_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "debian")"
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/debian-server.iso"
      debian_url="https://cdimage.debian.org/cdimage/release/current/$debian_arch/iso-cd"
      real_url="$debian_url"
      iso_url="$(__curl "$debian_url" | __strip_tags | __grep "netinst" | __grep -i "$debian_arch" | __strip_iso)"
      iso_url_filename="$debian_url/$iso_url"
      __latest_iso "$iso_url_filename" "$ISOFILE"
      statusCode=$(($? + $statusCode))
      ;;
    ubuntu)
      local ubuntu_version="" ubuntu_iso="" ubuntu_arch="" ubuntu_base_url=""
      ubuntu_arch="$(__distro_arch_schema "$LATEST_ISO_SYSTEM_ARCH" "ubuntu")"
      ISOFILE="$LATEST_ISO_DOWNLOAD_DIR/ubuntu-server.iso"
      if [ "$ubuntu_arch" = "arm64" ]; then
        ubuntu_base_url="https://cdimage.ubuntu.com/ubuntu-server/releases"
        for ubuntu_version in $(__curl "$ubuntu_base_url" | __strip_tags | __grep -oE '[0-9]+\.[0-9]+' | sort -ruV); do
          ubuntu_iso="$(__curl "$ubuntu_base_url/$ubuntu_version/release/" | __strip_tags | __grep "live-server" | __grep "$ubuntu_arch" | __grep "\.iso$" | head -n1)"
          [ -n "$ubuntu_iso" ] && { iso_url="$ubuntu_base_url/$ubuntu_version/release"; break; }
        done
      else
        ubuntu_base_url="https://releases.ubuntu.com"
        for ubuntu_version in $(__curl "$ubuntu_base_url" | __strip_tags | __grep -oE '[0-9]+\.[0-9]+' | sort -ruV); do
          ubuntu_iso="$(__curl "$ubuntu_base_url/$ubuntu_version" | __strip_tags | __grep "live-server" | __grep "$ubuntu_arch" | __grep "\.iso$" | head -n1)"
          [ -n "$ubuntu_iso" ] && { iso_url="$ubuntu_base_url/$ubuntu_version"; break; }
        done
      fi
      real_url="$ubuntu_base_url"
      iso_url_filename="$iso_url/$ubuntu_iso"
      __latest_iso "$iso_url_filename" "$ISOFILE"
      statusCode=$(($? + $statusCode))
      ;;
    cachy)
      printf_yellow "CachyOS Server Edition is coming soon (expected 2026)"
      printf_cyan "See: https://cachyos.org/blog/2025-christmas-new-year/"
      statusCode=$((1 + $statusCode))
      ;;
    *)
      printf_red "Usage: $APPNAME server [debian|ubuntu|cachy]"
      statusCode=$((1 + $statusCode))
      ;;
    esac
    ;;
  *) printf_red "$1 is not a valid option" ;;
  esac
  exitCode=$statusCode
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_numbers() {
  printf '%s' "$1" | __sed 's/[^0-9]*//g' | tr -d '\n' | __grep '^' 3>/dev/null || printf '0'
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__progress_bar() {
  local current="$1"
  local total="$2"
  local width="${COLUMNS:-80}"
  local bar_width=$((width - 30))
  [ $bar_width -lt 10 ] && bar_width=10
  [ $bar_width -gt 50 ] && bar_width=50

  local percent=0
  [ "$total" -gt 0 ] && percent=$((current * 100 / total))
  [ $percent -gt 100 ] && percent=100

  local filled=$((bar_width * percent / 100))
  local empty=$((bar_width - filled))

  # Format sizes
  local current_fmt="" total_fmt=""
  if command -v numfmt &>/dev/null; then
    current_fmt="$(numfmt --to=iec-i --suffix=B "$current" 2>/dev/null | __sed 's|iB$||g')"
    total_fmt="$(numfmt --to=iec-i --suffix=B "$total" 2>/dev/null | __sed 's|iB$||g')"
  elif command -v gnumfmt &>/dev/null; then
    current_fmt="$(gnumfmt --to=iec-i --suffix=B "$current" 2>/dev/null | __sed 's|iB$||g')"
    total_fmt="$(gnumfmt --to=iec-i --suffix=B "$total" 2>/dev/null | __sed 's|iB$||g')"
  else
    current_fmt="$current"
    total_fmt="$total"
  fi

  # Build progress bar
  local bar_fill="" bar_empty=""
  for ((i = 0; i < filled; i++)); do bar_fill+="â–ˆ"; done
  for ((i = 0; i < empty; i++)); do bar_empty+="â–‘"; done

  # Print with colors (cyan for bar, green for filled)
  printf '\r%b[%b%s%b%s%b] %3d%% %s/%s%b ' \
    "$(tput setaf 6 2>/dev/null)" \
    "$(tput setaf 2 2>/dev/null)" "$bar_fill" \
    "$(tput setaf 8 2>/dev/null)" "$bar_empty" \
    "$(tput setaf 5 2>/dev/null)" "$percent" "$current_fmt" "$total_fmt" \
    "$(tput sgr0 2>/dev/null)"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__download_cleanup() {
  local tmp_file="$1"
  local pid="$2"
  printf '\n'
  printf_yellow "Download interrupted by user"
  # Kill curl process if still running
  if [ -n "$pid" ] && kill -0 "$pid" 2>/dev/null; then
    kill "$pid" 2>/dev/null
    wait "$pid" 2>/dev/null
  fi
  # Remove incomplete temp file
  [ -f "$tmp_file" ] && rm -f "$tmp_file"
  export LATEST_ISO_CURL_ERROR="interrupted"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__download_with_progress() {
  local url="$1"
  local output="$2"
  local total_size="$3"
  local current_size=0
  local curl_pid=""
  local resume_flag=""

  # Check if partial file exists for resume
  if [ -f "$output" ]; then
    current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
    if [ "$current_size" -gt 0 ]; then
      resume_flag="-C -"
      local resume_size=""
      if command -v numfmt &>/dev/null; then
        resume_size="$(numfmt --to=iec-i --suffix=B "$current_size" 2>/dev/null | __sed 's|iB$||g')"
      elif command -v gnumfmt &>/dev/null; then
        resume_size="$(gnumfmt --to=iec-i --suffix=B "$current_size" 2>/dev/null | __sed 's|iB$||g')"
      else
        resume_size="${current_size}B"
      fi
      printf_cyan "Resuming download from $resume_size..."
    fi
  fi

  # Start curl in background with resume support
  # shellcheck disable=SC2086
  \curl -q -LSsf --fail-early --connect-timeout "${LATEST_ISO_CONNECT_TIMEOUT:-2}" --retry "${LATEST_ISO_RETRY_COUNT:-5}" --retry-delay "${LATEST_ISO_RETRY_DELAY:-3}" $resume_flag -o "$output" "$url" 2>/dev/null &
  curl_pid=$!

  # Trap CTRL+C to clean up
  trap '__download_cleanup "$output" "$curl_pid"; return 130' INT TERM

  # Monitor progress
  while kill -0 $curl_pid 2>/dev/null; do
    if [ -f "$output" ]; then
      current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
      __progress_bar "$current_size" "$total_size"
    fi
    sleep 0.5
  done

  # Reset trap
  trap - INT TERM

  # Wait for curl to finish and get exit code
  wait $curl_pid
  local exit_code=$?

  # Final progress update
  if [ -f "$output" ]; then
    current_size=$(stat -c%s "$output" 2>/dev/null || stat -f%z "$output" 2>/dev/null || echo 0)
    __progress_bar "$current_size" "$total_size"
  fi
  printf '\n'

  if [ $exit_code -eq 0 ] && [ -f "$output" ]; then
    return 0
  else
    # Keep partial file for resume on retry (caller handles cleanup on final failure)
    export LATEST_ISO_CURL_ERROR="$exit_code"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
LATEST_ISO_CONFIG_FILE="${LATEST_ISO_CONFIG_FILE:-settings.conf}"
LATEST_ISO_CONFIG_DIR="${LATEST_ISO_CONFIG_DIR:-$HOME/.config/myscripts/latest-iso}"
LATEST_ISO_CONFIG_BACKUP_DIR="${LATEST_ISO_CONFIG_BACKUP_DIR:-$HOME/.local/share/myscripts/latest-iso/backups}"
LATEST_ISO_LOG_DIR="${LATEST_ISO_LOG_DIR:-$HOME/.local/log/latest-iso}"
LATEST_ISO_TEMP_DIR="${LATEST_ISO_TEMP_DIR:-$HOME/.local/tmp/system_scripts/latest-iso}"
LATEST_ISO_CACHE_DIR="${LATEST_ISO_CACHE_DIR:-$HOME/.cache/latest-iso}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
LATEST_ISO_OUTPUT_COLOR_1="${LATEST_ISO_OUTPUT_COLOR_1:-33}"
LATEST_ISO_OUTPUT_COLOR_2="${LATEST_ISO_OUTPUT_COLOR_2:-5}"
LATEST_ISO_OUTPUT_COLOR_GOOD="${LATEST_ISO_OUTPUT_COLOR_GOOD:-2}"
LATEST_ISO_OUTPUT_COLOR_ERROR="${LATEST_ISO_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
LATEST_ISO_NOTIFY_ENABLED="${LATEST_ISO_NOTIFY_ENABLED:-yes}"
LATEST_ISO_GOOD_NAME="${LATEST_ISO_GOOD_NAME:-Great:}"
LATEST_ISO_ERROR_NAME="${LATEST_ISO_ERROR_NAME:-Error:}"
LATEST_ISO_GOOD_MESSAGE="${LATEST_ISO_GOOD_MESSAGE:-No errors reported}"
LATEST_ISO_ERROR_MESSAGE="${LATEST_ISO_ERROR_MESSAGE:-Errors were reported}"
LATEST_ISO_NOTIFY_CLIENT_NAME="${LATEST_ISO_NOTIFY_CLIENT_NAME:-$APPNAME}"
LATEST_ISO_NOTIFY_CLIENT_ICON="${LATEST_ISO_NOTIFY_CLIENT_ICON:-notification-new}"
LATEST_ISO_NOTIFY_CLIENT_URGENCY="${LATEST_ISO_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Network Settings (timeouts, retries)
LATEST_ISO_CONNECT_TIMEOUT="${LATEST_ISO_CONNECT_TIMEOUT:-2}"
LATEST_ISO_MAX_TIMEOUT="${LATEST_ISO_MAX_TIMEOUT:-5}"
LATEST_ISO_RETRY_COUNT="${LATEST_ISO_RETRY_COUNT:-5}"
LATEST_ISO_RETRY_DELAY="${LATEST_ISO_RETRY_DELAY:-3}"
LATEST_ISO_DOWNLOAD_RETRIES="${LATEST_ISO_DOWNLOAD_RETRIES:-2}"
LATEST_ISO_DOWNLOAD_RETRY_DELAY="${LATEST_ISO_DOWNLOAD_RETRY_DELAY:-5}"
LATEST_ISO_HEALTH_RETRY="${LATEST_ISO_HEALTH_RETRY:-1}"
LATEST_ISO_HEALTH_TIMEOUT="${LATEST_ISO_HEALTH_TIMEOUT:-2}"
LATEST_ISO_FILESIZE_TOLERANCE="${LATEST_ISO_FILESIZE_TOLERANCE:-5}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
LATEST_ISO_DOWNLOAD_DIR="${LATEST_ISO_DOWNLOAD_DIR:-$HOME/Downloads/ISOs/OS}"
LATEST_ISO_DOWNLOAD_LIVE_DIR="${LATEST_ISO_DOWNLOAD_LIVE_DIR:-$HOME/Downloads/ISOs/Live}"
LATEST_ISO_DOWNLOAD_UTILS_DIR="${LATEST_ISO_DOWNLOAD_UTILS_DIR:-$HOME/Downloads/ISOs/Utils}"
LATEST_ISO_ALMA_URL="${LATEST_ISO_ALMA_URL:-http://mirror.vtti.vt.edu/almalinux}"
LATEST_ISO_ALPINE_URL="${LATEST_ISO_ALPINE_URL:-https://dl-cdn.alpinelinux.org/alpine/latest-stable/releases}"
LATEST_ISO_ARCHCRAFT_URL="${LATEST_ISO_ARCHCRAFT_URL:-https://sourceforge.net/projects/archcraft}"
LATEST_ISO_ARCOLINUX_URL="${LATEST_ISO_ARCOLINUX_URL:-https://ftp.belnet.be/arcolinux/iso}"
LATEST_ISO_ARCHLINUX_URL="${LATEST_ISO_ARCHLINUX_URL:-http://mirror.siena.edu/archlinux/iso/latest}"
LATEST_ISO_BLACKARCH_URL="${LATEST_ISO_BLACKARCH_URL:-https://ftp.halifax.rwth-aachen.de/blackarch/iso}"
LATEST_ISO_CACHYOS_URL="${LATEST_ISO_CACHYOS_URL:-https://sourceforge.net/projects/cachyos-arch/best_release.json}"
LATEST_ISO_CENTOS_URL="${LATEST_ISO_CENTOS_URL:-https://archive.kernel.org/centos-vault/centos}"
# Clear Linux was discontinued July 18, 2025 - URL no longer functional
LATEST_ISO_CLEAR_URL="${LATEST_ISO_CLEAR_URL:-https://cdn.download.clearlinux.org/releases/}"
LATEST_ISO_DEBIAN_URL="${LATEST_ISO_DEBIAN_URL:-https://cdimage.debian.org/cdimage/release/current}"
LATEST_ISO_ENDEAVOUR_URL="${LATEST_ISO_ENDEAVOUR_URL:-https://endeavouros.com}"
LATEST_ISO_FEDORA_URL="${LATEST_ISO_FEDORA_URL:-https://fedora.mirrorservice.org/fedora/linux/releases}"
LATEST_ISO_FLATCAR_URL="${LATEST_ISO_FLATCAR_URL:-https://stable.release.flatcar-linux.net/amd64-usr/current}"
LATEST_ISO_FREENAS_URL="${LATEST_ISO_FREENAS_URL:-https://www.truenas.com/download-truenas-community-edition}"
LATEST_ISO_GARUDA_URL="${LATEST_ISO_GARUDA_URL:-https://iso.builds.garudalinux.org/iso/latest/garuda}"
LATEST_ISO_HEADS_URL="${LATEST_ISO_HEADS_URL:-https://files.dyne.org/heads}"
LATEST_ISO_KALI_URL="${LATEST_ISO_KALI_URL:-https://cdimage.debian.org/mirror/kali.org/kali-images/current}"
LATEST_ISO_OPENSUSE_URL="${LATEST_ISO_OPENSUSE_URL:-https://download.opensuse.org/tumbleweed/iso/openSUSE-Tumbleweed-DVD-x86_64-Current.iso}"
LATEST_ISO_OPENVZ_URL="${LATEST_ISO_OPENVZ_URL:-https://download.openvz.org/virtuozzo/releases}"
LATEST_ISO_PARROT_URL="${LATEST_ISO_PARROT_URL:-https://mirror.math.princeton.edu/pub/parrot/iso}"
LATEST_ISO_PEPPERMINT_URL="${LATEST_ISO_PEPPERMINT_URL:-https://sourceforge.net/projects/peppermintos/files/isos/XFCE/}"
LATEST_ISO_PFSENSE_URL="${LATEST_ISO_PFSENSE_URL:-https://atxfiles.netgate.com/mirror/downloads}"
LATEST_ISO_PHOTON_URL="${LATEST_ISO_PHOTON_URL:-https://github.com/vmware/photon/wiki/Downloading-Photon-OS}"
LATEST_ISO_PROXMOX_URL="${LATEST_ISO_PROXMOX_URL:-http://download.proxmox.com/iso}"
LATEST_ISO_REDCORE_URL="${LATEST_ISO_REDCORE_URL:-https://mirror.math.princeton.edu/pub/redcorelinux/amd64/iso}"
LATEST_ISO_ROCKY_URL="${LATEST_ISO_ROCKY_URL:-https://download.rockylinux.org/pub/rocky}"
LATEST_ISO_UBUNTU_URL="${LATEST_ISO_UBUNTU_URL:-https://mirror.us.leaseweb.net/ubuntu-cdimage/xubuntu/releases}"
LATEST_ISO_VOID_URL="${LATEST_ISO_VOID_URL:-https://repo-default.voidlinux.org/live/current}"
LATEST_ISO_TAILS_URL="${LATEST_ISO_TAILS_URL:-https://tails.net/install/dvd/index.en.html}"
LATEST_ISO_TINYCORE_URL="${LATEST_ISO_TINYCORE_URL:-https://mirror.math.princeton.edu/pub/tinycorelinux}"
# New distros added as Clear Linux alternatives
LATEST_ISO_AERYN_URL="${LATEST_ISO_AERYN_URL:-https://cdn.aerynos.dev/isos}"
LATEST_ISO_BAZZITE_URL="${LATEST_ISO_BAZZITE_URL:-https://download.bazzite.gg}"
LATEST_ISO_CHIMERA_URL="${LATEST_ISO_CHIMERA_URL:-https://repo.chimera-linux.org/live/latest}"
LATEST_ISO_NOBARA_URL="${LATEST_ISO_NOBARA_URL:-https://nobara-images.nobaraproject.org}"
LATEST_ISO_POPOS_URL="${LATEST_ISO_POPOS_URL:-https://api.pop-os.org/builds}"
LATEST_ISO_SOLUS_URL="${LATEST_ISO_SOLUS_URL:-https://downloads.getsol.us/isos}"
LATEST_ISO_VANILLA_URL="${LATEST_ISO_VANILLA_URL:-https://download.vanillaos.org}"
LATEST_ISO_MACOS_CATALOG_URL="${LATEST_ISO_MACOS_CATALOG_URL:-https://swscan.apple.com/content/catalogs/others/index-15-14-13-12-10.16-10.15-10.14-10.13-10.12-10.11-10.10-10.9-mountainlion-lion-snowleopard-leopard.merged-1.sucatalog}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
LATEST_ISO_ALMA_RELEASE="${LATEST_ISO_ALMA_RELEASE:-9}"
LATEST_ISO_ROCKY_RELEASE="${LATEST_ISO_ROCKY_RELEASE:-9}"
LATEST_ISO_CENTOS_RELEASE="${LATEST_ISO_CENTOS_RELEASE:-7}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
LATEST_ISO_CENTOS_FLAVOR="${LATEST_ISO_CENTOS_FLAVOR:-dvd}"
LATEST_ISO_DEBIAN_FLAVOR="${LATEST_ISO_DEBIAN_FLAVOR:-iso-dvd}"
LATEST_ISO_ALPINE_FLAVOR="${LATEST_ISO_ALPINE_FLAVOR:-extended}"
LATEST_ISO_BLACKARCH_FLAVOR="${LATEST_ISO_BLACKARCH_FLAVOR:-slim}"
LATEST_ISO_ARCOLINUX_FLAVOR="${LATEST_ISO_ARCOLINUX_FLAVOR:-arconet}"
LATEST_ISO_VOID_FLAVOR="${LATEST_ISO_VOID_FLAVOR:-xfce}"
LATEST_ISO_KALI_FLAVOR="${LATEST_ISO_KALI_FLAVOR:-live}"
LATEST_ISO_RHEL_FLAVOR="${LATEST_ISO_RHEL_FLAVOR:-minimal}"
LATEST_ISO_ALMA_FLAVOR="${LATEST_ISO_ALMA_FLAVOR:-minimal}"
LATEST_ISO_FEDORA_FLAVOR="${LATEST_ISO_FEDORA_FLAVOR:-xfce}"
LATEST_ISO_GARUDA_FLAVOR="${LATEST_ISO_GARUDA_FLAVOR:-xfce}"
LATEST_ISO_ROCKY_FLAVOR="${LATEST_ISO_ROCKY_FLAVOR:-minimal}"
LATEST_ISO_CACHY_FLAVOR="${LATEST_ISO_CACHY_FLAVOR:-desktop}"
LATEST_ISO_MANJARO_FLAVOR="${LATEST_ISO_MANJARO_FLAVOR:-xfce}"
LATEST_ISO_PARROT_FLAVOR="${LATEST_ISO_PARROT_FLAVOR:-security}"
# New distro flavors - user prefers: xfce, gnome, kde/plasma
LATEST_ISO_BAZZITE_FLAVOR="${LATEST_ISO_BAZZITE_FLAVOR:-bazzite-stable}"
LATEST_ISO_CHIMERA_FLAVOR="${LATEST_ISO_CHIMERA_FLAVOR:-gnome}"
LATEST_ISO_NOBARA_FLAVOR="${LATEST_ISO_NOBARA_FLAVOR:-Official}"
LATEST_ISO_POPOS_FLAVOR="${LATEST_ISO_POPOS_FLAVOR:-intel}"
LATEST_ISO_POPOS_VERSION="${LATEST_ISO_POPOS_VERSION:-22.04}"
LATEST_ISO_SOLUS_FLAVOR="${LATEST_ISO_SOLUS_FLAVOR:-Xfce}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE" ] || [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE" ] && . "$LATEST_ISO_CONFIG_DIR/$LATEST_ISO_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$LATEST_ISO_LOG_DIR" ] || mkdir -p "$LATEST_ISO_LOG_DIR" |& __devnull
[ -d "$LATEST_ISO_TEMP_DIR" ] || mkdir -p "$LATEST_ISO_TEMP_DIR" |& __devnull
[ -d "$LATEST_ISO_CACHE_DIR" ] || mkdir -p "$LATEST_ISO_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - -
LATEST_ISO_TEMP_FILE="${LATEST_ISO_TEMP_FILE:-$(mktemp $LATEST_ISO_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$LATEST_ISO_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$LATEST_ISO_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$LATEST_ISO_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$LATEST_ISO_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$LATEST_ISO_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$LATEST_ISO_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom actions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS="C"
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",force,all,ask,filename:,arch:,release:,name:"
# - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY="aeryn,alma,alpine,arch,archcraft,arco,bazzite,blackarch,cachy,centos,chimera,clear,clonezilla,debian,endeavour,fedora,"
ARRAY+="flatcar,freenas,garuda,gentoo,gparted,heads,hirens,kali,macos,manjaro,nixos,nobara,opensuse,openvz,parrot,peppermint,"
ARRAY+="pfsense,photon,popos,proxmox,redcore,rocky,solus,tails,tiny,ubuntu,vanilla,void,xcp-ng"
# - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | __grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | __sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | __sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | __sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | __sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | __sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    LATEST_ISO_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    LATEST_ISO_DOWNLOAD_DIR="$2"
    [ -d "$LATEST_ISO_DOWNLOAD_DIR" ] || mkdir -p "$LATEST_ISO_DOWNLOAD_DIR" |& __devnull
    shift 2
    ;;
  --force)
    shift 1
    LATEST_ISO_FORCE_INST="true"
    ;;
  --all)
    shift 1
    RUN_ALL="true"
    ;;
  --ask)
    shift 1
    echo "$ARRAY"
    exit
    ;;
  -C)
    shift 1
    export LATEST_ISO_OVERWRITE="yes"
    ;;
  --filename)
    LATEST_ISO_FILENAME="$2"
    shift 2
    ;;
  --arch)
    LATEST_ISO_SYSTEM_ARCH="$2"
    shift 2
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Get directory from args
# set -- "$@"
# for arg in "$@"; do
# if [ -d "$arg" ]; then
# LATEST_ISO_CWD="$arg" && shift 1 && SET_NEW_ARGS=("$@") && break
# elif [ -f "$arg" ]; then
# LATEST_ISO_CWD="$(dirname "$arg" 2>/dev/null)" && shift 1 && SET_NEW_ARGS=("$@") && break
# else
# SET_NEW_ARGS+=("$arg")
# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && LATEST_ISO_CWD="$1" && shift 1 || LATEST_ISO_CWD="${LATEST_ISO_CWD:-$PWD}"
LATEST_ISO_CWD="$(realpath "${LATEST_ISO_DOWNLOAD_DIR:-$PWD}" 2>/dev/null)"
# if [ -d "$LATEST_ISO_CWD" ] && cd "$LATEST_ISO_CWD"; then
# if [ "$LATEST_ISO_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $LATEST_ISO_CWD"
# fi
# else
# printf_exit "ðŸ’” $LATEST_ISO_CWD does not exist ðŸ’”"
# fi
export LATEST_ISO_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions __based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
#cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides
__user_is_root && [ -d "/var/lib/vz/template/iso" ] && LATEST_ISO_DOWNLOAD_DIR="/var/lib/vz/template/iso"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions __based on env
LATEST_ISO_SYSTEM_ARCH="${LATEST_ISO_SYSTEM_ARCH:-$(__get_arch)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
gui)
  shift 1
  __gui
  ;;
iso)
  shift 1
  if [ $# -eq 0 ]; then
    printf_exit "Usage: $APPNAME iso <url> <filename>"
  elif [ $# -eq 1 ]; then
    LATEST_ISO_FILENAME="${LATEST_ISO_FILENAME:-$(basename -- "$1")}"
    __grab_iso "$1" "$LATEST_ISO_DOWNLOAD_DIR/$LATEST_ISO_FILENAME"
    exitCode=$?
  elif [ $# -eq 2 ]; then
    LATEST_ISO_FILENAME="${LATEST_ISO_FILENAME:-$(basename -- "$2")}"
    __grab_iso "$1" "$LATEST_ISO_DOWNLOAD_DIR/$LATEST_ISO_FILENAME"
    exitCode=$?
  fi
  exit ${exitCode:-1}
  ;;
all)
  shift 1
  exitStatus=0
  __run_all
  exit $?
  ;;
server)
  # Handle 'server debian', 'server ubuntu', 'server cachy' as a single command
  shift 1
  __latest_list "server" "$@"
  exit $?
  ;;
*)
  if [ "$RUN_ALL" = "true" ]; then
    __run_all
    exit $?
  elif [ $# -ge 2 ]; then
    exitStatus=0
    isoList=("$@")
    for isoName in "${isoList[@]}"; do
      eval "$0" $isoName
      exitStatus=$((exitStatus + $?))
    done
    exit $exitStatus
  elif [ $# -eq 1 ]; then
    __latest_list "$1"
    exit $?
  else
    __help
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# ex: ts=2 sw=2 et filetype=sh
