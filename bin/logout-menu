[ -d "$LOGOUT_MENU_TEMP_DIR" ] || mkdir -p "$LOGOUT_MENU_TEMP_DIR" |& __devnull
[ -d "$LOGOUT_MENU_CACHE_DIR" ] || mkdir -p "$LOGOUT_MENU_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
