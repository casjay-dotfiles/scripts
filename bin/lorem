SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",save:,html,markdown,json"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY="paragraphs sentences amount"
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    LOREM_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    LOREM_CWD="$2"
    [ -d "$LOREM_CWD" ] || mkdir -p "$LOREM_CWD" |& __devnull
    shift 2
    ;;
  --html)
    shift 1
    LOREM_GEN_HTML="yes"
    ;;
  --json)
    shift 1
    LOREM_GEN_JSON="yes"
    ;;
  --markdown)
    shift 1
    LOREM_GEN_MARKDOWN="yes"
    ;;
  --save)
    LOREM_SAVE_FILE="true"
    if [ -d "$2" ]; then
      LOREM_FILE_PATH="$(realpath "$2/lorem_generated.txt")"
    else
      LOREM_FILE_PATH="$(realpath "$2")"
    fi
    LOREM_FILE_DIR="$(dirname "$LOREM_FILE_PATH")"
    LOREM_FILE_NAME="$(basename -- "$LOREM_FILE_PATH")"
    [ -d "$LOREM_FILE_DIR" ] || mkdir -p "$LOREM_FILE_DIR"
    [ -f "$LOREM_FILE_PATH" ] && printf '\n' >>"$LOREM_FILE_NAME" || touch "$LOREM_FILE_NAME"
    shift 2
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Get directory from args
# set -- "$@"
# for arg in "$@"; do
# if [ -d "$arg" ]; then
# LOREM_CWD="$arg" && shift 1 && SET_NEW_ARGS=("$@") && break
# elif [ -f "$arg" ]; then
# LOREM_CWD="$(dirname "$arg" 2>/dev/null)" && shift 1 && SET_NEW_ARGS=("$@") && break
# else
# SET_NEW_ARGS+=("$arg")
# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && LOREM_CWD="$1" && shift 1 || LOREM_CWD="${LOREM_CWD:-$PWD}"
LOREM_CWD="$(realpath "${LOREM_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$LOREM_CWD" ] && cd "$LOREM_CWD"; then
# if [ "$LOREM_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $LOREM_CWD"
# fi
# else
# printf_exit "ðŸ’” $LOREM_CWD does not exist ðŸ’”"
# fi
export LOREM_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
#cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides
# [ $((LOREM_DEFAULT_AMOUNT_SENTENCE%2)) -eq 0 ]
# [ $((LOREM_DEFAULT_AMOUNT_PARAGRAPH%2)) -eq 0 ]
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
case "$1" in
html) LOREM_GEN_HTML="true" && shift 1 ;;
markdown) LOREM_GEN_MARKDOWN="true" && shift 1 ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
p | paragraphs)
  type="paragraphs"
  amount="${2:-$LOREM_DEFAULT_AMOUNT_PARAGRAPH}"
  __get_results "$type" "$amount"
  printf '\n\n'
  exit $exitCode
  ;;

s | sentences)
  type="sentences"
  amount="${2:-$LOREM_DEFAULT_AMOUNT_SENTENCE}"
  __get_results "$type" "$amount"
  printf '\n\n'
  exit $exitCode
  ;;

a | amount)
  amount="${2:-$LOREM_DEFAULT_AMOUNT_SENTENCE}"
  while [ "$amount" -gt 0 ]; do
    __get_results "sentences" "1"
    LOREM_SILENT="true"
    count="$(($amount - 1))"
    amount="$count"
    __get_results "paragraphs" "1"
    count="$(($amount - 1))"
    amount="$count"
  done
  printf '\n\n'
  exit $exitCode
  ;;

*)
  type="${type:-$LOREM_DEFAULT_TYPE}"
  amount="${1:-$LOREM_DEFAULT_AMOUNT}"
  __get_results "$type" "$amount"
  printf '\n\n'
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# ex: ts=2 sw=2 et filetype=sh
