# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && LXDMGR_CWD="$1" && shift 1 || LXDMGR_CWD="${LXDMGR_CWD:-$PWD}"
LXDMGR_CWD="$(realpath "${LXDMGR_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$LXDMGR_CWD" ] && cd "$LXDMGR_CWD"; then
# if [ "$LXDMGR_SILENT" != true ]; then
# printf_cyan "Setting working dir to $LXDMGR_CWD"
# fi
# else
# printf_exit "ðŸ’” $LXDMGR_CWD does not exist ðŸ’”"
# fi
export LXDMGR_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
if __cmd_exists lxc-info; then
  LXDMGR_BIN="$(builtin type -P lxc 2>/dev/null)"
elif __cmd_exists lxd; then
  LXDMGR_BIN="$(builtin type -P lxd 2>/dev/null)"
else
  __lxd_init
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
init)
  shift 1
  __lxd_init
  exit $?
  ;;

check)
  shift 1
  __lxd_check "$@"
  exit $?
  ;;

images)
  shift 1
  __list_images
  exit $?
  ;;

create)
  shift 1
  __lxd_create "$@"
  exit $?
  ;;

stop)
  shift 1
  __lxd_stop "$@"
  exit $?
  ;;

start)
  shift 1
  __lxd_start "$@"
  exit $?
  ;;

restart)
  shift 1
  __lxd_restart "$@"
  exit $?
  ;;

delete)
  shift 1
  __lxd_delete "$@"
  exit $?
  ;;

exec)
  shift 1
  __lxd_exec "$@"
  exit $?
  ;;

search)
  shift 1
  __lxd_search "$@"
  exit $?
  ;;

info)
  shift 1
  __lxd_info "$@"
  exit $?
  ;;

list)
  shift 1
  __lxd_list "$@"
  exit $?
  ;;

run)
  shift 1
  __lxd_run "$*"
  exit $?
  ;;

panel)
  shift 1
  __lxc_panel "$@"
  exit $?
  ;;

*)
  shift 1
  __help
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
