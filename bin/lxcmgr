# Color Settings
LXDMGR_OUTPUT_COLOR_1="${LXDMGR_OUTPUT_COLOR_1:-33}"
LXDMGR_OUTPUT_COLOR_2="${LXDMGR_OUTPUT_COLOR_2:-5}"
LXDMGR_OUTPUT_COLOR_GOOD="${LXDMGR_OUTPUT_COLOR_GOOD:-2}"
LXDMGR_OUTPUT_COLOR_ERROR="${LXDMGR_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
