MPD_NOTIFY_GOOD_MESSAGE="${MPD_NOTIFY_GOOD_MESSAGE:-No errors reported}"
MPD_NOTIFY_ERROR_MESSAGE="${MPD_NOTIFY_ERROR_MESSAGE:-Errors were reported}"
