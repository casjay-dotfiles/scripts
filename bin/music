MUSIC_CONFIG_DIR="${MUSIC_CONFIG_DIR:-$HOME/.config/myscripts/music}"
MUSIC_CONFIG_BACKUP_DIR="${MUSIC_CONFIG_BACKUP_DIR:-$HOME/.local/share/myscripts/music/backups}"
MUSIC_LOG_DIR="${MUSIC_LOG_DIR:-$HOME/.local/log/music}"
MUSIC_TEMP_DIR="${MUSIC_TEMP_DIR:-$HOME/.local/tmp/system_scripts/music}"
MUSIC_CACHE_DIR="${MUSIC_CACHE_DIR:-$HOME/.cache/music}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
MUSIC_OUTPUT_COLOR_1="${MUSIC_OUTPUT_COLOR_1:-33}"
MUSIC_OUTPUT_COLOR_2="${MUSIC_OUTPUT_COLOR_2:-5}"
MUSIC_OUTPUT_COLOR_GOOD="${MUSIC_OUTPUT_COLOR_GOOD:-2}"
MUSIC_OUTPUT_COLOR_ERROR="${MUSIC_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
MUSIC_NOTIFY_ENABLED="${MUSIC_NOTIFY_ENABLED:-yes}"
MUSIC_GOOD_NAME="${MUSIC_GOOD_NAME:-Great:}"
MUSIC_ERROR_NAME="${MUSIC_ERROR_NAME:-Error:}"
