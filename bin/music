MUSIC_ERROR_MESSAGE="${MUSIC_ERROR_MESSAGE:-Errors were reported}"
MUSIC_NOTIFY_CLIENT_NAME="${MUSIC_NOTIFY_CLIENT_NAME:-$APPNAME}"
MUSIC_NOTIFY_CLIENT_ICON="${MUSIC_NOTIFY_CLIENT_ICON:-notification-new}"
MUSIC_NOTIFY_CLIENT_URGENCY="${MUSIC_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
MUSIC_MENU_TIMER="${MUSIC_MENU_TIMER:-3}"
