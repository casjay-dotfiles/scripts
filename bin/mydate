# elif [ -f "$arg" ]; then
# MYDATE_CWD="$(dirname "$arg" 2>/dev/null)" && shift 1 && SET_NEW_ARGS=("$@") && break
# else
# SET_NEW_ARGS+=("$arg")
# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
[ -d "$1" ] && __is_an_option "$1" && MYDATE_CWD="$1" && shift 1 || MYDATE_CWD="${MYDATE_CWD:-$PWD}"
MYDATE_CWD="$(realpath "${MYDATE_CWD:-$PWD}" 2>/dev/null)"
if [ -d "$MYDATE_CWD" ] && cd "$MYDATE_CWD"; then
  true
# if [ "$MYDATE_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $MYDATE_CWD"
# fi
else
  printf_exit "ðŸ’” $MYDATE_CWD does not exist ðŸ’”"
fi
export MYDATE_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
#cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
nowtime)
  shift 1
  time="$(date +"$MYDATE_NOW_FORMAT")"
  printf_green "$time"
  ;;

nowdate)
  shift 1
  date="$(date +"$MYDATE_TIME_FORMAT")"
  printf_green "$date"
  ;;

setver)
  shift 1
  version="$(date +"$MYDATE_VERSION_FORMAT")"
  printf_green "$version"
  ;;

setverfile)
  shift 1
  [ -d "$1" ] && cd "$1" && shift 1
  version="$(date +"$MYDATE_VERSION_FORMAT")"
  printf_green "$version"
  printf '%s\n' "$version" >"${1:-$MYDATE_VERSION_FILE}"
  ;;

custom)
  shift 1
  custom="$(date +"$*")"
  printf_green "$custom"
  ;;

update)
  shift 1
  exitCode=0
  for file in "$@"; do
    gen-header version "$file"
    exitCode=$(($? + exitCode))
  done
  exit $exitCode
  ;;

*)
  shift $#
  printf_green "The Time is          :  $(date +"$MYDATE_NOW_FORMAT")"
  printf_green "The Date is          :  $(date +"$MYDATE_TIME_FORMAT")"
  printf_green "Current SOA is       :  $(date +"$MYDATE_DNS_SOA_FORMAT")"
  printf_green "Current Version is   :  $(date +"$MYDATE_VERSION_FORMAT")"
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - -
