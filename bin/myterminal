      # Session management tool
      MYTERMINAL_BIN="abduco"
    elif __cmd_exists dtach; then
      # Simple program detacher
      MYTERMINAL_BIN="dtach"
    elif __cmd_exists nohup; then
      # Run commands immune to hangups
      MYTERMINAL_BIN="nohup"
    # Advanced shells for better CLI experience
    elif __cmd_exists fish; then
      # User-friendly shell
      MYTERMINAL_BIN="fish"
    elif __cmd_exists zsh; then
      # Extended Bourne shell
      MYTERMINAL_BIN="zsh"
    elif __cmd_exists bash; then
      # GNU Bourne Again shell
      MYTERMINAL_BIN="bash"
    elif __cmd_exists dash; then
      # Debian Almquist shell (fast)
      MYTERMINAL_BIN="dash"
    elif __cmd_exists ash; then
      # Almquist shell
      MYTERMINAL_BIN="ash"
    elif __cmd_exists ksh; then
      # Korn shell
      MYTERMINAL_BIN="ksh"
    elif __cmd_exists csh; then
      # C shell
      MYTERMINAL_BIN="csh"
    elif __cmd_exists tcsh; then
      # Enhanced C shell
      MYTERMINAL_BIN="tcsh"
    elif __cmd_exists sh; then
      # POSIX shell
      MYTERMINAL_BIN="sh"
    fi
  else
    # Developer-focused terminals (most useful first)
    if [ -f "/Applications/iTerm.app/Contents/MacOS/iTerm2" ]; then
      # MacOS - best for developers
      MYTERMINAL_BIN="/Applications/iTerm.app/Contents/MacOS/iTerm2"
    # Desktop environment specific terminals
    elif [ -n "$(builtin type -P xfce4-terminal 2>/dev/null)" ]; then
      # XFCE terminal
      MYTERMINAL_BIN="xfce4-terminal"
    elif [ -n "$(builtin type -P cosmic-term 2>/dev/null)" ]; then
      # Cosmic terminal
      MYTERMINAL_BIN="cosmic-term"
    elif [ -n "$(builtin type -P lxterminal 2>/dev/null)" ]; then
      # LXDE terminal
      MYTERMINAL_BIN="lxterminal"
    elif [ -n "$(builtin type -P lxterminal 2>/dev/null)" ]; then
      # LXDE terminal
      MYTERMINAL_BIN="lxterminal"
    elif [ -n "$(builtin type -P mate-terminal 2>/dev/null)" ]; then
      # MATE terminal
      MYTERMINAL_BIN="mate-terminal"
    elif [ -n "$(builtin type -P gnome-terminal 2>/dev/null)" ]; then
      # GNOME terminal
      MYTERMINAL_BIN="gnome-terminal"
    elif [ -n "$(builtin type -P kgx 2>/dev/null)" ]; then
      # GNOME Console (new GNOME terminal)
      MYTERMINAL_BIN="kgx"
    elif [ -n "$(builtin type -P cinnamon-terminal 2>/dev/null)" ]; then
      # Cinnamon terminal
      MYTERMINAL_BIN="cinnamon-terminal"
    elif [ -n "$(builtin type -P pantheon-terminal 2>/dev/null)" ]; then
      # Elementary OS terminal
      MYTERMINAL_BIN="pantheon-terminal"
    elif [ -n "$(builtin type -P konsole 2>/dev/null)" ]; then
      # KDE terminal
      MYTERMINAL_BIN="konsole"
    elif [ -n "$(builtin type -P ghostty 2>/dev/null)" ]; then
      # Fast, modern terminal by Mitchell Hashimoto
