    elif [ -n "$(builtin type -P alacritty 2>/dev/null)" ]; then
      # Cross-platform, GPU-accelerated, highly configurable
      MYTERMINAL_BIN="alacritty"
    elif [ -n "$(builtin type -P kitty 2>/dev/null)" ]; then
      # Fast, feature-rich, supports graphics
      MYTERMINAL_BIN="kitty"
    elif [ -n "$(builtin type -P wezterm 2>/dev/null)" ]; then
      # Rust-based, powerful features
      MYTERMINAL_BIN="wezterm"
    elif [ -n "$(builtin type -P rio 2>/dev/null)" ]; then
      # Hardware-accelerated terminal built in Rust
      MYTERMINAL_BIN="rio"
    elif [ -n "$(builtin type -P foot 2>/dev/null)" ]; then
