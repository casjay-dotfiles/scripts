MYTORRENT_CACHE_DIR="${MYTORRENT_CACHE_DIR:-$HOME/.cache/mytorrent}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
MYTORRENT_OUTPUT_COLOR_1="${MYTORRENT_OUTPUT_COLOR_1:-33}"
