# [ -d "$1" ] && __is_an_option "$1" && MYVMMANAGER_CWD="$1" && shift 1 || MYVMMANAGER_CWD="${MYVMMANAGER_CWD:-$PWD}"
MYVMMANAGER_CWD="$(realpath "${MYVMMANAGER_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$MYVMMANAGER_CWD" ] && cd "$MYVMMANAGER_CWD"; then
