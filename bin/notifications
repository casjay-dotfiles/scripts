NOTIFICATIONS_NOTIFY_CLIENT_NAME="${NOTIFICATIONS_NOTIFY_CLIENT_NAME:-$APPNAME}"
NOTIFICATIONS_NOTIFY_CLIENT_ICON="${NOTIFICATIONS_NOTIFY_CLIENT_ICON:-notification-new}"
