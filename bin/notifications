NOTIFICATIONS_CWD="$(realpath "${NOTIFICATIONS_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$NOTIFICATIONS_CWD" ] && cd "$NOTIFICATIONS_CWD"; then
# if [ "$NOTIFICATIONS_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
