export NOTIFICATIONS_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set actions based on variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for required applications/Network check
#requiresudo "$0" "$@" || exit 2     # exit 2 if errors
#cmd_exists --error --ask bash || exit 3 # exit 3 if not found
#am_i_online --error || exit 4           # exit 4 if no internet
# - - - - - - - - - - - - - - - - - - - - - - - - -
# APP Variables overrides

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Actions based on env
NOTIFICATIONS_NETCAT_BIN="$(builtin type -P nc 2>/dev/null || builtin type -P netcat 2>/dev/null || false)"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute functions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "${1:-$OPTS}" in
server)
  shift 1
  __run_server &
  exit
  ;;

client)
  shift 1
  if [ ${#} -eq 0 ] && [ -p "/dev/stdin" ]; then
    title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
    msg="$(cat -)"
    shift
  else
    if [ ${#} -eq 1 ]; then
      title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
      msg="$*"
    else
      title="$1"
      shift 1
      msg="$*"
    fi
  fi
  if [ -n "$NOTIFICATIONS_HOST" ]; then
    __notifications_cli "$title" "$msg"
  else
    notifications "Daemon" "Please set NOTIFICATIONS_HOST variable to your server"
    printf_exit 1 1 "Please set NOTIFICATIONS_HOST: variable to your server $NOTIFICATIONS_HOST"
  fi
  ;;

all)
  shift 1
  if [ ${#} -eq 0 ] && [ -p "/dev/stdin" ]; then
    title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
    msg="$(cat -)"
    shift
  else
    if [ ${#} -eq 1 ]; then
      title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
      msg="$(cat -)"
      shift
    else
      if [ ${#} -eq 1 ]; then
        title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
        msg="$*"
      else
        title="$1"
        shift 1
        msg="$*"
      fi
    fi
  fi
  send-notify --all "$title" "$msg"
  ;;

-)
  shift 1
  title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
  msg="$(cat -)"
  send-notify "$title" "$msg"
  ;;

*)
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
    msg="$(cat -)"
    shift
  else
    if [ $# -eq 1 ]; then
      title="${NOTIFY_CLIENT_NAME:-$APPNAME}"
      msg="$*"
      shift
    else
      title="$1"
      shift 1
      msg="$*"
    fi
  fi
  if [ -z "$msg" ]; then
    send-notify "$@"
  else
    send-notify "$title" "$msg"
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
