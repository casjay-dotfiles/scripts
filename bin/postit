# [ -d "$1" ] && __is_an_option "$1" && POSTIT_CWD="$1" && shift 1 || POSTIT_CWD="${POSTIT_CWD:-$PWD}"
POSTIT_CWD="$(realpath "${POSTIT_CWD:-$PWD}" 2>/dev/null)"
