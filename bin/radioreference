# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  local exitCode=0
  [ -n "$1" ] || return 0
  for cmd in "$@"; do
    if builtin command -v "$cmd" &>/dev/null; then
      exitCode=$((exitCode + 0))
    else
      exitCode=$((exitCode + 1))
    fi
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 2 --retry 1 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE"
  fi
  [ -d "$RADIOREFERENCE_CONFIG_DIR" ] || mkdir -p "$RADIOREFERENCE_CONFIG_DIR"
  [ -d "$RADIOREFERENCE_CONFIG_BACKUP_DIR" ] || mkdir -p "$RADIOREFERENCE_CONFIG_BACKUP_DIR"
  [ -f "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE" ] &&
    cp -Rf "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE" "$RADIOREFERENCE_CONFIG_BACKUP_DIR/$RADIOREFERENCE_CONFIG_FILE.$$"
  cat <<EOF >"$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE"
# Settings for radioreference
RADIOREFERENCE_DEFAULT_FEED="${RADIOREFERENCE_DEFAULT_FEED:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
RADIOREFERENCE_OUTPUT_COLOR_1="${RADIOREFERENCE_OUTPUT_COLOR_1:-}"
RADIOREFERENCE_OUTPUT_COLOR_2="${RADIOREFERENCE_OUTPUT_COLOR_2:-}"
RADIOREFERENCE_OUTPUT_COLOR_GOOD="${RADIOREFERENCE_OUTPUT_COLOR_GOOD:-}"
RADIOREFERENCE_OUTPUT_COLOR_ERROR="${RADIOREFERENCE_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
RADIOREFERENCE_NOTIFY_ENABLED="${RADIOREFERENCE_NOTIFY_ENABLED:-}"
RADIOREFERENCE_GOOD_NAME="${RADIOREFERENCE_GOOD_NAME:-}"
RADIOREFERENCE_ERROR_NAME="${RADIOREFERENCE_ERROR_NAME:-}"
RADIOREFERENCE_GOOD_MESSAGE="${RADIOREFERENCE_GOOD_MESSAGE:-}"
RADIOREFERENCE_ERROR_MESSAGE="${RADIOREFERENCE_ERROR_MESSAGE:-}"
RADIOREFERENCE_NOTIFY_CLIENT_NAME="${RADIOREFERENCE_NOTIFY_CLIENT_NAME:-}"
RADIOREFERENCE_NOTIFY_CLIENT_ICON="${RADIOREFERENCE_NOTIFY_CLIENT_ICON:-}"
RADIOREFERENCE_NOTIFY_CLIENT_URGENCY="${RADIOREFERENCE_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "radioreference:  Play radioreference/broadcastify stream - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: radioreference [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$RADIOREFERENCE_REQUIRE_SUDO" = "yes" ] && [ -z "$RADIOREFERENCE_REQUIRE_SUDO_RUN" ]; then
    export RADIOREFERENCE_REQUIRE_SUDO="no"
    export RADIOREFERENCE_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$RADIOREFERENCE_TEMP_FILE" ] && rm -Rf "$RADIOREFERENCE_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__vlc() {
  if [ "$1" = "ask" ]; then
    __cmd_exists vlc && return 0 || return 1
  fi
  vlc "${1:-$RADIOREFERENCE_DEFAULT_FEED}" -I curses 2>/dev/null
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__mpv() {
  if [ "$1" = "ask" ]; then
    __cmd_exists vlc && return 0 || return 1
  fi
  mpv --quiet --vo=tct "${1:-$RADIOREFERENCE_DEFAULT_FEED}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__execute_radioreference() {
  RADIOREFERENCE_DEFAULT_FEED="${1:-$RADIOREFERENCE_DEFAULT_FEED}"
  if __urlverify "$RADIOREFERENCE_DEFAULT_FEED"; then
    printf_green "Playing $RADIOREFERENCE_DEFAULT_FEED"
    if __vlc "ask"; then
      __vlc
    elif __mpv "ask"; then
      __mpv
    else
      printf_exit 1 1 "No player found: requires either vlc or mpv"
    fi
  else
    printf_exit 1 1 "$RADIOREFERENCE_DEFAULT_FEED seems to be an invalid url"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__term() {
  trap '$APPNAME --term' SIGINT
  while :; do
    cur_feed="${feed:-$RADIOREFERENCE_DEFAULT_FEED}"
    feed=""
    printf_cyan "You can exit with either q or exit"
    printf_read_input "4" "What feed would you like to play? [$cur_feed]" "120" "feed"
    [ "$feed" = "q" ] && break
    [ "$feed" = "exit" ] && break
    [ -z "$feed" ] && feed="$cur_feed" && echo
    if [ -n "$feed" ]; then
      __vlc "ask" || printf_exit "Using this requires vlc"
      printf_green "Playing $feed"
      __notifications "Playing $feed"
      __vlc "$feed"
    else
      printf_red "feed can not be empty"
    fi
  done
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
RADIOREFERENCE_CONFIG_FILE="${RADIOREFERENCE_CONFIG_FILE:-settings.conf}"
