RADIOREFERENCE_GOOD_MESSAGE="${RADIOREFERENCE_GOOD_MESSAGE:-No errors reported}"
RADIOREFERENCE_ERROR_MESSAGE="${RADIOREFERENCE_ERROR_MESSAGE:-Errors were reported}"
RADIOREFERENCE_NOTIFY_CLIENT_NAME="${RADIOREFERENCE_NOTIFY_CLIENT_NAME:-$APPNAME}"
RADIOREFERENCE_NOTIFY_CLIENT_ICON="${RADIOREFERENCE_NOTIFY_CLIENT_ICON:-notification-new}"
RADIOREFERENCE_NOTIFY_CLIENT_URGENCY="${RADIOREFERENCE_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
RADIOREFERENCE_DEFAULT_FEED="${RADIOREFERENCE_DEFAULT_FEED:-https://www.broadcastify.com/scripts/playlists/1/32304/-6548379688.m3u}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE" ] || [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE" ] && . "$RADIOREFERENCE_CONFIG_DIR/$RADIOREFERENCE_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$RADIOREFERENCE_LOG_DIR" ] || mkdir -p "$RADIOREFERENCE_LOG_DIR" |& __devnull
[ -d "$RADIOREFERENCE_TEMP_DIR" ] || mkdir -p "$RADIOREFERENCE_TEMP_DIR" |& __devnull
[ -d "$RADIOREFERENCE_CACHE_DIR" ] || mkdir -p "$RADIOREFERENCE_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - -
RADIOREFERENCE_TEMP_FILE="${RADIOREFERENCE_TEMP_FILE:-$(mktemp $RADIOREFERENCE_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$RADIOREFERENCE_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$RADIOREFERENCE_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$RADIOREFERENCE_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$RADIOREFERENCE_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$RADIOREFERENCE_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$RADIOREFERENCE_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom actions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS=""
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",term"
# - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY=""
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    RADIOREFERENCE_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    RADIOREFERENCE_CWD="$2"
    [ -d "$RADIOREFERENCE_CWD" ] || mkdir -p "$RADIOREFERENCE_CWD" |& __devnull
    shift 2
    ;;
  --term)
    shift 1
    TERMINAL_APP="true"
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
