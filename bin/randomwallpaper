#!/usr/bin/env bash
# shellcheck shell=bash
# - - - - - - - - - - - - - - - - - - - - - - - - -
##@Version           :  202601011512-git
# @@Author           :  Jason Hempstead
# @@Contact          :  git.io/casjay
# @@License          :  LICENSE.md
# @@ReadME           :  randomwallpaper --help
# @@Copyright        :  Copyright (c) 2024 CasjaysDev
# @@Created          :  Monday, Aug 15, 2022 10:37 EDT
# @@File             :  randomwallpaper
# @@Description      :  Set a random wallpaper
# @@Changelog        :  Simplified wallpaper directories to exact Linux/macOS paths
# @@TODO             :  N/A
# @@Other            :
# @@Resource         :
# @@Terminal App     :  no
# @@sudo/root        :  no
# @@Template         :  bash/system
# - - - - - - - - - - - - - - - - - - - - - - - - -
# shellcheck disable=SC1001,SC1003,SC2001,SC2003,SC2016,SC2031,SC2090,SC2115,SC2120,SC2155,SC2199,SC2229,SC2317,SC2329
# - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME="$(basename -- "$0" 2>/dev/null)"
VERSION="202601011512-git"
USER="${SUDO_USER:-$USER}"
RUN_USER="${RUN_USER:-$USER}"
USER_HOME="${USER_HOME:-$HOME}"
SCRIPT_SRC_DIR="${BASH_SOURCE%/*}"
RANDOMWALLPAPER_REQUIRE_SUDO="${RANDOMWALLPAPER_REQUIRE_SUDO:-no}"
RANDOMWALLPAPER_SCRIPTS_PREFIX="${APPNAME:-randomwallpaper}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Reopen in terminal (optional - uncomment if needed)
#if [ ! -t 0 ] && { [ "$1" = --term ] || [ $# = 0 ]; }; then
#  { [ "$1" = --term ] && shift 1 || true; } && TERMINAL_APP="TRUE" myterminal -e "$APPNAME $*" && exit || exit 1
#fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set script title (optional - commented out by default)
#CASJAYS_DEV_TILE_FORMAT="${USER}@${HOSTNAME}:${PWD/#$HOME/~} - $APPNAME"
#CASJAYSDEV_TITLE_PREV="${CASJAYSDEV_TITLE_PREV:-${CASJAYSDEV_TITLE_SET:-$APPNAME}}"
#[ -z "$CASJAYSDEV_TITLE_SET" ] && printf '\033]0;%s\007' "$CASJAYS_DEV_TILE_FORMAT" && CASJAYSDEV_TITLE_SET="$APPNAME"
export CASJAYSDEV_TITLE_PREV="${CASJAYSDEV_TITLE_PREV:-${CASJAYSDEV_TITLE_SET:-$APPNAME}}" CASJAYSDEV_TITLE_SET
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Initial debugging
[ "$1" = "--debug" ] && set -x && export SCRIPT_OPTS="--debug" && export _DEBUG="on"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Disables colorization
[ "$1" = "--raw" ] && export SHOW_RAW="true"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# pipes fail
set -o pipefail
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Internal functions
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__cmd_exists() {
  local exitCode=0
  [ -n "$1" ] || return 0
  for cmd in "$@"; do
    if builtin command -v "$cmd" &>/dev/null; then
      exitCode=$((exitCode + 0))
    else
      exitCode=$((exitCode + 1))
    fi
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 2 --retry 1 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_newline() {
  printf "%b\n" "${1:-}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_blue() {
  printf_color "$1\n" 4
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_cyan() {
  printf_color "$1\n" 6
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_green() {
  printf_color "$1\n" 2
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_red() {
  printf_color "$1\n" 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_purple() {
  printf_color "$1\n" 5
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_yellow() {
  printf_color "$1\n" 3
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_error() {
  printf_red "$1"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_exit() {
  local retval="${1:-0}"
  local exitcode="${2:-$retval}"
  local message="${3:-}"
  if [ -n "$message" ]; then
    if [ "$exitcode" -eq 0 ]; then
      printf_green "$message"
    else
      printf_red "$message"
    fi
  fi
  exit "$retval"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_pause() {
  local message="${1:-Press any key to continue}"
  printf_green "$message"
  read -r -n 1 -s -p ""
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_counter() {
  local duration="${1:-5}"
  local interval="${2:-1}"
  local message="${3:-Waiting}"
  for ((i = duration; i > 0; i -= interval)); do
    printf "\r$message $i seconds... "
    sleep "$interval"
  done
  printf "\r\033[K"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_read_question_nt() {
  local color="${1:-6}"
  local question="${2:-Enter value}"
  local default="${3:-}"
  local varname="${4:-REPLY}"
  local options="${5:-}"
  printf_color "$question" "$color"
  read -r $options "$varname"
  eval "${varname}=\${${varname}:-$default}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
printf_read_input() {
  local color="${1:-6}"
  local question="${2:-Enter value}"
  local default="${3:-}"
  local varname="${4:-REPLY}"
  printf_color "$question " "$color"
  read -r "$varname"
  eval "${varname}=\${${varname}:-$default}"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__printf_head() {
  printf_blue "$1"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__printf_opts() {
  printf_purple "$1"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__printf_line() {
  printf_cyan "$1"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__version() {
  printf_cyan "$VERSION"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__mkd() {
  mkdir -p "$@" &>/dev/null
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__rm_rf() {
  rm -Rf "$@" &>/dev/null
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__ln_sf() {
  ln -sf "$@" &>/dev/null
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__cp_rf() {
  cp -Rf "$@" &>/dev/null
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__find_mtime() {
  local file="${1:-}"
  local minutes="${2:-720}"
  [ -f "$file" ] || return 1
  find "$file" -mmin +"$minutes" 2>/dev/null | grep -q '.' && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_status_pid() {
  local pid="${1:-}"
  if [ -n "$pid" ]; then
    ps -p "$pid" &>/dev/null && return 0 || return 1
  fi
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__start_count() {
  local app="${1:-randomwallpaper}"
  local cmd="${2:-run}"
  ps -ux | grep "$app" | grep "$cmd" | grep -v 'grep' | wc -l
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE"
  fi
  [ -d "$RANDOMWALLPAPER_CONFIG_DIR" ] || mkdir -p "$RANDOMWALLPAPER_CONFIG_DIR"
  [ -d "$RANDOMWALLPAPER_CONFIG_BACKUP_DIR" ] || mkdir -p "$RANDOMWALLPAPER_CONFIG_BACKUP_DIR"
  if [ -f "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE" ]; then
    cp -Rf "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE" "$RANDOMWALLPAPER_CONFIG_BACKUP_DIR/$RANDOMWALLPAPER_CONFIG_FILE.$$"
  fi
  cat <<EOF >"$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE"
# Settings for randomwallpaper
RANDOMWALLPAPER_ROTATE_TIME="5"
RANDOMWALLPAPER_ROTATE_TYPE="minutes"
RANDOMWALLPAPER_WALLPAPER_DIR="${RANDOMWALLPAPER_WALLPAPER_DIR:-}"
RANDOMWALLPAPER_WALLPAPER_FILE="${RANDOMWALLPAPER_WALLPAPER_FILE:-}"
RANDOMWALLPAPER_KILL_FILE="${RANDOMWALLPAPER_KILL_FILE:-}"
RANDOMWALLPAPER_RUN_FILE="${RANDOMWALLPAPER_RUN_FILE:-}"
RANDOMWALLPAPER_SEEN_FILE="${RANDOMWALLPAPER_SEEN_FILE:-}"
RANDOMWALLPAPER_SEEN_FILE_TMP="${RANDOMWALLPAPER_SEEN_FILE_TMP:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
RANDOMWALLPAPER_OUTPUT_COLOR_1="${RANDOMWALLPAPER_OUTPUT_COLOR_1:-}"
RANDOMWALLPAPER_OUTPUT_COLOR_2="${RANDOMWALLPAPER_OUTPUT_COLOR_2:-}"
RANDOMWALLPAPER_OUTPUT_COLOR_GOOD="${RANDOMWALLPAPER_OUTPUT_COLOR_GOOD:-}"
RANDOMWALLPAPER_OUTPUT_COLOR_ERROR="${RANDOMWALLPAPER_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
RANDOMWALLPAPER_NOTIFY_ENABLED="${RANDOMWALLPAPER_NOTIFY_ENABLED:-}"
RANDOMWALLPAPER_GOOD_NAME="${RANDOMWALLPAPER_GOOD_NAME:-}"
RANDOMWALLPAPER_ERROR_NAME="${RANDOMWALLPAPER_ERROR_NAME:-}"
RANDOMWALLPAPER_GOOD_MESSAGE="${RANDOMWALLPAPER_GOOD_MESSAGE:-}"
RANDOMWALLPAPER_ERROR_MESSAGE="${RANDOMWALLPAPER_ERROR_MESSAGE:-}"
RANDOMWALLPAPER_NOTIFY_CLIENT_NAME="${RANDOMWALLPAPER_NOTIFY_CLIENT_NAME:-}"
RANDOMWALLPAPER_NOTIFY_CLIENT_ICON="${RANDOMWALLPAPER_NOTIFY_CLIENT_ICON:-}"
RANDOMWALLPAPER_NOTIFY_CLIENT_URGENCY="${RANDOMWALLPAPER_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then
    __gen_config_local
  fi
  if [ -f "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE" ]; then
    if [ "$INIT_CONFIG" = "TRUE" ]; then
      true
    else
      printf_green "Your config file for $APPNAME has been created"
    fi
    . "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "randomwallpaper:  Set a random wallpaper - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: randomwallpaper [options] [commands]"
  __printf_line "enable                          - Enable autostart"
  __printf_line "disable                         - Disable autostart"
  __printf_line "update                          - Update wallpaper list"
  __printf_line "new                             - New wallpaper"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Background Options: bg [run,new,restart,start,stop,status]"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "run                             - Run "
  __printf_line "new                             - New "
  __printf_line "restart                         - Restart "
  __printf_line "start                           - Start "
  __printf_line "stop                            - Stop "
  __printf_line "status                          - Status "
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__is_an_option() {
  if echo "$ARRAY" | grep -q "${1:-^}"; then
    return 1
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__user_is_root() {
  if [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; then
    return 0
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__user_is_not_root() {
  if [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; then
    return 1
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sudorun() {
  if __sudoif && __cmd_exists sudo; then
    sudo -HE "$@"
  elif __sudoif; then
    eval "$@"
  fi
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__can_i_sudo() {
  if (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null; then
    return 0
  fi
  if __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null; then
    return 0
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sudoif() {
  if __user_is_root; then
    return 0
  fi
  if __can_i_sudo "${RUN_USER:-$USER}"; then
    return 0
  fi
  if __user_is_not_root && __sudoask; then
    return 0
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
requiresudo() {
  if [ "$RANDOMWALLPAPER_REQUIRE_SUDO" = "yes" ] && [ -z "$RANDOMWALLPAPER_REQUIRE_SUDO_RUN" ]; then
    export RANDOMWALLPAPER_REQUIRE_SUDO="no"
    export RANDOMWALLPAPER_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  if [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ]; then
    OPTS="--preserve-env=PATH -HE"
  fi
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit_RANDOMWALLPAPER() {
  local exitCode=${1:-${RANDOMWALLPAPER_EXIT_STATUS:-0}}
  [ -f "$RANDOMWALLPAPER_TEMP_FILE" ] && rm -Rf "$RANDOMWALLPAPER_TEMP_FILE" &>/dev/null
  if builtin type -t __trap_exit_local | grep -q 'function'; then
    __trap_exit_local
  fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_ctrl_c_RANDOMWALLPAPER() {
  printf_red "\n\nScript interrupted by user (Ctrl+C)\n"
  __trap_exit_RANDOMWALLPAPER 130
  exit 130
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_resize_RANDOMWALLPAPER() {
  return 0
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__notifications() {
  if __cmd_exists notifications; then
    if [ "$RANDOMWALLPAPER_NOTIFY_ENABLED" = "yes" ]; then
      if [ "$SEND_NOTIFICATION" != "no" ]; then
        (
          export SCRIPT_OPTS="" _DEBUG=""
          export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$RANDOMWALLPAPER_GOOD_MESSAGE}"
          export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$RANDOMWALLPAPER_ERROR_MESSAGE}"
          export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$RANDOMWALLPAPER_NOTIFY_CLIENT_ICON}"
          export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$RANDOMWALLPAPER_NOTIFY_CLIENT_NAME}"
          export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$RANDOMWALLPAPER_NOTIFY_CLIENT_URGENCY}"
          notifications "$@"
        ) |& __devnull &
      fi
    fi
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
trap '__trap_exit_RANDOMWALLPAPER' EXIT
trap '__trap_ctrl_c_RANDOMWALLPAPER' SIGINT
trap '__trap_resize_RANDOMWALLPAPER' SIGWINCH
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_START_TIMER="${RANDOMWALLPAPER_START_TIMER:-$(date +%s.%N)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
__proc_is_running() {
  if pgrep -x "$1" &>/dev/null; then
    return 0
  fi
  if ps aux 2>/dev/null | grep -v 'grep ' | grep "$1" &>/dev/null; then
    return 0
  fi
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__startup() {
  printf_green "Adding the randomwallpaper to startup"
  cat <<EOF >"$HOME/.config/autostart/randomwallpaper.desktop"
#!/usr/bin/env xdg-open

[Desktop Entry]
Encoding=UTF-8
Version=0.9.4
Type=Application
Name=Wallpaper Changer
Icon=preferences-desktop-notification
Comment=Random Wallpaper
Exec=randomwallpaper bg start
RunHook=0
StartupNotify=false
Terminal=false
Hidden=false

EOF
  [ -d "$RANDOMWALLPAPER_CACHE_DIR" ] || __mkd "$RANDOMWALLPAPER_CACHE_DIR"
  if [ -f "$HOME/.config/autostart/randomwallpaper.desktop" ]; then
    printf_green "Successfully installed randomwallpaper Daemon"
  else
    printf_error "Failed to install randomwallpaper Daemon"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__startup_disable() {
  local exitCode
  printf_blue "Deleting randomwallpaper from startup"
  __rm_rf "$HOME/.config/autostart/randomwallpaper.desktop"
  if [ -f "$HOME/.config/autostart/randomwallpaper.desktop" ]; then
    printf_red "Failed to delete the service"
    exitCode=1
  else
    __notifications "Wallpaper Changer" "Deleted the autostart service"
    printf_green "Deleted the autostart service"
    exitCode=0
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__variety() {
  if [ -f "$HOME/.config/variety/variety.conf" ]; then
    if grep -sh '^change_enabled' "$HOME/.config/variety/variety.conf" | grep -iq True; then
      variety -q &>/dev/null
      sed -i 's#change_enabled =.*#change_enabled = False#g' "$HOME/.config/variety/variety.conf"
      if grep -sh '^change_enabled' "$HOME/.config/variety/variety.conf" 2>/dev/null | grep -iq True; then
        printf_error "Refusing to run: variety is already changing the wallpaper"
        return 1
      fi
      variety &>/dev/null &
    fi
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__mesg_ok() {
  local COUNT_SEEN COUNT_ALL COUNT_MESSAGE
  COUNT_SEEN="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_SEEN_FILE" | grep -v '^$' || echo 0)"
  COUNT_ALL="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_WALLPAPER_FILE" | grep -v '^$' || echo 0)"
  COUNT_MESSAGE="You have seen $COUNT_SEEN of $COUNT_ALL wallpapers"
  printf_green "Wallpaper changed to: $SHORTNAME"
  printf_cyan "$COUNT_MESSAGE"
  __notifications "Wallpaper Changer" "Wallpaper has been changed to\n$SHORTNAME\n$COUNT_MESSAGE"
  return 0
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__mesg_fail() {
  local COUNT_SEEN COUNT_ALL COUNT_MESSAGE
  COUNT_SEEN="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_SEEN_FILE" | grep -v '^$' || echo 0)"
  COUNT_ALL="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_WALLPAPER_FILE" | grep -v '^$' || echo 0)"
  COUNT_MESSAGE="You have seen $COUNT_SEEN of $COUNT_ALL wallpapers"
  printf_red "Failed to change wallpaper"
  printf_cyan "$COUNT_MESSAGE"
  __notifications "Wallpaper Changer" "Failed to change the wallpaper\n$COUNT_MESSAGE"
  return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__kill() {
  if [ -f "$RANDOMWALLPAPER_KILL_FILE" ]; then
    __rm_rf "$RANDOMWALLPAPER_KILL_FILE" "$RANDOMWALLPAPER_RUN_FILE"
    if __get_pid &>/dev/null; then
      __notifications "Wallpaper Changer" "Background service is shutting down"
      for pid in $(__get_pid); do
        kill -15 "$pid" &>/dev/null
      done && exitCode=0 || exitCode=1
    else
      __notifications "Wallpaper Changer" "Background service is not running"
      exitCode=1
    fi
    return "$exitCode"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__find_cmd() {
  local dir="${1:-$RANDOMWALLPAPER_WALLPAPER_DIR}"
  if [ ! -d "$dir" ]; then
    return 1
  fi
  find -L "$dir" -type f -not -path "*/.git/*" 2>/dev/null | while read -r filepath; do
    if [ -f "$filepath" ]; then
      if file --mime-type "$filepath" 2>/dev/null | grep -qF 'image/'; then
        echo "$filepath"
      fi
    fi
  done
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__initialize() {
  if [ -f "$1" ]; then
    WALLPAPER="$1"
    RANDOMWALLPAPER_MANUAL=true
    shift 1
  elif [ -d "$1" ]; then
    WALLPAPER="$(__find_cmd "$1" | sort -R | tail -n 1)"
    RANDOMWALLPAPER_MANUAL=true
    shift 1
  else
    # Build/update cache if needed
    if [[ ! -s "$RANDOMWALLPAPER_WALLPAPER_FILE" ]]; then
      __rm_rf "$RANDOMWALLPAPER_SEEN_FILE"
      if ! __update_cache; then
        return 1
      fi
    fi
    [ -f "$RANDOMWALLPAPER_SEEN_FILE" ] || touch "$RANDOMWALLPAPER_SEEN_FILE"
    # Get a random wallpaper not yet seen
    SETRANDOM="$(grep -shvf "$RANDOMWALLPAPER_SEEN_FILE" "$RANDOMWALLPAPER_WALLPAPER_FILE" | sort -R | head -n1 | grep '')"
    # If all have been seen or cache is empty, try direct search
    if [ -z "$SETRANDOM" ]; then
      local dir=""
      while IFS= read -r dir; do
        [ -n "$dir" ] || continue
        SETRANDOM="$(__find_cmd "$dir" | sort -R | head -n1)"
        [ -n "$SETRANDOM" ] && break
      done < <(__get_wallpaper_dirs)
    fi
    __make_seen_file
  fi
  RANDOMWALLPAPER="${WALLPAPER:-$SETRANDOM}"
  SET_WALLPAPER="${RANDOMWALLPAPER}"
  if [ -n "$SET_WALLPAPER" ]; then
    SHORTNAME="$(basename "$SET_WALLPAPER")"
  else
    SHORTNAME=""
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__background_job() {
  local RANDOMWALLPAPER_SLEEP_TIME="${1:-$RANDOMWALLPAPER_SLEEP_TIME}"
  __rm_rf "$RANDOMWALLPAPER_RUN_FILE"
  if randomwallpaper bg new; then
    touch "$RANDOMWALLPAPER_RUN_FILE"
  else
    __rm_rf "$RANDOMWALLPAPER_RUN_FILE"
  fi
  sleep $RANDOMWALLPAPER_SLEEP_TIME
  if __kill; then
    __background_job "$RANDOMWALLPAPER_SLEEP_TIME"
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__start() {
  local SLEEP_TIME DISPLAY_TIME COUNT_SEEN COUNT_ALL COUNT_MESSAGE
  SLEEP_TIME="$RANDOMWALLPAPER_SLEEP_TIME"
  DISPLAY_TIME="$RANDOMWALLPAPER_DISPLAY_TIME"
  COUNT_SEEN="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_SEEN_FILE" | grep -v '^$' || echo 0)"
  COUNT_ALL="$(grep -shc "$RANDOMWALLPAPER_WALLPAPER_DIR" "$RANDOMWALLPAPER_WALLPAPER_FILE" | grep -v '^$' || echo 0)"
  COUNT_MESSAGE="You have seen $COUNT_SEEN of $COUNT_ALL wallpapers"
  if __getstatus; then
    return 1
  fi
  __notifications "Wallpaper Changer" "Enabling randomwallpaper background job:\nChanging every $DISPLAY_TIME\n$COUNT_MESSAGE"
  __rm_rf "$RANDOMWALLPAPER_KILL_FILE" "$RANDOMWALLPAPER_RUN_FILE"
  sleep 60
  sh -c "$APPNAME bg run $SLEEP_TIME &>/dev/null &" &
  disown
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_pid() {
  ps -ux | grep 'randomwallpaper' | grep 'run' | grep -v 'grep' | awk '{print $2}' | grep '^' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__getstatus() {
  MAINPID="$(__get_pid | head -n1)"
  GETTPID=$(__get_pid || return 1)
  PSPID="$(__get_pid | head -n1 || ps -ux | grep "$APPNAME" | grep -v 'grep' | grep "run" 2>/dev/null || return 1)"
  if [ -n "$GETTPID" ]; then
    if [ -f "$RANDOMWALLPAPER_KILL_FILE" ]; then
      START_STOP_MESG="Stop is pending"
    else
      export START_STOP_MESG="Stop randomwallpaper"
    fi
    if __get_status_pid "$GETTPID"; then
      exitCode=0
    else
      exitCode=1
    fi
  else
    export START_STOP_MESG="Start randomwallpaper"
    exitCode=1
  fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__notify_running() {
  __notifications "Wallpaper Changer" "Already running: $MAINPID" && return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__make_seen_file() {
  [ -d "$RANDOMWALLPAPER_CACHE_DIR" ] || __mkd "$RANDOMWALLPAPER_CACHE_DIR"
  [ -f "$RANDOMWALLPAPER_SEEN_FILE" ] || touch "$RANDOMWALLPAPER_SEEN_FILE"
  if [ -f "$RANDOMWALLPAPER_WALLPAPER_FILE" ]; then
    local count_seen="$(wc -l < "$RANDOMWALLPAPER_SEEN_FILE" 2>/dev/null | grep -v '^$' || echo 0)"
    local count_all="$(wc -l < "$RANDOMWALLPAPER_WALLPAPER_FILE" 2>/dev/null | grep -v '^$' || echo 0)"
    if [ "$count_all" -gt 0 ] && [ "$count_seen" -ge "$count_all" ]; then
      if [ "$_DEBUG" = "on" ]; then
        printf_cyan "All $count_all wallpapers have been seen, regenerating cache and resetting..."
      fi
      __rm_rf "$RANDOMWALLPAPER_SEEN_FILE"
      touch "$RANDOMWALLPAPER_SEEN_FILE"
      __notifications "Wallpaper Changer" "All wallpapers have been seen ($count_all)\nRestarting rotation from beginning"
      __update_cache
      return 1
    fi
  else
    if [ "$_DEBUG" = "on" ]; then
      printf_cyan "Wallpaper cache file not found, creating initial cache..."
    fi
    __update_cache
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__find_random() {
  if __find_mtime "$RANDOMWALLPAPER_WALLPAPER_FILE" "${RANDOMWALLPAPER_REFRESH_TIME:-720}"; then
    if [ "$_DEBUG" = "on" ]; then
      printf_cyan "Cache is older than refresh time, updating..."
    fi
    __update_cache
  fi
  if [ "$RANDOMWALLPAPER_MANUAL" != "true" ]; then
    if grep -shqv "$SET_WALLPAPER" "$RANDOMWALLPAPER_SEEN_FILE" &>/dev/null; then
      while :; do
        SETRANDOM="$(grep -shvf "$RANDOMWALLPAPER_SEEN_FILE" "$RANDOMWALLPAPER_WALLPAPER_FILE" | sort -R | head -n1)"
        if [ -z "$SETRANDOM" ]; then
          SETRANDOM="$(__find_cmd "$RANDOMWALLPAPER_WALLPAPER_DIR" | sort -R | tail -n 1)"
        fi
        RANDOMWALLPAPER="$SETRANDOM"
        SET_WALLPAPER="$RANDOMWALLPAPER"
        SHORTNAME="$(echo "${SET_WALLPAPER/$RANDOMWALLPAPER_WALLPAPER_DIR/}" | sed 's#^/##g')"
        if grep -sh "$SET_WALLPAPER" "$RANDOMWALLPAPER_SEEN_FILE" &>/dev/null; then
          true
        else
          break
        fi
      done
    fi
  fi
  __seen_file
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__seen_file() {
  echo "$SET_WALLPAPER" >>"$RANDOMWALLPAPER_SEEN_FILE"
  if __cp_rf "$RANDOMWALLPAPER_SEEN_FILE" "$RANDOMWALLPAPER_SEEN_FILE_TMP"; then
    cat "$RANDOMWALLPAPER_SEEN_FILE_TMP" | sort -u >"$RANDOMWALLPAPER_SEEN_FILE"
  fi
  __rm_rf "$RANDOMWALLPAPER_SEEN_FILE_TMP"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__get_wallpaper_dirs() {
  local dirs=()
  # User configured directory (if set and exists)
  if [ -n "$RANDOMWALLPAPER_WALLPAPER_DIR" ] && [ -d "$RANDOMWALLPAPER_WALLPAPER_DIR" ]; then
    dirs+=("$RANDOMWALLPAPER_WALLPAPER_DIR")
  fi
  if [ "$(uname -s)" = "Darwin" ]; then
    # macOS locations
    [ -d "$HOME/Pictures/Wallpapers" ] && dirs+=("$HOME/Pictures/Wallpapers")
    [ -d "$HOME/Library/Desktop Pictures" ] && dirs+=("$HOME/Library/Desktop Pictures")
    [ -d "/Library/Desktop Pictures" ] && dirs+=("/Library/Desktop Pictures")
  else
    # Linux locations - exactly as specified
    [ -d "$HOME/.local/share/wallpapers" ] && dirs+=("$HOME/.local/share/wallpapers")
    [ -d "/usr/share/backgrounds" ] && dirs+=("/usr/share/backgrounds")
    [ -d "/usr/share/wallpapers" ] && dirs+=("/usr/share/wallpapers")
  fi
  # Remove duplicates and print
  printf '%s\n' "${dirs[@]}" | sort -u
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__update_cache() {
  local dir="" count=0
  local -a wp_dirs=()
  if [ "$_DEBUG" = "on" ]; then
    printf_cyan "Updating wallpaper cache..."
  fi
  rm -Rf "$RANDOMWALLPAPER_WALLPAPER_FILE" &>/dev/null
  touch "$RANDOMWALLPAPER_WALLPAPER_FILE"
  # Get all valid wallpaper directories
  while IFS= read -r dir; do
    [ -n "$dir" ] && wp_dirs+=("$dir")
  done < <(__get_wallpaper_dirs)
  if [ ${#wp_dirs[@]} -eq 0 ]; then
    printf_error "No wallpaper directories found"
    if [ "$(uname -s)" = "Darwin" ]; then
      printf_error "Create one of the following:"
      printf_error "  - $HOME/Pictures/Wallpapers"
      printf_error "  - $HOME/Library/Desktop Pictures"
    else
      printf_error "Create one of the following:"
      printf_error "  - $HOME/.local/share/wallpapers"
      printf_error "  - /usr/share/backgrounds"
      printf_error "  - /usr/share/wallpapers"
    fi
    return 1
  fi
  # Search each directory
  for dir in "${wp_dirs[@]}"; do
    if [ "$_DEBUG" = "on" ]; then
      printf_cyan "Searching: $dir"
    fi
    __find_cmd "$dir"
  done | sort -u >"$RANDOMWALLPAPER_WALLPAPER_FILE"
  count="$(wc -l < "$RANDOMWALLPAPER_WALLPAPER_FILE" 2>/dev/null || echo 0)"
  if [ "$count" -eq 0 ]; then
    printf_error "No wallpaper images found in any directory"
    return 1
  fi
  if [ "$_DEBUG" = "on" ]; then
    printf_cyan "Found $count wallpapers in cache"
  fi
  return 0
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__xfce_change_wp() {
  local wallpaper="$1"
  local props prop
  props="$(xfconf-query --channel xfce4-desktop --list 2>/dev/null | grep -E 'last-image$|image-path$')"
  if [ -z "$props" ]; then
    return 1
  fi
  for prop in $props; do
    xfconf-query --channel xfce4-desktop --property "$prop" --set "$wallpaper" 2>/dev/null
  done
  return 0
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__detect_desktop_session() {
  local session=""
  if [ "$(uname -s)" = "Darwin" ]; then
    echo "macos"
    return 0
  fi
  if [ -n "$XDG_CURRENT_DESKTOP" ]; then
    session="$(echo "$XDG_CURRENT_DESKTOP" | tr '[:upper:]' '[:lower:]')"
  elif [ -n "$DESKTOP_SESSION" ]; then
    session="$(echo "$DESKTOP_SESSION" | tr '[:upper:]' '[:lower:]')"
  elif [ -n "$XDG_SESSION_DESKTOP" ]; then
    session="$(echo "$XDG_SESSION_DESKTOP" | tr '[:upper:]' '[:lower:]')"
  elif [ -n "$HYPRLAND_INSTANCE_SIGNATURE" ]; then
    session="hyprland"
  elif [ -n "$SWAYSOCK" ]; then
    session="sway"
  fi
  echo "$session"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__detect_wallpaper_tool() {
  local tool=""
  local session="$(__detect_desktop_session)"
  # macOS
  if [ "$session" = "macos" ]; then
    tool="osascript"
  # XFCE
  elif [[ "$session" == *"xfce"* ]] && __cmd_exists xfconf-query; then
    tool="xfconf-query"
  # GNOME and GNOME-based
  elif [[ "$session" == *"gnome"* ]] && __cmd_exists gsettings; then
    tool="gsettings"
  elif [[ "$session" == *"unity"* ]] && __cmd_exists gsettings; then
    tool="gsettings"
  elif [[ "$session" == *"pantheon"* ]] && __cmd_exists gsettings; then
    tool="gsettings-pantheon"
  elif [[ "$session" == *"budgie"* ]] && __cmd_exists gsettings; then
    tool="gsettings"
  # KDE Plasma
  elif [[ "$session" == *"kde"* ]] || [[ "$session" == *"plasma"* ]]; then
    if __cmd_exists plasma-apply-wallpaperimage; then
      tool="plasma-apply-wallpaperimage"
    elif __cmd_exists qdbus; then
      tool="qdbus"
    fi
  # Cinnamon
  elif [[ "$session" == *"cinnamon"* ]] && __cmd_exists gsettings; then
    tool="gsettings-cinnamon"
  # MATE
  elif [[ "$session" == *"mate"* ]] && __cmd_exists gsettings; then
    tool="gsettings-mate"
  # LXQt
  elif [[ "$session" == *"lxqt"* ]] && __cmd_exists pcmanfm-qt; then
    tool="pcmanfm-qt"
  # LXDE
  elif [[ "$session" == *"lxde"* ]] && __cmd_exists pcmanfm; then
    tool="pcmanfm"
  # Hyprland
  elif [[ "$session" == *"hyprland"* ]]; then
    if __cmd_exists hyprctl; then
      tool="hyprctl"
    elif __cmd_exists swww; then
      tool="swww"
    elif __cmd_exists swaybg; then
      tool="swaybg"
    fi
  # Sway
  elif [[ "$session" == *"sway"* ]]; then
    if __cmd_exists swww; then
      tool="swww"
    elif __cmd_exists swaybg; then
      tool="swaybg"
    fi
  # Wayland fallbacks
  elif [ -n "$WAYLAND_DISPLAY" ]; then
    if __cmd_exists swww; then
      tool="swww"
    elif __cmd_exists swaybg; then
      tool="swaybg"
    fi
  # X11 fallbacks
  elif [ -n "$DISPLAY" ]; then
    if __cmd_exists feh; then
      tool="feh"
    elif __cmd_exists nitrogen; then
      tool="nitrogen"
    elif __cmd_exists xwallpaper; then
      tool="xwallpaper"
    elif __cmd_exists hsetroot; then
      tool="hsetroot"
    fi
  fi
  echo "$tool"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__randomwallpaper() {
  local exitCode=0
  local changer_app=""
  local session_name="$(__detect_desktop_session)"
  if [ -z "$SET_WALLPAPER" ]; then
    printf_error "No wallpaper selected"
    return 1
  fi
  if [ ! -f "$SET_WALLPAPER" ]; then
    printf_error "Wallpaper file does not exist: $SET_WALLPAPER"
    return 1
  fi
  changer_app="$(__detect_wallpaper_tool)"
  if [ -z "$changer_app" ]; then
    printf_error "No wallpaper tool found"
    printf_error "Desktop environment: ${session_name:-unknown}"
    printf_error "Please install one of the following:"
    printf_error "  - macOS: Built-in (osascript)"
    printf_error "  - GNOME/Cinnamon/MATE/Budgie: gsettings"
    printf_error "  - XFCE: xfconf-query"
    printf_error "  - KDE Plasma: plasma-apply-wallpaperimage"
    printf_error "  - Hyprland/Sway: swww or swaybg"
    printf_error "  - X11: feh, nitrogen, xwallpaper, hsetroot"
    if [ "$_DEBUG" = "on" ]; then
      printf_red "Session: $session_name"
      printf_red "DISPLAY: ${DISPLAY:-not set}"
      printf_red "WAYLAND_DISPLAY: ${WAYLAND_DISPLAY:-not set}"
    fi
    return 1
  fi
  if [ "$_DEBUG" = "on" ]; then
    printf_cyan "Desktop session: $session_name"
    printf_cyan "Using wallpaper tool: $changer_app"
    printf_cyan "Setting wallpaper: $SET_WALLPAPER"
  fi
  case "$changer_app" in
  osascript)
    osascript -e "tell application \"System Events\" to tell every desktop to set picture to \"$SET_WALLPAPER\"" &>/dev/null
    exitCode=$?
    ;;
  xfconf-query)
    __xfce_change_wp "$SET_WALLPAPER"
    exitCode=$?
    ;;
  gsettings)
    gsettings set org.gnome.desktop.background picture-uri "file://$SET_WALLPAPER" 2>/dev/null
    gsettings set org.gnome.desktop.background picture-uri-dark "file://$SET_WALLPAPER" 2>/dev/null
    gsettings set org.gnome.desktop.background picture-options "zoom" 2>/dev/null
    exitCode=$?
    ;;
  gsettings-pantheon)
    gsettings set org.gnome.desktop.background picture-uri "file://$SET_WALLPAPER" 2>/dev/null
    gsettings set io.elementary.desktop.background picture-uri "file://$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  gsettings-cinnamon)
    gsettings set org.cinnamon.desktop.background picture-uri "file://$SET_WALLPAPER" 2>/dev/null
    gsettings set org.cinnamon.desktop.background picture-options "zoom" 2>/dev/null
    exitCode=$?
    ;;
  gsettings-mate)
    gsettings set org.mate.background picture-filename "$SET_WALLPAPER" 2>/dev/null
    gsettings set org.mate.background picture-options "zoom" 2>/dev/null
    exitCode=$?
    ;;
  plasma-apply-wallpaperimage)
    plasma-apply-wallpaperimage "$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  qdbus)
    qdbus org.kde.plasmashell /PlasmaShell org.kde.PlasmaShell.evaluateScript "
      var allDesktops = desktops();
      for (i=0;i<allDesktops.length;i++) {
        d = allDesktops[i];
        d.wallpaperPlugin = 'org.kde.image';
        d.currentConfigGroup = Array('Wallpaper', 'org.kde.image', 'General');
        d.writeConfig('Image', 'file://$SET_WALLPAPER')
      }" 2>/dev/null
    exitCode=$?
    ;;
  pcmanfm-qt)
    pcmanfm-qt --set-wallpaper="$SET_WALLPAPER" --wallpaper-mode=stretch 2>/dev/null
    exitCode=$?
    ;;
  pcmanfm)
    pcmanfm --set-wallpaper="$SET_WALLPAPER" --wallpaper-mode=stretch 2>/dev/null
    exitCode=$?
    ;;
  hyprctl)
    hyprctl hyprpaper preload "$SET_WALLPAPER" 2>/dev/null
    hyprctl hyprpaper wallpaper ",$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  swww)
    if ! pgrep -x swww-daemon &>/dev/null; then
      swww-daemon &>/dev/null &
      sleep 0.5
    fi
    swww img "$SET_WALLPAPER" --transition-type none 2>/dev/null
    exitCode=$?
    ;;
  swaybg)
    pkill -x swaybg 2>/dev/null
    sleep 0.1
    swaybg -i "$SET_WALLPAPER" -m fill &>/dev/null &
    disown 2>/dev/null
    exitCode=0
    ;;
  feh)
    feh --bg-fill "$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  nitrogen)
    nitrogen --set-zoom-fill --save "$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  xwallpaper)
    xwallpaper --zoom "$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  hsetroot)
    hsetroot -fill "$SET_WALLPAPER" 2>/dev/null
    exitCode=$?
    ;;
  *)
    printf_error "Unknown wallpaper tool: $changer_app"
    exitCode=1
    ;;
  esac
  if [ $exitCode -ne 0 ]; then
    printf_error "Failed to set wallpaper using $changer_app"
    if [ "$_DEBUG" = "on" ]; then
      printf_red "Command failed with exit code: $exitCode"
      printf_red "Wallpaper: $SET_WALLPAPER"
    fi
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__term() {
  trap '$APPNAME --term' SIGINT
  local main sleeptime ENABLED START_STOP_MESG
  while :; do
    clear
    shift 1
    printf_newline "\n\n\n\n"
    printf_head "Random Wall Paper Menu"
    if [[ -f "$HOME/.config/autostart/randomwallpaper.desktop" ]]; then
      ENABLED="disable"
    else
      ENABLED="enable"
    fi
    if __getstatus; then
      START_STOP_MESG="Stop randomwallpaper"
      printf_green "randomwallpapers is running"
    else
      START_STOP_MESG="Start randomwallpaper"
      printf_red "randomwallpapers is not running"
    fi
    printf_green "c. change the wallpaper"
    printf_green "e. $ENABLED randomwallpaper"
    printf_green "h. get current status"
    printf_green "r. Change the wallpaper every x minutes"
    printf_green "s. $START_STOP_MESG"
    printf_green "u. update wallpapaper file"
    printf_green "z. Exit"
    printf_green "---------------------------------"
    printf_read_question_nt "6" "Enter your choice [y-z] : " "1" "main" "-se"
    clear
    printf_newline '\n\n\n'
    case "$main" in
    c)
      "$APPNAME" new
      ;;
    e)
      if [[ "$ENABLED" = "disable" ]]; then
        __startup_disable
        sleep 5s
      elif [[ "$ENABLED" = "enable" ]]; then
        __startup
        sleep 5s
      fi
      ;;
    k)
      sh -c "randomwallpaper bg kill"
      sleep 3
      ;;
    h)
      shift 1
      "$APPNAME" bg status
      printf_pause "Press any key to continue"
      ;;
    r)
      if __getstatus; then
        __notify_running
      else
        printf_read_input "6" "How often do you want it to change? [minutes]: " "5" "sleeptime"
        counter=$((60 * sleeptime))
        RANDOMWALLPAPER_SLEEP_TIME="$counter"
        randomwallpaper bg start
        printf_green "Started randomwallpaper in the background"
        printf_counter "5" "4" "exiting menu in"
        break
      fi
      ;;
    s)
      if __getstatus; then
        sh -c "randomwallpaper bg kill"
      else
        randomwallpaper bg start &
      fi
      ;;
    u)
      __update_cache
      ;;
    $'\E' | $'\e' | z | x | n)
      break
      ;;
    *) ;;
    esac
    clear
    printf_counter "5" "3" "Re-loading menu in"
  done
  clear
  exit
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_EXIT_STATUS=0
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_CONFIG_FILE="${RANDOMWALLPAPER_CONFIG_FILE:-settings.conf}"
RANDOMWALLPAPER_CONFIG_DIR="${RANDOMWALLPAPER_CONFIG_DIR:-$HOME/.config/myscripts/randomwallpaper}"
RANDOMWALLPAPER_CONFIG_BACKUP_DIR="${RANDOMWALLPAPER_CONFIG_BACKUP_DIR:-$HOME/.local/share/myscripts/randomwallpaper/backups}"
RANDOMWALLPAPER_LOG_DIR="${RANDOMWALLPAPER_LOG_DIR:-$HOME/.local/log/randomwallpaper}"
RANDOMWALLPAPER_TEMP_DIR="${RANDOMWALLPAPER_TEMP_DIR:-$HOME/.local/tmp/system_scripts/randomwallpaper}"
RANDOMWALLPAPER_CACHE_DIR="${RANDOMWALLPAPER_CACHE_DIR:-$HOME/.cache/randomwallpaper}"
RANDOMWALLPAPER_RUN_DIR="${RANDOMWALLPAPER_RUN_DIR:-$HOME/.local/run/system_scripts/randomwallpaper}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_OUTPUT_COLOR_1="${RANDOMWALLPAPER_OUTPUT_COLOR_1:-33}"
RANDOMWALLPAPER_OUTPUT_COLOR_2="${RANDOMWALLPAPER_OUTPUT_COLOR_2:-5}"
RANDOMWALLPAPER_OUTPUT_COLOR_GOOD="${RANDOMWALLPAPER_OUTPUT_COLOR_GOOD:-2}"
RANDOMWALLPAPER_OUTPUT_COLOR_ERROR="${RANDOMWALLPAPER_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_NOTIFY_ENABLED="${RANDOMWALLPAPER_NOTIFY_ENABLED:-yes}"
RANDOMWALLPAPER_GOOD_NAME="${RANDOMWALLPAPER_GOOD_NAME:-Great:}"
RANDOMWALLPAPER_ERROR_NAME="${RANDOMWALLPAPER_ERROR_NAME:-Error:}"
RANDOMWALLPAPER_GOOD_MESSAGE="${RANDOMWALLPAPER_GOOD_MESSAGE:-No errors reported}"
RANDOMWALLPAPER_ERROR_MESSAGE="${RANDOMWALLPAPER_ERROR_MESSAGE:-Errors were reported}"
RANDOMWALLPAPER_NOTIFY_CLIENT_NAME="${RANDOMWALLPAPER_NOTIFY_CLIENT_NAME:-$APPNAME}"
RANDOMWALLPAPER_NOTIFY_CLIENT_ICON="${RANDOMWALLPAPER_NOTIFY_CLIENT_ICON:-notification-new}"
RANDOMWALLPAPER_NOTIFY_CLIENT_URGENCY="${RANDOMWALLPAPER_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_ROTATE_TYPE="${RANDOMWALLPAPER_ROTATE_TYPE:-minutes}"
RANDOMWALLPAPER_ROTATE_TIME="${RANDOMWALLPAPER_ROTATE_TIME:-5}"
RANDOMWALLPAPER_KILL_FILE="${RANDOMWALLPAPER_KILL_FILE:-$RANDOMWALLPAPER_TEMP_DIR/randomwallpaper.$USER.kill}"
RANDOMWALLPAPER_RUN_FILE="${RANDOMWALLPAPER_RUN_FILE:-$RANDOMWALLPAPER_TEMP_DIR/randomwallpaper.$USER}"
RANDOMWALLPAPER_SEEN_FILE="${RANDOMWALLPAPER_SEEN_FILE:-$RANDOMWALLPAPER_CACHE_DIR/randomwallpaper.seen}"
RANDOMWALLPAPER_WALLPAPER_FILE="${RANDOMWALLPAPER_WALLPAPER_FILE:-$RANDOMWALLPAPER_CACHE_DIR/randomwallpaper.all}"
RANDOMWALLPAPER_SEEN_FILE_TMP="${RANDOMWALLPAPER_SEEN_FILE_TMP:-$RANDOMWALLPAPER_SEEN_FILE.tmp}"
RANDOMWALLPAPER_WALLPAPER_DIR="${RANDOMWALLPAPER_WALLPAPER_DIR:-${WALLPAPER_DIR:-$HOME/.local/share/wallpapers}}"
RANDOMWALLPAPER_REFRESH_TIME="${RANDOMWALLPAPER_REFRESH_TIME:-$((60 * "${RANDOMWALLPAPER_REFRESH_TIME:-12}"))}"
RANDOMWALLPAPER_MANUAL="${RANDOMWALLPAPER_MANUAL:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE" ]; then
  true
elif [ "$*" = "--config" ]; then
  true
else
  INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
if [ -f "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE" ]; then
  . "$RANDOMWALLPAPER_CONFIG_DIR/$RANDOMWALLPAPER_CONFIG_FILE"
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
[ -d "$RANDOMWALLPAPER_LOG_DIR" ] || mkdir -p "$RANDOMWALLPAPER_LOG_DIR" |& __devnull
[ -d "$RANDOMWALLPAPER_TEMP_DIR" ] || mkdir -p "$RANDOMWALLPAPER_TEMP_DIR" |& __devnull
[ -d "$RANDOMWALLPAPER_CACHE_DIR" ] || mkdir -p "$RANDOMWALLPAPER_CACHE_DIR" |& __devnull
[ -d "$RANDOMWALLPAPER_RUN_DIR" ] || mkdir -p "$RANDOMWALLPAPER_RUN_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_TEMP_FILE="${RANDOMWALLPAPER_TEMP_FILE:-$(mktemp $RANDOMWALLPAPER_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_WALLPAPER_COUNT="$(find -L "$RANDOMWALLPAPER_WALLPAPER_DIR" -type f 2>/dev/null | wc -l)"
if [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "minutes" ]; then
  RANDOMWALLPAPER_SLEEP_TIME="$((RANDOMWALLPAPER_ROTATE_TIME * 60))"
  RANDOMWALLPAPER_DISPLAY_TIME="$RANDOMWALLPAPER_ROTATE_TIME minute[s]"
elif [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "hourly" ]; then
  RANDOMWALLPAPER_SLEEP_TIME="$((RANDOMWALLPAPER_ROTATE_TIME * 60 * 60))"
  RANDOMWALLPAPER_DISPLAY_TIME="$RANDOMWALLPAPER_SLEEP_TIME hour[s]"
elif [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "daily" ]; then
  RANDOMWALLPAPER_SLEEP_TIME=$((24 * 60 * 60 / RANDOMWALLPAPER_WALLPAPER_COUNT))
  RANDOMWALLPAPER_DISPLAY_TIME="$RANDOMWALLPAPER_SLEEP_TIME [m,h]"
elif [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "weekly" ]; then
  RANDOMWALLPAPER_SLEEP_TIME=$((24 * 60 * 60 * 7 / RANDOMWALLPAPER_WALLPAPER_COUNT))
  RANDOMWALLPAPER_DISPLAY_TIME="$RANDOMWALLPAPER_SLEEP_TIME [m,h,d]"
elif [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "monthly" ]; then
  RANDOMWALLPAPER_SLEEP_TIME=$((24 * 60 * 60 * 30 / RANDOMWALLPAPER_WALLPAPER_COUNT))
  RANDOMWALLPAPER_DISPLAY_TIME="$RANDOMWALLPAPER_SLEEP_TIME [m,h,d,w]"
elif [ "$RANDOMWALLPAPER_ROTATE_TYPE" = "slideshow" ]; then
  RANDOMWALLPAPER_SLEEP_TIME="${SLIDESHOW_TIME:-5}"
else
  RANDOMWALLPAPER_SLEEP_TIME="$((RANDOMWALLPAPER_ROTATE_TIME * 60))"
  RANDOMWALLPAPER_DISPLAY_TIME="$((RANDOMWALLPAPER_SLEEP_TIME / 60)) minute[s]"
fi
RANDOMWALLPAPER_SLEEP_TIME="${RANDOMWALLPAPER_SLEEP_TIME:-60}"
RANDOMWALLPAPER_ROTATE_TIME="${RANDOMWALLPAPER_ROTATE_TIME:-$RANDOMWALLPAPER_SLEEP_TIME}"
RANDOMWALLPAPER_DISPLAY_TIME="${RANDOMWALLPAPER_DISPLAY_TIME:-$RANDOMWALLPAPER_SLEEP_TIME}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS=""
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",term,rebuild"
# - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY="enable,disable,update,new,bg"
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    RANDOMWALLPAPER_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    RANDOMWALLPAPER_CWD="$2"
    [ -d "$RANDOMWALLPAPER_CWD" ] || mkdir -p "$RANDOMWALLPAPER_CWD" |& __devnull
    shift 2
    ;;
  --term)
    shift 1
    TERMINAL_APP="TRUE"
    ;;
  --rebuild)
    shift 1
    __update_cache
    exit
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_CWD="$(realpath "${RANDOMWALLPAPER_CWD:-$PWD}" 2>/dev/null)"
export RANDOMWALLPAPER_CWD
# - - - - - - - - - - - - - - - - - - - - - - - - -
export SCRIPTS_PREFIX="$RANDOMWALLPAPER_SCRIPTS_PREFIX"
# - - - - - - - - - - - - - - - - - - - - - - - - -
__initialize "$@"
__find_random "$@"
__variety
__getstatus
# - - - - - - - - - - - - - - - - - - - - - - - - -
case "$1" in
bg)
  shift 1
  case $1 in
  run)
    shift $#
    run_count="$(__start_count 'randomwallpaper' 'run')"
    if [ "$run_count" -gt 2 ]; then
      __notify_running
    else
      __background_job "$@"
    fi
    exit
    ;;

  new)
    shift $#
    if __randomwallpaper; then
      __mesg_ok
    else
      __mesg_fail
    fi
    exit $?
    ;;

  restart)
    printf_red "Attempting to restart $APPNAME"
    __notifications "$APPNAME" "Attempting to restart $APPNAME"
    sh -c "$APPNAME" bg stop
    sh -c "$APPNAME" bg start
    exit $?
    ;;

  start)
    shift $#
    start_count="$(__start_count 'randomwallpaper' 'start')"
    if [ "$start_count" -gt 2 ]; then
      __notify_running
      printf_exit "More than one instance seems to be runnng"
    fi
    if __getstatus; then
      __notify_running
    else
      __start
      exit $?
    fi
    ;;

  stop | kill)
    shift $#
    printf_green "Killing background service"
    touch "$RANDOMWALLPAPER_KILL_FILE"
    __kill
    exit
    ;;

  status)
    shift $#
    if __getstatus; then
      if [ -n "$GETTPID" ]; then
        __notify_running
        printf_exit 2 0 "randomwallpapers is running with PID: $GETTPID"
      else
        __notifications "RandomWallPapers" "randomwallpapers appears to be stopped"
        printf_exit 1 1 "randomwallpapers appears to be stopped"
      fi
    else
      __notifications "RandomWallPapers" "randomwallpapers appears to be stopped"
      printf_exit 1 1 "randomwallpapers appears to be stopped"
    fi
    exit $?
    ;;

  *)
    __start "$@"
    exit $?
    ;;
  esac
  ;;

startup | enable)
  shift 1
  __startup
  exit $?
  ;;

disable)
  shift 1
  __startup_disable
  exit $?
  ;;

update)
  __update_cache
  exit $?
  ;;

new)
  shift 1
  if __randomwallpaper "$@"; then
    __mesg_ok
  else
    __mesg_fail
  fi
  exit $?
  ;;

*)
  if [ -n "$TERMINAL_APP" ]; then
    __term
  fi
  if __randomwallpaper "$@"; then
    __mesg_ok
  else
    __mesg_fail
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
RANDOMWALLPAPER_EXIT_STATUS="${RANDOMWALLPAPER_EXIT_STATUS:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
exit ${RANDOMWALLPAPER_EXIT_STATUS:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# ex: ts=2 sw=2 et filetype=sh
