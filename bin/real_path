# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
REAL_PATH_NOTIFY_ENABLED="${REAL_PATH_NOTIFY_ENABLED:-yes}"
REAL_PATH_GOOD_NAME="${REAL_PATH_GOOD_NAME:-Great:}"
