# begin main app
case "$1" in
basename)
  shift 1
  __real_basename -- "$1"
  exit $?
  ;;

dirpath)
  shift 1
  __real_dirpath "$1"
  exit $?
  ;;

dirname)
  shift 1
  __real_dirname "$1"
  exit $?
  ;;

readlink)
  shift 1
  __real_path "$1"
  exit $?
  ;;

topdir)
  shift 1
  __git_top_dir "$1"
  exit $?
  ;;

*)
  __real_path "$1"
  ;;
esac
