# Generate config files
[ -f "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE" ] || [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
