RECORDING_OUTPUT_COLOR_1="${RECORDING_OUTPUT_COLOR_1:-33}"
RECORDING_OUTPUT_COLOR_2="${RECORDING_OUTPUT_COLOR_2:-5}"
RECORDING_OUTPUT_COLOR_GOOD="${RECORDING_OUTPUT_COLOR_GOOD:-2}"
RECORDING_OUTPUT_COLOR_ERROR="${RECORDING_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
