user_install && __options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  local exitCode=0
  [ -n "$1" ] || return 0
  for cmd in "$@"; do
    if builtin command -v "$cmd" &>/dev/null; then
      exitCode=$((exitCode + 0))
    else
      exitCode=$((exitCode + 1))
    fi
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 2 --retry 1 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE"
  fi
  [ -d "$RECORDING_CONFIG_DIR" ] || mkdir -p "$RECORDING_CONFIG_DIR"
  [ -d "$RECORDING_CONFIG_BACKUP_DIR" ] || mkdir -p "$RECORDING_CONFIG_BACKUP_DIR"
  [ -f "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE" ] &&
    cp -Rf "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE" "$RECORDING_CONFIG_BACKUP_DIR/$RECORDING_CONFIG_FILE.$$"
  cat <<EOF >"$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE"
# Settings for recording
RECORDING_ASCIINEMA_RECORD_TIME="${RECORDING_ASCIINEMA_RECORD_TIME:-}"
RECORDING_MENU_TIMER="${RECORDING_MENU_TIMER:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
RECORDING_OUTPUT_COLOR_1="${RECORDING_OUTPUT_COLOR_1:-}"
RECORDING_OUTPUT_COLOR_2="${RECORDING_OUTPUT_COLOR_2:-}"
RECORDING_OUTPUT_COLOR_GOOD="${RECORDING_OUTPUT_COLOR_GOOD:-}"
RECORDING_OUTPUT_COLOR_ERROR="${RECORDING_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
RECORDING_NOTIFY_ENABLED="${RECORDING_NOTIFY_ENABLED:-}"
RECORDING_GOOD_NAME="${RECORDING_GOOD_NAME:-}"
RECORDING_ERROR_NAME="${RECORDING_ERROR_NAME:-}"
RECORDING_GOOD_MESSAGE="${RECORDING_GOOD_MESSAGE:-}"
RECORDING_ERROR_MESSAGE="${RECORDING_ERROR_MESSAGE:-}"
RECORDING_NOTIFY_CLIENT_NAME="${RECORDING_NOTIFY_CLIENT_NAME:-}"
RECORDING_NOTIFY_CLIENT_ICON="${RECORDING_NOTIFY_CLIENT_ICON:-}"
RECORDING_NOTIFY_CLIENT_URGENCY="${RECORDING_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$RECORDING_CONFIG_DIR/$RECORDING_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "recording:  recording menu - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: recording [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$RECORDING_REQUIRE_SUDO" = "yes" ] && [ -z "$RECORDING_REQUIRE_SUDO_RUN" ]; then
    export RECORDING_REQUIRE_SUDO="no"
    export RECORDING_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$RECORDING_TEMP_FILE" ] && rm -Rf "$RECORDING_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__run_prog_menus() {
  clear
  if __cmd_exists "$1"; then
    eval "$@" || return 1
  else
    printf_pause "$1 is not a valid application"
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__custom_menus() {
  local custom="" opts=""
  clear && printf '\n\n'
  printf_read_input "6" "Enter your custom program : " "120" "custom"
  printf_read_input "6" "Enter any additional options [type file to choose] : " "120" "opts"
  if [ "$opts" = "file" ]; then opts="$(__open_file_menus "$custom")"; fi
  __cmd_exists $custom && printf '\n' && eval $custom $opts 2>/dev/null && exitCode=1 || {
    printf_red "$custom is an invalid program"
    exitCode=1
  }
  printf '\n'
  printf_pause
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__execute_recording() {
  while :; do
    shift 1
    clear
    printf_newline "\n\n\n\n"
    printf_head "Recording Menu"
    printf_green "0. Reload $APPNAME"
    printf_green "a. launch asciinema"
    printf_green "b. launch recordmydesktop"
    printf_green "c. launch obs"
    printf_green "d. vokoscreen"
    printf_green "e. simplescreenrecorder"
    printf_green "x. start/stop screenkey"
    printf_green "y. launch custom application"
    printf_green "z. or escape to Exit"
    printf_green "---------------------------------"
    printf_read_question_nt "6" "Enter your choice [a-z] : " "1" "main"
    printf_newline
    date="$(date +'%m-%d-%Y-%H-%M')"
    clear
    case "$main" in # take action

    0)
      exec "$0"
      exit $?
      ;;
    a)
      shift 1
      [ -d "$HOME/Videos/asciinema" ] || mkdir -p "$HOME/Videos/asciinema"
      printf_cyan "Recording terminal session recording will stop after $RECORDING_ASCIINEMA_RECORD_TIME of inactivity"
      printf_purple "When done recording type q or exit and recording will stop"
      __cmd_exists asciinema && eval asciinema rec --stdin -q -i "$RECORDING_ASCIINEMA_RECORD_TIME" -t "$date" "$HOME/Videos/asciinema/record_term-$date.cast" || printf_pause "failed to start asciinema"
      ;;
    b)
      shift 1
      __run_prog_menus recordmydesktop "$@"
      ;;
    c)
      shift 1
      __run_prog_menus obs "$@"
      ;;
    d)
      shift 1
      __run_prog_menus vokoscreen "$@"
      ;;
    e)
      shift 1
      __run_prog_menus simplescreenrecorder "$@"
      ;;
    x)
      shift 1
      __run_prog_menus ss_screenkey "$@"
      ;;
    y)
      shift 1
      __custom_menus "$@" && printf_pause
      ;;
    $'\E' | $'\e' | z)
      clear
      break
      ;;
    *) shift ;;
    esac
    printf_newline "\n\n"
    printf_counter $RECORDING_OUTPUT_COLOR_2 "$RECORDING_MENU_TIMER" "Re-loading menu in"
    clear
  done
  clear
  return
}
