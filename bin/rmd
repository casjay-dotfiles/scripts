# Ensure Directories exist
[ -d "$RMD_LOG_DIR" ] || mkdir -p "$RMD_LOG_DIR" |& __devnull
[ -d "$RMD_TEMP_DIR" ] || mkdir -p "$RMD_TEMP_DIR" |& __devnull
[ -d "$RMD_CACHE_DIR" ] || mkdir -p "$RMD_CACHE_DIR" |& __devnull
