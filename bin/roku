ROKU_ERROR_MESSAGE="${ROKU_ERROR_MESSAGE:-Errors were reported}"
ROKU_NOTIFY_CLIENT_NAME="${ROKU_NOTIFY_CLIENT_NAME:-$APPNAME}"
ROKU_NOTIFY_CLIENT_ICON="${ROKU_NOTIFY_CLIENT_ICON:-notification-new}"
