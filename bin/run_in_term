user_install && __options "$@"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  exitCode=0
  [ -n "$1" ] && local exitCode="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && exitCode+=$(($exitCode + 0)) || exitCode+=$(($exitCode + 1))
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 2 --retry 1 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE"
  fi
  [ -d "$RUN_IN_TERM_CONFIG_DIR" ] || mkdir -p "$RUN_IN_TERM_CONFIG_DIR"
  [ -d "$RUN_IN_TERM_CONFIG_BACKUP_DIR" ] || mkdir -p "$RUN_IN_TERM_CONFIG_BACKUP_DIR"
  [ -f "$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE" ] &&
    cp -Rf "$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE" "$RUN_IN_TERM_CONFIG_BACKUP_DIR/$RUN_IN_TERM_CONFIG_FILE.$$"
  cat <<EOF >"$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE"
# Settings for run_in_term

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
RUN_IN_TERM_OUTPUT_COLOR_1="${RUN_IN_TERM_OUTPUT_COLOR_1:-}"
RUN_IN_TERM_OUTPUT_COLOR_2="${RUN_IN_TERM_OUTPUT_COLOR_2:-}"
RUN_IN_TERM_OUTPUT_COLOR_GOOD="${RUN_IN_TERM_OUTPUT_COLOR_GOOD:-}"
RUN_IN_TERM_OUTPUT_COLOR_ERROR="${RUN_IN_TERM_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
RUN_IN_TERM_NOTIFY_ENABLED="${RUN_IN_TERM_NOTIFY_ENABLED:-}"
RUN_IN_TERM_GOOD_NAME="${RUN_IN_TERM_GOOD_NAME:-}"
RUN_IN_TERM_ERROR_NAME="${RUN_IN_TERM_ERROR_NAME:-}"
RUN_IN_TERM_GOOD_MESSAGE="${RUN_IN_TERM_GOOD_MESSAGE:-}"
RUN_IN_TERM_ERROR_MESSAGE="${RUN_IN_TERM_ERROR_MESSAGE:-}"
RUN_IN_TERM_NOTIFY_CLIENT_NAME="${RUN_IN_TERM_NOTIFY_CLIENT_NAME:-}"
RUN_IN_TERM_NOTIFY_CLIENT_ICON="${RUN_IN_TERM_NOTIFY_CLIENT_ICON:-}"
RUN_IN_TERM_NOTIFY_CLIENT_URGENCY="${RUN_IN_TERM_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$RUN_IN_TERM_CONFIG_DIR/$RUN_IN_TERM_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "run_in_term:  Keep a terminal app running - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: run_in_term [options] [commands]"
  __printf_line " - "
  __printf_line " - "
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$RUN_IN_TERM_REQUIRE_SUDO" = "yes" ] && [ -z "$RUN_IN_TERM_REQUIRE_SUDO_RUN" ]; then
    export RUN_IN_TERM_REQUIRE_SUDO="no"
    export RUN_IN_TERM_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$RUN_IN_TERM_TEMP_FILE" ] && rm -Rf "$RUN_IN_TERM_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD//$HOME/\~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__check_cmd() {
  local CMD="$1" && shift 1
  local ARG="$*" && shift $#
  if cmd_exists $CMD; then
    $CMD ${ARG:-} 2>/dev/null
  else
    printf_exit "1" "1" "$CMD does not exist"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__quit_check() {
  if [ "${1:-$__ANSWER}" = "exit" ] || [ "${1:-$__ANSWER}" = "quit" ] || [ "${1:-$__ANSWER}" = "!q" ]; then
    clear
    return 0
  else
    return 1
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
__execute_run_in_term() {
  if [ -n "$1" ]; then
    CMD="$1" && shift 1
    ARG="$*" && shift $#
    eval $CMD "$ARG"
  else
    printf_newline "\n\n\n"
    printf_read_input "2" "What command would you like to run [!q to exit]?" "120" "CMD" '-e'
    __quit_check "$CMD" && clear && exit
    printf_red "Type exit or ctrl + c to exit"
    printf_cyan "Usage: Enter the commands for $CMD"
    printf_cyan "To show this message again type: _help_"
    while :; do
      printf_read_input "5" "What would you like to pass to $CMD?" "120" "__ANSWER" '-e'
      __quit_check "$__ANSWER" && clear && break
      if [ "$__ANSWER" = _help_ ]; then
        clear
        printf_cyan "Usage: Enter the commands for $CMD or type exit to quit"
        continue
      fi
      clear
      printf_newline "\n\n\n"
      __check_cmd $CMD "$__ANSWER"
      printf_newline "\n"
    done
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
RUN_IN_TERM_CONFIG_FILE="${RUN_IN_TERM_CONFIG_FILE:-settings.conf}"
RUN_IN_TERM_CONFIG_DIR="${RUN_IN_TERM_CONFIG_DIR:-$HOME/.config/myscripts/run_in_term}"
