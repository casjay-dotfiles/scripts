[ -d "$SCRATCHPAD_TEMP_DIR" ] || mkdir -p "$SCRATCHPAD_TEMP_DIR" |& __devnull
[ -d "$SCRATCHPAD_CACHE_DIR" ] || mkdir -p "$SCRATCHPAD_CACHE_DIR" |& __devnull
