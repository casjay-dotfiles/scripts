# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && SCREEN_NEW_EXIT_STATUS=0 || SCREEN_NEW_EXIT_STATUS=1
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && SCREEN_NEW_EXIT_STATUS=0 || SCREEN_NEW_EXIT_STATUS=1
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  SCREEN_NEW_EXIT_STATUS=0
  [ -n "$1" ] && local SCREEN_NEW_EXIT_STATUS="" || return 0
  for cmd in "$@"; do
    builtin command -v "$cmd" &>/dev/null && SCREEN_NEW_EXIT_STATUS+=$(($SCREEN_NEW_EXIT_STATUS + 0)) || SCREEN_NEW_EXIT_STATUS+=$(($SCREEN_NEW_EXIT_STATUS + 1))
  done
  [ $SCREEN_NEW_EXIT_STATUS -eq 0 ] || SCREEN_NEW_EXIT_STATUS=3
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local SCREEN_NEW_EXIT_STATUS=0
  curl -q -LSsfI --max-time 1 --retry 0 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || SCREEN_NEW_EXIT_STATUS=4
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE"
  fi
  [ -d "$SCREEN_NEW_CONFIG_DIR" ] || mkdir -p "$SCREEN_NEW_CONFIG_DIR"
  [ -d "$SCREEN_NEW_CONFIG_BACKUP_DIR" ] || mkdir -p "$SCREEN_NEW_CONFIG_BACKUP_DIR"
  [ -f "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE" ] &&
    cp -Rf "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE" "$SCREEN_NEW_CONFIG_BACKUP_DIR/$SCREEN_NEW_CONFIG_FILE.$$"
  cat <<EOF >"$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE"
# Settings for screen-new

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
SCREEN_NEW_OUTPUT_COLOR_1="${SCREEN_NEW_OUTPUT_COLOR_1:-}"
SCREEN_NEW_OUTPUT_COLOR_2="${SCREEN_NEW_OUTPUT_COLOR_2:-}"
SCREEN_NEW_OUTPUT_COLOR_GOOD="${SCREEN_NEW_OUTPUT_COLOR_GOOD:-}"
SCREEN_NEW_OUTPUT_COLOR_ERROR="${SCREEN_NEW_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
SCREEN_NEW_SYSTEM_NOTIFY_ENABLED="${SCREEN_NEW_SYSTEM_NOTIFY_ENABLED:-}"
SCREEN_NEW_GOOD_NAME="${SCREEN_NEW_GOOD_NAME:-}"
SCREEN_NEW_ERROR_NAME="${SCREEN_NEW_ERROR_NAME:-}"
SCREEN_NEW_GOOD_MESSAGE="${SCREEN_NEW_GOOD_MESSAGE:-}"
SCREEN_NEW_ERROR_MESSAGE="${SCREEN_NEW_ERROR_MESSAGE:-}"
SCREEN_NEW_NOTIFY_CLIENT_NAME="${SCREEN_NEW_NOTIFY_CLIENT_NAME:-}"
SCREEN_NEW_NOTIFY_CLIENT_ICON="${SCREEN_NEW_NOTIFY_CLIENT_ICON:-}"
SCREEN_NEW_NOTIFY_CLIENT_URGENCY="${SCREEN_NEW_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE"
    SCREEN_NEW_EXIT_STATUS=0
  else
    printf_red "Failed to create the config file"
    SCREEN_NEW_EXIT_STATUS=1
  fi
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "screen-new:  - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: screen-new [command] [args]"
  __printf_line "Manage persistent screen sessions for commands"
  __printf_line "Prefix: Ctrl+n (Ctrl+n n sends literal Ctrl+n)"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Commands"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "<cmd> [args]                    - Create or attach (shorthand)"
  __printf_line "a|attach <cmd> [args]           - Create or attach to a session"
  __printf_line "ls|list                         - List active sessions"
  __printf_line "kill [name|all]                 - Kill a session, all, or list"
  __printf_line "d|detach [name]                 - Detach a session or list"
  __printf_line "edit [name]                     - Edit session config or main config"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Key Bindings (inside session)"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Ctrl+n d                        - Detach from session"
  __printf_line "Ctrl+n k                        - Kill current window"
  __printf_line "Ctrl+n n                        - Send literal Ctrl+n"
  __printf_line "Ctrl+n ?                        - Show screen help"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Examples"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "screen-new htop                 - Launch or attach to htop"
  __printf_line "screen-new htop -d 5            - Launch htop with arguments"
  __printf_line "screen-new ls                   - List all sessions"
  __printf_line "screen-new kill htop            - Kill the htop session"
  __printf_line "screen-new kill all             - Kill all sessions"
  __printf_line "screen-new d htop               - Detach the htop session"
  __printf_line "screen-new edit htop            - Edit htop session config"
  __printf_line "screen-new edit                 - Edit main config"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--reset                         - Reset config to defaults"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_line "--dir                           - Sets the working directory"
  __printf_line "--silent                        - Suppress informational output"
  __printf_line "--force                         - Force the operation"
  __printf_line ""
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__grep() { grep "$@" 2>/dev/null; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$SCREEN_NEW_REQUIRE_SUDO" = "yes" ] && [ -z "$SCREEN_NEW_REQUIRE_SUDO_RUN" ]; then
    export SCREEN_NEW_REQUIRE_SUDO="no"
    export SCREEN_NEW_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    SCREEN_NEW_EXIT_STATUS=$?
  else
    printf '%s\n' "This requires root to run"
    SCREEN_NEW_EXIT_STATUS=1
  fi
  return ${SCREEN_NEW_EXIT_STATUS:-0}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__how_long_did_it_take() {
  local retprev=$?
  local retval=${1:-$retprev}
  __cmd_exists bc || return $retval
  [ -n "$SCREEN_NEW_START_TIMER" ] || return 0
  local stop_time="$(date +%s.%N)"
  local dt=$(echo "$stop_time - $SCREEN_NEW_START_TIMER" | bc)
  local dd=$(echo "$dt/86400" | bc)
  local dt2=$(echo "$dt-86400*$dd" | bc)
  local dh=$(echo "$dt2/3600" | bc)
  local dt3=$(echo "$dt2-3600*$dh" | bc)
  local dm=$(echo "$dt3/60" | bc)
  local ds=$(echo "$dt3-60*$dm" | bc)
  printf_purple "$(LC_NUMERIC=C printf "Total runtime: %d Days, %02d Hours, %02d Minutes, %02.4f Seconds\n" $dd $dh $dm $ds)"
  return $retval
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit_screen-new() {
  SCREEN_NEW_EXIT_STATUS=${SCREEN_NEW_EXIT_STATUS:-0}
  [ -f "$SCREEN_NEW_TEMP_FILE" ] && rm -Rf "$SCREEN_NEW_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $SCREEN_NEW_EXIT_STATUS
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Create a --no-* options function
__options_function_no() {
  local options="${1//=*/}"
  local argument="${1//*=/}"
  case "$options" in
  *) echo "${argument:-No argument provided}" && shift ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Create a --yes-* options function
__options_function_yes() {
  local options="${1//=*/}"
  local argument="${1//*=/}"
  case "$options" in
  *) echo "${argument:-No argument provided}" && shift ;;
  esac
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$SCREEN_NEW_SYSTEM_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$SCREEN_NEW_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$SCREEN_NEW_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$SCREEN_NEW_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$SCREEN_NEW_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$SCREEN_NEW_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__notify_remote() {
  local cmd="$(echo "$SCREEN_NEW_REMOTE_NOTIFY_COMMAND" | awk -F ' ' '{print $1}')"
  if [ "$SCREEN_NEW_REMOTE_NOTIFY_ENABLED" = "yes" ]; then
    if [ -n "$(command -v "$cmd")" ]; then
      eval $SCREEN_NEW_REMOTE_NOTIFY_COMMAND "$@"
    fi
  fi
}
