# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Session directory
SCREEN_NEW_SESSION_DIR="$SCREEN_NEW_CONFIG_DIR/sessions"
[ -d "$SCREEN_NEW_SESSION_DIR" ] || mkdir -p "$SCREEN_NEW_SESSION_DIR"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Write keybindings reference file
__screen-new_keybindings() {
  [ -n "$1" ] || return 1
  cat <<'KEYBINDINGS' >"$1"
screen-new keybindings
======================
Prefix key: Ctrl+n

Session Control
  Ctrl+n d        Detach from session
  Ctrl+n k        Kill current window
  Ctrl+n \\        Kill all windows and terminate screen
  Ctrl+n n        Send literal Ctrl+n to application

Window Management
  Ctrl+n c        Create a new window
  Ctrl+n "        List all windows
  Ctrl+n 0-9      Switch to window by number
  Ctrl+n '        Switch to window by name/number prompt
  Ctrl+n p        Previous window
  Ctrl+n <space>  Next window
  Ctrl+n A        Rename current window

Split / Layout
  Ctrl+n S        Split horizontally
  Ctrl+n |        Split vertically
  Ctrl+n <tab>    Move between split regions
  Ctrl+n X        Remove current region
  Ctrl+n Q        Remove all regions except current

Scrollback / Copy
  Ctrl+n [        Enter copy/scrollback mode (navigate with arrows, PgUp/PgDn)
  Ctrl+n ]        Paste from copy buffer

Misc
  Ctrl+n ?        Show this help
  Ctrl+n i        Show window info
  Ctrl+n t        Show system time/load

Process Exit (zombie mode)
  When a process exits, the window stays open:
  k               Kill the window
  r               Restart the process

Press q to exit this help.
KEYBINDINGS
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Write default screenrc to a file
# Usage: __screen-new_filerc <file> <session_name> [command] [args...]
__screen-new_filerc() {
  [ -n "$1" ] || return 1
  [ -s "$1" ] && return 0
  local rc="$1" name="$2" && shift 2
  local SCREEN_NEW_KEYBINDINGS_FILE="$SCREEN_NEW_CONFIG_DIR/keybindings.txt"
  __screen-new_keybindings "$SCREEN_NEW_KEYBINDINGS_FILE"
  cat <<SCREENRC >"$rc"
# screen-new session config: ${name:-unknown}
# Command: ${*:-unknown}
#
# Prefix key: Ctrl+n
# Ctrl+n n sends literal Ctrl+n to the application
# Process exit: press k to kill window, r to restart

# Escape / prefix key
escape ^Nn

# Display
hardstatus off
caption splitonly
startup_message off

# Keep window open on process exit (k=kill, r=restart)
zombie kr

# Use alternate screen buffer (for curses apps like htop, vim)
altscreen on

# SIGWINCH / terminal resize support
termcapinfo xterm* 'is=\E[r\E[m\E[2J\E[H\E[?7h\E[?1;4;6l'
termcapinfo xterm* OL=10000
defnonblock on
nonblock on

# Show keybindings with Ctrl+n ?
bind ? exec less $SCREEN_NEW_KEYBINDINGS_FILE
SCREENRC
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure screenrc exists for a session, return its path
# Usage: __ensure_screenrc <session_name> [command] [args...]
__ensure_screenrc() {
  local name="$1" && shift
  local rc="$SCREEN_NEW_SESSION_DIR/${name}.conf"
  __screen-new_filerc "$rc" "$name" "$@"
  printf '%s' "$rc"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Helper: list sn-* sessions
__list_sessions() {
  screen -wipe &>/dev/null
  screen -ls 2>/dev/null | grep '\.sn-' | sed 's/^[[:space:]]*//'
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
SCREEN_NEW_SUBCMD="${1:-}"
[ -n "$SCREEN_NEW_SUBCMD" ] && shift 1
case "$SCREEN_NEW_SUBCMD" in
a | attach)
  SCREEN_NEW_CMD="$1"
  if [ -z "$SCREEN_NEW_CMD" ]; then
    printf_red "Usage: $APPNAME a <command> [args]"
    exit 1
  fi
  shift 1
  if ! command -v "$SCREEN_NEW_CMD" &>/dev/null; then
    printf_exit "$SCREEN_NEW_CMD: command not found"
  fi
  SCREEN_NEW_SESSION_NAME="sn-$(basename -- "$SCREEN_NEW_CMD")"
  SCREEN_NEW_SCREENRC="$(__ensure_screenrc "$SCREEN_NEW_SESSION_NAME" "$SCREEN_NEW_CMD" "$@")"
  screen -wipe &>/dev/null
  if screen -ls 2>/dev/null | grep -q "\.${SCREEN_NEW_SESSION_NAME}[[:space:]]"; then
    printf_cyan "Attaching to existing session: $SCREEN_NEW_SESSION_NAME"
    exec screen -x "$SCREEN_NEW_SESSION_NAME"
  else
    exec screen -c "$SCREEN_NEW_SCREENRC" -S "$SCREEN_NEW_SESSION_NAME" "$SCREEN_NEW_CMD" "$@"
  fi
  ;;
edit)
  SCREEN_NEW_EDIT_TARGET="${1:-}"
  SCREEN_NEW_EDITOR="${EDITOR:-vi}"
  if [ -n "$SCREEN_NEW_EDIT_TARGET" ]; then
    SCREEN_NEW_EDIT_FILE="$SCREEN_NEW_SESSION_DIR/sn-$(basename -- "$SCREEN_NEW_EDIT_TARGET").conf"
    if [ ! -f "$SCREEN_NEW_EDIT_FILE" ]; then
      __ensure_screenrc "sn-$(basename -- "$SCREEN_NEW_EDIT_TARGET")" "$SCREEN_NEW_EDIT_TARGET" >/dev/null
    fi
    exec "$SCREEN_NEW_EDITOR" "$SCREEN_NEW_EDIT_FILE"
  else
    exec "$SCREEN_NEW_EDITOR" "$SCREEN_NEW_CONFIG_DIR/$SCREEN_NEW_CONFIG_FILE"
  fi
  ;;
ls | list)
  SCREEN_NEW_SESSIONS="$(__list_sessions)"
  if [ -n "$SCREEN_NEW_SESSIONS" ]; then
    __printf_head "Active sessions:"
    printf '%s\n' "$SCREEN_NEW_SESSIONS" | while IFS= read -r line; do
      __printf_line "  $line"
    done
  else
    printf_cyan "No active sessions"
  fi
  ;;
kill)
  SCREEN_NEW_KILL_TARGET="${1:-}"
  if [ "$SCREEN_NEW_KILL_TARGET" = "all" ]; then
    SCREEN_NEW_SESSIONS="$(__list_sessions)"
    if [ -z "$SCREEN_NEW_SESSIONS" ]; then
      printf_cyan "No active sessions"
    else
      printf '%s\n' "$SCREEN_NEW_SESSIONS" | awk '{print $1}' | while IFS= read -r s; do
        screen -S "$s" -X quit && printf_green "Killed: $s" || printf_red "Failed to kill: $s"
      done
    fi
  elif [ -n "$SCREEN_NEW_KILL_TARGET" ]; then
    SCREEN_NEW_SESSION_NAME="sn-$(basename -- "$SCREEN_NEW_KILL_TARGET")"
    if screen -ls 2>/dev/null | grep -q "\.${SCREEN_NEW_SESSION_NAME}[[:space:]]"; then
      screen -S "$SCREEN_NEW_SESSION_NAME" -X quit && printf_green "Killed: $SCREEN_NEW_SESSION_NAME" || printf_red "Failed to kill: $SCREEN_NEW_SESSION_NAME"
    else
      printf_red "Session not found: $SCREEN_NEW_SESSION_NAME"
    fi
  else
    SCREEN_NEW_SESSIONS="$(__list_sessions)"
    if [ -n "$SCREEN_NEW_SESSIONS" ]; then
      __printf_head "Active sessions (use '$APPNAME kill <name>' to kill):"
      printf '%s\n' "$SCREEN_NEW_SESSIONS" | while IFS= read -r line; do
        __printf_line "  $line"
      done
    else
      printf_cyan "No active sessions"
    fi
  fi
  ;;
d | detach)
  SCREEN_NEW_DETACH_TARGET="${1:-}"
  if [ -n "$SCREEN_NEW_DETACH_TARGET" ]; then
    SCREEN_NEW_SESSION_NAME="sn-$(basename -- "$SCREEN_NEW_DETACH_TARGET")"
    if screen -ls 2>/dev/null | grep -q "\.${SCREEN_NEW_SESSION_NAME}[[:space:]]"; then
      screen -S "$SCREEN_NEW_SESSION_NAME" -X detach && printf_green "Detached: $SCREEN_NEW_SESSION_NAME" || printf_red "Failed to detach: $SCREEN_NEW_SESSION_NAME"
    else
      printf_red "Session not found: $SCREEN_NEW_SESSION_NAME"
    fi
  else
    SCREEN_NEW_SESSIONS="$(__list_sessions)"
    if [ -n "$SCREEN_NEW_SESSIONS" ]; then
      __printf_head "Active sessions (use '$APPNAME d <name>' to detach):"
      printf '%s\n' "$SCREEN_NEW_SESSIONS" | while IFS= read -r line; do
        __printf_line "  $line"
      done
    else
      printf_cyan "No active sessions"
    fi
  fi
  ;;
"")
  SCREEN_NEW_SESSIONS="$(__list_sessions)"
  if [ -n "$SCREEN_NEW_SESSIONS" ]; then
    __printf_head "Active sessions:"
    printf '%s\n' "$SCREEN_NEW_SESSIONS" | while IFS= read -r line; do
      __printf_line "  $line"
    done
  else
    __help
  fi
  ;;
*)
  # Default: treat as a command to attach to
  SCREEN_NEW_CMD="$SCREEN_NEW_SUBCMD"
  if ! command -v "$SCREEN_NEW_CMD" &>/dev/null; then
    printf_exit "$SCREEN_NEW_CMD: command not found"
  fi
  SCREEN_NEW_SESSION_NAME="sn-$(basename -- "$SCREEN_NEW_CMD")"
  SCREEN_NEW_SCREENRC="$(__ensure_screenrc "$SCREEN_NEW_SESSION_NAME" "$SCREEN_NEW_CMD" "$@")"
  screen -wipe &>/dev/null
  if screen -ls 2>/dev/null | grep -q "\.${SCREEN_NEW_SESSION_NAME}[[:space:]]"; then
    printf_cyan "Attaching to existing session: $SCREEN_NEW_SESSION_NAME"
    exec screen -x "$SCREEN_NEW_SESSION_NAME"
  else
    exec screen -c "$SCREEN_NEW_SCREENRC" -S "$SCREEN_NEW_SESSION_NAME" "$SCREEN_NEW_CMD" "$@"
  fi
  ;;
esac
SCREEN_NEW_EXIT_STATUS="${SCREEN_NEW_EXIT_STATUS:-$?}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
SCREEN_NEW_EXIT_STATUS="${SCREEN_NEW_EXIT_STATUS:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${SCREEN_NEW_EXIT_STATUS:-0}
