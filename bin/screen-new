# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && SCREEN_NEW_CWD="$1" && shift 1 || SCREEN_NEW_CWD="${SCREEN_NEW_CWD:-$PWD}"
SCREEN_NEW_CWD="$(realpath "${SCREEN_NEW_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$SCREEN_NEW_CWD" ] && cd "$SCREEN_NEW_CWD"; then
# if [ "$SCREEN_NEW_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
