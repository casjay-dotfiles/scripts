# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
  full|window|region|monitor|quick|annotate|record)
    __execute_direct "$1"
    ;;
  *)
    __interactive_menu
    ;;
esac
