SCREENSHOT_MENU_CWD="$(realpath "${SCREENSHOT_MENU_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$SCREENSHOT_MENU_CWD" ] && cd "$SCREENSHOT_MENU_CWD"; then
