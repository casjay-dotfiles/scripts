SCREENSHOT_MENU_OUTPUT_COLOR_GOOD="${SCREENSHOT_MENU_OUTPUT_COLOR_GOOD:-2}"
SCREENSHOT_MENU_OUTPUT_COLOR_ERROR="${SCREENSHOT_MENU_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
