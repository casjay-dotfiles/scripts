news)
  shift 1
  __selector "news" "$@"
  ;;

os)
  shift 1
  __selector "os" "$@"
  ;;

packages)
  shift 1
  __selector "packages" "$@"
  ;;

tech)
  shift 1
  __selector "tech" "$@"
  ;;

security)
  shift 1
  __selector "security" "$@"
  ;;

list)
  shift 1
  __list_engines "$@"
  ;;

search)
  shift 1
  __direct_search "$@"
  ;;

*)
  if [ -z "$SEARCH_MENU_SHOW_PROVIDERS" ] && [ $# -eq 0 ]; then
    for globalConfigfile in "${SEARCH_MENU_PROVIDERS_GLOBAL_DIR}"/*.conf "${SEARCH_MENU_PROVIDERS_LOCAL_DIR}"/*.conf; do
      [ -f "$globalConfigfile" ] && . "$globalConfigfile" || true
    done
    __execute_search_menu "$@"
  else
    __selector "all" "$@"
  fi
  ;;
esac
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set exit code
exitCode="${exitCode:-0}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# End application
# - - - - - - - - - - - - - - - - - - - - - - - - -
# lets exit with code
exit ${exitCode:-0}
# - - - - - - - - - - - - - - - - - - - - - - - - -
