# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "spellcheck:  Script to check spelling - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: spellcheck [options] [commands]"
  __printf_line ""
  __printf_head "Commands:"
  __printf_line "spellcheck [word]               - Check spelling of a word"
  __printf_line "spellcheck [file]               - Check spelling of a file"
  __printf_line "spellcheck batch [files...]     - Batch check multiple files"
  __printf_line "spellcheck interactive [word]   - Interactive word checking"
  __printf_line "spellcheck add-word [word]      - Add word to personal dictionary"
  __printf_line "spellcheck list-dicts           - List available dictionaries"
  __printf_line "spellcheck set-lang [language]  - Set spell check language"
  __printf_line ""
  __printf_line "--dir                           - Sets the working directory"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$SPELLCHECK_REQUIRE_SUDO" = "yes" ] && [ -z "$SPELLCHECK_REQUIRE_SUDO_RUN" ]; then
    export SPELLCHECK_REQUIRE_SUDO="no"
    export SPELLCHECK_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$SPELLCHECK_TEMP_FILE" ] && rm -Rf "$SPELLCHECK_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2‚îÇ;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__yad__text() {
  set -o pipefail
  local title="$1"
  local color="${2:-$SPELLCHECK_OUTPUT_COLOR_1}"
  local SPELLCHECK_YAD_WIDTH="${SPELLCHECK_YAD_WIDTH:-300}"
  local SPELLCHECK_YAD_HEIGHT="${SPELLCHECK_YAD_HEIGHT:-400}"
  if __cmd_exists yad && [ -n "$DISPLAY" ] && [ -z "$SSH_CONNECTION" ]; then
    cat - | yad --text-info --wrap --center --title="$title" --width=${SPELLCHECK_YAD_WIDTH:-500} --height=${SPELLCHECK_YAD_HEIGHT:-400} 2>/dev/null &
    return $?
  elif __cmd_exists zenity && [ -n "$DISPLAY" ] && [ -z "$SSH_CONNECTION" ]; then
    cat - | zenity --text-info --title="$title" --width=${SPELLCHECK_YAD_WIDTH:-500} --height=${SPELLCHECK_YAD_HEIGHT:-400} 2>/dev/null &
    return $?
  else
    cat - | printf_readline "$color"
    return $?
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__execute_spellcheck() {
  local search="${search:-$1}"
  if [ ! -f "$SPELLCHECK_CONFIG_DIR/aspell.conf" ]; then
    ASPELL_CHECK="$(__cmd_exists aspell && aspell dump dicts | wc -l || echo '0')"
    if [ "$ASPELL_CHECK" = 0 ]; then
      export NOTIFY_ERROR_MESSAGE="Failed to install aspell-en package"
      ask_yes_no_question "Missing dictionary files should I install them" "pkmgr silent install aspell-en" || exit 1
      ASPELL_CHECK="$(__cmd_exists aspell && aspell dump dicts | wc -l || echo '0')"
      if [ "$ASPELL_CHECK" = 0 ]; then
        rm -Rf "$SPELLCHECK_CONFIG_DIR/aspell.conf"
        printf_exit "Something went wrong"
      else
        printf '%s\n' "aspell is installed and configured" >"$SPELLCHECK_CONFIG_DIR/aspell.conf"
      fi
    fi
  fi
  if [ -f "$FILE_TO_CHECK" ]; then
    aspell -c "$FILE_TO_CHECK"
    exitCode=$?
  else
    if [ -z "$search" ]; then
      __notifications "Usage: $APPNAME [word]"
      exit 1
    fi
    echo "$search" | aspell -a list | grep -v "@(#) " >"$SPELLCHECK_TEMP_FILE" 2>/dev/null
    if grep -shq '^\*$' "$SPELLCHECK_TEMP_FILE"; then
      correct="You have spelled $search correctly"
      printf_green "$correct"
      __notifications "SpellCheck:" "$correct"
      exitCode=0
    else
      fix="$(sed 's|^& ||g;s|,| :|g' <"$SPELLCHECK_TEMP_FILE")"
      formatted="$(echo "$fix" | sed 's| : |\n|g' | grep -v '^$')"
      echo "$formatted" | __yad__text "$search" ||
        printf_custom $SPELLCHECK_OUTPUT_COLOR "$fix"
      __notifications "SpellCheck:" "$formatted"
      exitCode=1
    fi
  fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Enhanced spellcheck functions
__spellcheck_batch() {
  local files=("$@")
  local total_errors=0

  if [ ${#files[@]} -eq 0 ]; then
    printf_red "Usage: spellcheck batch [files...]"
    return 1
  fi

  printf_blue "üìö Batch spellcheck of ${#files[@]} files"

  for file in "${files[@]}"; do
    if [ -f "$file" ]; then
      printf_cyan "üîç Checking: $(basename "$file")"

      # Count misspelled words
      local errors=$(aspell -c "$file" --list <"$file" 2>/dev/null | wc -l)
      total_errors=$((total_errors + errors))

      if [ "$errors" -eq 0 ]; then
        printf_green "  ‚úÖ No spelling errors found"
      else
        printf_yellow "  ‚ö†Ô∏è Found $errors potential spelling errors"
      fi
    else
      printf_red "  ‚ùå File not found: $file"
    fi
  done

  printf_blue "üìä Total potential errors across all files: $total_errors"
  return 0
}

__spellcheck_interactive() {
  local word="$1"

  if [ -z "$word" ]; then
    printf_read_input "Enter word to check: " "" "word"
  fi

  if [ -z "$word" ]; then
    printf_red "No word provided"
    return 1
  fi

  printf_blue "üîç Checking spelling of: '$word'"

  echo "$word" | aspell -a list | grep -v "@(#) " >"$SPELLCHECK_TEMP_FILE" 2>/dev/null

  if grep -shq '^\*$' "$SPELLCHECK_TEMP_FILE"; then
    printf_green "‚úÖ '$word' is spelled correctly"
    __notifications "SpellCheck: '$word' is correct"
    return 0
  else
    printf_red "‚ùå '$word' appears to be misspelled"

    # Extract suggestions
    local suggestions="$(sed 's|^& [^:]*: ||g' <"$SPELLCHECK_TEMP_FILE" | tr ',' '\n' | head -10)"

    if [ -n "$suggestions" ]; then
      printf_yellow "üí° Suggestions:"
      echo "$suggestions" | while read -r suggestion; do
        [ -n "$suggestion" ] && printf_cyan "  ‚Ä¢ $suggestion"
      done

      printf_read_question "3" "Select a suggestion or press Enter to skip" "1" "selected"
      if [ -n "$selected" ]; then
        printf_green "‚úÖ Selected: $selected"
        # Copy to clipboard if available
        if __cmd_exists xclip; then
          echo -n "$selected" | xclip -selection clipboard
          printf_cyan "üìã Copied to clipboard"
        fi
      fi
    else
      printf_yellow "üí° No suggestions available"
    fi

    __notifications "SpellCheck: '$word' needs correction"
    return 1
  fi
}

__spellcheck_add_word() {
  local word="$1"

  if [ -z "$word" ]; then
    printf_red "Usage: spellcheck add-word [word]"
    return 1
  fi

  if echo "$word" | aspell -a >/dev/null 2>&1; then
    # Add to personal dictionary
    echo "*$word" | aspell -a >/dev/null 2>&1
    printf_green "‚úÖ Added '$word' to personal dictionary"
    __notifications "Word '$word' added to dictionary"
    return 0
  else
    printf_red "‚ùå Failed to add word to dictionary"
    return 1
  fi
}

__spellcheck_list_dicts() {
  printf_blue "üìñ Available dictionaries:"

  if __cmd_exists aspell; then
    aspell dump dicts | while read -r dict; do
      printf_cyan "  ‚Ä¢ $dict"
    done
  else
    printf_red "‚ùå aspell not available"
    return 1
  fi
}

__spellcheck_set_lang() {
  local lang="$1"

  if [ -z "$lang" ]; then
    printf_blue "üìñ Available languages:"
    aspell dump dicts
    printf_read_input "Enter language code: " "en_US" "lang"
  fi

  if [ -n "$lang" ]; then
    export LANG="$lang"
    printf_green "‚úÖ Language set to: $lang"
    __notifications "Language changed to $lang"
  fi
}
