TELL_JOKE_NOTIFY_CLIENT_NAME="${TELL_JOKE_NOTIFY_CLIENT_NAME:-$APPNAME}"
TELL_JOKE_NOTIFY_CLIENT_ICON="${TELL_JOKE_NOTIFY_CLIENT_ICON:-notification-new}"
