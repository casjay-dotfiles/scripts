TIMEIS_TEMP_DIR="${TIMEIS_TEMP_DIR:-$HOME/.local/tmp/system_scripts/timeis}"
TIMEIS_CACHE_DIR="${TIMEIS_CACHE_DIR:-$HOME/.cache/timeis}"
