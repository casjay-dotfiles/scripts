[ -d "$TIMEIS_TEMP_DIR" ] || mkdir -p "$TIMEIS_TEMP_DIR" |& __devnull
[ -d "$TIMEIS_CACHE_DIR" ] || mkdir -p "$TIMEIS_CACHE_DIR" |& __devnull
