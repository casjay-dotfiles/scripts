# [ -d "$1" ] && __is_an_option "$1" && TLDR_CWD="$1" && shift 1 || TLDR_CWD="${TLDR_CWD:-$PWD}"
TLDR_CWD="$(realpath "${TLDR_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$TLDR_CWD" ] && cd "$TLDR_CWD"; then
