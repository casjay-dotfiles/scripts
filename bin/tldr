# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
TLDR_NOTIFY_ENABLED="${TLDR_NOTIFY_ENABLED:-yes}"
TLDR_GOOD_NAME="${TLDR_GOOD_NAME:-Great:}"
