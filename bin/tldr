# Ensure Directories exist
[ -d "$TLDR_LOG_DIR" ] || mkdir -p "$TLDR_LOG_DIR" |& __devnull
[ -d "$TLDR_TEMP_DIR" ] || mkdir -p "$TLDR_TEMP_DIR" |& __devnull
[ -d "$TLDR_CACHE_DIR" ] || mkdir -p "$TLDR_CACHE_DIR" |& __devnull
[ -d "$TLDR_BIN_DIR" ] || mkdir -p "$TLDR_BIN_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
TLDR_TEMP_FILE="${TLDR_TEMP_FILE:-$(mktemp $TLDR_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
