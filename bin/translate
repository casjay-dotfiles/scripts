# - - - - - - - - - - - - - - - - - - - - - - - - -
# Send all output to /dev/null
__devnull() {
  tee &>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# Send errors to /dev/null
__devnull2() {
  [ -n "$1" ] && local cmd="$1" && shift 1 || return 1
  eval $cmd "$*" 2>/dev/null && exitCode=0 || exitCode=1
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -'
# See if the executable exists
__cmd_exists() {
  local exitCode=0
  [ -n "$1" ] || return 0
  for cmd in "$@"; do
    if builtin command -v "$cmd" &>/dev/null; then
      exitCode=$((exitCode + 0))
    else
      exitCode=$((exitCode + 1))
    fi
  done
  [ $exitCode -eq 0 ] || exitCode=3
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check for a valid internet connection
__am_i_online() {
  local exitCode=0
  curl -q -LSsfI --max-time 2 --retry 1 "${1:-https://1.1.1.1}" 2>&1 | grep -qi 'server:.*cloudflare' || exitCode=4
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# colorization
if [ "$SHOW_RAW" = "true" ]; then
  NC=""
  RESET=""
  BLACK=""
  RED=""
  GREEN=""
  YELLOW=""
  BLUE=""
  PURPLE=""
  CYAN=""
  WHITE=""
  ORANGE=""
  LIGHTRED=""
  BG_GREEN=""
  BG_RED=""
  ICON_INFO="[ info ]"
  ICON_GOOD="[ ok ]"
  ICON_WARN="[ warn ]"
  ICON_ERROR="[ error ]"
  ICON_QUESTION="[ ? ]"
  printf_column() { tee | grep '^'; }
  printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
else
  printf_color() { printf "%b" "$(tput setaf "${2:-7}" 2>/dev/null)" "$1" "$(tput sgr0 2>/dev/null)"; }
fi
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional printf_ colors
__printf_head() { printf_blue "$1"; }
__printf_opts() { printf_purple "$1"; }
__printf_line() { printf_cyan "$1"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# output version
__version() { printf_cyan "$VERSION"; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# list options
__list_options() {
  printf_color "$1: " "$5"
  echo -ne "$2" | sed 's|:||g;s/'$3'/ '$4'/g' | tr '\n' ' '
  printf_newline
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# create the config file
__gen_config() {
  local NOTIFY_CLIENT_NAME="$APPNAME"
  if [ "$INIT_CONFIG" != "TRUE" ]; then
    printf_blue "Generating the config file in"
    printf_cyan "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE"
  fi
  [ -d "$TRANSLATE_CONFIG_DIR" ] || mkdir -p "$TRANSLATE_CONFIG_DIR"
  [ -d "$TRANSLATE_CONFIG_BACKUP_DIR" ] || mkdir -p "$TRANSLATE_CONFIG_BACKUP_DIR"
  [ -f "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE" ] &&
    cp -Rf "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE" "$TRANSLATE_CONFIG_BACKUP_DIR/$TRANSLATE_CONFIG_FILE.$$"
  cat <<EOF >"$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE"
# Settings for translate
TRANSLATE_UPDATE_URL="${TRANSLATE_UPDATE_URL:-}"
TRANSLATE_CLI_DIR="${TRANSLATE_CLI_DIR:-}"
TRANSLATE_YAD_WIDTH="${TRANSLATE_YAD_WIDTH:-900}"
TRANSLATE_YAD_HEIGHT="${TRANSLATE_YAD_HEIGHT:-600}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
TRANSLATE_OUTPUT_COLOR_1="${TRANSLATE_OUTPUT_COLOR_1:-}"
TRANSLATE_OUTPUT_COLOR_2="${TRANSLATE_OUTPUT_COLOR_2:-}"
TRANSLATE_OUTPUT_COLOR_GOOD="${TRANSLATE_OUTPUT_COLOR_GOOD:-}"
TRANSLATE_OUTPUT_COLOR_ERROR="${TRANSLATE_OUTPUT_COLOR_ERROR:-}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
TRANSLATE_NOTIFY_ENABLED="${TRANSLATE_NOTIFY_ENABLED:-}"
TRANSLATE_GOOD_NAME="${TRANSLATE_GOOD_NAME:-}"
TRANSLATE_ERROR_NAME="${TRANSLATE_ERROR_NAME:-}"
TRANSLATE_GOOD_MESSAGE="${TRANSLATE_GOOD_MESSAGE:-}"
TRANSLATE_ERROR_MESSAGE="${TRANSLATE_ERROR_MESSAGE:-}"
TRANSLATE_NOTIFY_CLIENT_NAME="${TRANSLATE_NOTIFY_CLIENT_NAME:-}"
TRANSLATE_NOTIFY_CLIENT_ICON="${TRANSLATE_NOTIFY_CLIENT_ICON:-}"
TRANSLATE_NOTIFY_CLIENT_URGENCY="${TRANSLATE_NOTIFY_CLIENT_URGENCY:-}"

EOF
  if builtin type -t __gen_config_local | grep -q 'function'; then __gen_config_local; fi
  if [ -f "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE" ]; then
    [ "$INIT_CONFIG" = "TRUE" ] || printf_green "Your config file for $APPNAME has been created"
    . "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE"
    exitCode=0
  else
    printf_red "Failed to create the config file"
    exitCode=1
  fi
  return ${exitCode:-0}
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Help function - Align to 50
__help() {
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "translate:  Translator powered by google/bing - $VERSION"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "Usage: translate [options] [commands] [string]"
  __printf_line "[words]                         - Translate"
  __printf_line "-h                              - Shows the help for translate.bash"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_opts "Other Options"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
  __printf_line "--help                          - Shows this message"
  __printf_line "--config                        - Generate user config file"
  __printf_line "--version                       - Show script version"
  __printf_line "--options                       - Shows all available options"
  __printf_line "--debug                         - Enables script debugging"
  __printf_line "--raw                           - Removes all formatting on output"
  __printf_head "- - - - - - - - - - - - - - - - - - - - - - - - -"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# check if arg is a builtin option
__is_an_option() { if echo "$ARRAY" | grep -q "${1:-^}"; then return 1; else return 0; fi; }
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user root
__user_is_root() {
  { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; } && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Is current user not root
__user_is_not_root() {
  if { [ $(id -u) -eq 0 ] || [ $EUID -eq 0 ] || [ "$WHOAMI" = "root" ]; }; then return 1; else return 0; fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Check if user is a member of sudo
__sudo_group() {
  grep -sh "${1:-$USER}" "/etc/group" | grep -Eq 'wheel|adm|sudo' || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# # Get sudo password
__sudoask() {
  ask_for_password sudo true && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run sudo
__sudorun() {
  __sudoif && __cmd_exists sudo && sudo -HE "$@" || { __sudoif && eval "$@"; }
  return $?
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Test if user has access to sudo
__can_i_sudo() {
  (sudo -vn && sudo -ln) 2>&1 | grep -vq 'may not' >/dev/null && return 0
  __sudo_group "${1:-$USER}" || __sudoif || __sudo true &>/dev/null || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User can run sudo
__sudoif() {
  __user_is_root && return 0
  __can_i_sudo "${RUN_USER:-$USER}" && return 0
  __user_is_not_root && __sudoask && return 0 || return 1
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Run command as root
requiresudo() {
  if [ "$TRANSLATE_REQUIRE_SUDO" = "yes" ] && [ -z "$TRANSLATE_REQUIRE_SUDO_RUN" ]; then
    export TRANSLATE_REQUIRE_SUDO="no"
    export TRANSLATE_REQUIRE_SUDO_RUN="true"
    __sudo "$@"
    exit $?
  else
    return 0
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Execute sudo
__sudo() {
  CMD="${1:-echo}" && shift 1
  CMD_ARGS="${*:--e "${RUN_USER:-$USER}"}"
  SUDO="$(builtin command -v sudo 2>/dev/null || echo 'eval')"
  [ "$(basename -- "$SUDO" 2>/dev/null)" = "sudo" ] && OPTS="--preserve-env=PATH -HE"
  if __sudoif; then
    export PATH="$PATH"
    $SUDO ${OPTS:-} $CMD $CMD_ARGS && true || false
    exitCode=$?
  else
    printf '%s\n' "This requires root to run"
    exitCode=1
  fi
  return ${exitCode:-1}
}
# End of sudo functions
# - - - - - - - - - - - - - - - - - - - - - - - - -
__trap_exit() {
  exitCode=${exitCode:-0}
  [ -f "$TRANSLATE_TEMP_FILE" ] && rm -Rf "$TRANSLATE_TEMP_FILE" &>/dev/null
  #unset CASJAYSDEV_TITLE_SET && printf '\033]2â”‚;%s\033\\' "${USER}@${HOSTNAME}:${PWD/#$HOME/~} - ${CASJAYSDEV_TITLE_PREV:-$SHELL}"
  if builtin type -t __trap_exit_local | grep -q 'function'; then __trap_exit_local; fi
  return $exitCode
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined functions
__remove_formatting() {
  sed -r "s/\x1b\[([0-9]{1,2}(;[0-9]{1,2})*)?m//g"
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__yad__text() {
  set -o pipefail
  local title="$1"
  local color="${2:-$TRANSLATE_OUTPUT_COLOR_1}"
  local TRANSLATE_YAD_WIDTH="${TRANSLATE_YAD_WIDTH:-900}"
  local TRANSLATE_YAD_HEIGHT="${TRANSLATE_YAD_HEIGHT:-600}"
  if __cmd_exists yad && [ -n "$DISPLAY" ] && [ -z "$SSH_CONNECTION" ]; then
    cat - | yad --text-info --wrap --center --title="$title" --width=${TRANSLATE_YAD_WIDTH:-500} --height=${TRANSLATE_YAD_HEIGHT:-400} 2>/dev/null &
    return $?
  elif __cmd_exists yad && [ -n "$DISPLAY" ] && [ -z "$SSH_CONNECTION" ]; then
    cat - | zenity --text-info --title="$title" --width=${TRANSLATE_YAD_WIDTH:-500} --height=${TRANSLATE_YAD_HEIGHT:-400} 2>/dev/null &
    return $?
  else
    cat - | printf_readline "$color"
    return $?
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__update() {
  curl -q -LSsf "$TRANSLATE_UPDATE_URL" -o "$TRANSLATE_CLI_DIR/translate.bash" 2>/dev/null
  if [ -f "$TRANSLATE_CLI_DIR/translate.bash" ]; then
    chmod -Rf 755 "$TRANSLATE_CLI_DIR/translate.bash"
    return 0
  else
    printf_exit "Failed to update $TRANSLATE_CLI_DIR/translate.bash"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
__execute_translate() {
  [ -f "$TRANSLATE_CLI_DIR/translate.bash" ] || __update || return 1
  res="$(eval "$TRANSLATE_CLI_DIR/translate.bash" "$SETARGS" | __remove_formatting)"
  if [ -n "$res" ]; then
    printf '%b\n' "$res" | __yad__text "Translator" "$TRANSLATE_OUTPUT_COLOR_2"
    return $?
  else
    printf_exit "Something went wrong"
  fi
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# User defined variables/import external variables

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Application Folders
TRANSLATE_CONFIG_FILE="${TRANSLATE_CONFIG_FILE:-settings.conf}"
TRANSLATE_CONFIG_DIR="${TRANSLATE_CONFIG_DIR:-$HOME/.config/myscripts/translate}"
TRANSLATE_CONFIG_BACKUP_DIR="${TRANSLATE_CONFIG_BACKUP_DIR:-$HOME/.local/share/myscripts/translate/backups}"
TRANSLATE_LOG_DIR="${TRANSLATE_LOG_DIR:-$HOME/.local/log/translate}"
TRANSLATE_TEMP_DIR="${TRANSLATE_TEMP_DIR:-$HOME/.local/tmp/system_scripts/translate}"
TRANSLATE_CACHE_DIR="${TRANSLATE_CACHE_DIR:-$HOME/.cache/translate}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
TRANSLATE_OUTPUT_COLOR_1="${TRANSLATE_OUTPUT_COLOR_1:-33}"
TRANSLATE_OUTPUT_COLOR_2="${TRANSLATE_OUTPUT_COLOR_2:-5}"
TRANSLATE_OUTPUT_COLOR_GOOD="${TRANSLATE_OUTPUT_COLOR_GOOD:-2}"
TRANSLATE_OUTPUT_COLOR_ERROR="${TRANSLATE_OUTPUT_COLOR_ERROR:-1}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Notification Settings
TRANSLATE_NOTIFY_ENABLED="${TRANSLATE_NOTIFY_ENABLED:-yes}"
TRANSLATE_GOOD_NAME="${TRANSLATE_GOOD_NAME:-Great:}"
TRANSLATE_ERROR_NAME="${TRANSLATE_ERROR_NAME:-Error:}"
TRANSLATE_GOOD_MESSAGE="${TRANSLATE_GOOD_MESSAGE:-No errors reported}"
TRANSLATE_ERROR_MESSAGE="${TRANSLATE_ERROR_MESSAGE:-Errors were reported}"
TRANSLATE_NOTIFY_CLIENT_NAME="${TRANSLATE_NOTIFY_CLIENT_NAME:-$APPNAME}"
TRANSLATE_NOTIFY_CLIENT_ICON="${TRANSLATE_NOTIFY_CLIENT_ICON:-notification-new}"
TRANSLATE_NOTIFY_CLIENT_URGENCY="${TRANSLATE_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Additional Variables
TRANSLATE_UPDATE_URL="${TRANSLATE_UPDATE_URL:-https://git.io/trans}"
TRANSLATE_CLI_DIR="${TRANSLATE_CLI_DIR:-$HOME/.local/share/CasjaysDev/sources}"
TRANSLATE_YAD_WIDTH="${TRANSLATE_YAD_WIDTH:-900}"
TRANSLATE_YAD_HEIGHT="${TRANSLATE_YAD_HEIGHT:-600}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Generate config files
[ -f "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE" ] || [ "$*" = "--config" ] || INIT_CONFIG="${INIT_CONFIG:-TRUE}" __gen_config ${SETARGS:-$@}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Import config
[ -f "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE" ] && . "$TRANSLATE_CONFIG_DIR/$TRANSLATE_CONFIG_FILE"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Ensure Directories exist
[ -d "$TRANSLATE_LOG_DIR" ] || mkdir -p "$TRANSLATE_LOG_DIR" |& __devnull
[ -d "$TRANSLATE_TEMP_DIR" ] || mkdir -p "$TRANSLATE_TEMP_DIR" |& __devnull
[ -d "$TRANSLATE_CACHE_DIR" ] || mkdir -p "$TRANSLATE_CACHE_DIR" |& __devnull
# - - - - - - - - - - - - - - - - - - - - - - - - -
TRANSLATE_TEMP_FILE="${TRANSLATE_TEMP_FILE:-$(mktemp $TRANSLATE_TEMP_DIR/XXXXXX 2>/dev/null)}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup trap to remove temp file
trap '__trap_exit' EXIT
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup notification function
__notifications() {
  __cmd_exists notifications || return
  [ "$TRANSLATE_NOTIFY_ENABLED" = "yes" ] || return
  [ "$SEND_NOTIFICATION" = "no" ] && return
  (
    export SCRIPT_OPTS="" _DEBUG=""
    export NOTIFY_GOOD_MESSAGE="${NOTIFY_GOOD_MESSAGE:-$TRANSLATE_GOOD_MESSAGE}"
    export NOTIFY_ERROR_MESSAGE="${NOTIFY_ERROR_MESSAGE:-$TRANSLATE_ERROR_MESSAGE}"
    export NOTIFY_CLIENT_ICON="${NOTIFY_CLIENT_ICON:-$TRANSLATE_NOTIFY_CLIENT_ICON}"
    export NOTIFY_CLIENT_NAME="${NOTIFY_CLIENT_NAME:-$TRANSLATE_NOTIFY_CLIENT_NAME}"
    export NOTIFY_CLIENT_URGENCY="${NOTIFY_CLIENT_URGENCY:-$TRANSLATE_NOTIFY_CLIENT_URGENCY}"
    notifications "$@"
  ) |& __devnull &
}
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Set custom actions

# - - - - - - - - - - - - - - - - - - - - - - - - -
# Argument/Option settings
SETARGS=("$@")
# - - - - - - - - - - - - - - - - - - - - - - - - -
SHORTOPTS="h"
SHORTOPTS+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LONGOPTS="completions:,config,debug,dir:,help,options,raw,version,silent"
LONGOPTS+=",update"
# - - - - - - - - - - - - - - - - - - - - - - - - -
ARRAY=""
ARRAY+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
LIST=""
LIST+=""
# - - - - - - - - - - - - - - - - - - - - - - - - -
# Setup application options
setopts=$(getopt -o "$SHORTOPTS" --long "$LONGOPTS" -n "$APPNAME" -- "$@" 2>/dev/null)
eval set -- "${setopts[@]}" 2>/dev/null
while :; do
  case "$1" in
  --raw)
    shift 1
    export SHOW_RAW="true"
    NC=""
    RESET=""
    BLACK=""
    RED=""
    GREEN=""
    YELLOW=""
    BLUE=""
    PURPLE=""
    CYAN=""
    WHITE=""
    ORANGE=""
    LIGHTRED=""
    BG_GREEN=""
    BG_RED=""
    ICON_INFO="[ info ]"
    ICON_GOOD="[ ok ]"
    ICON_WARN="[ warn ]"
    ICON_ERROR="[ error ]"
    ICON_QUESTION="[ ? ]"
    printf_column() { tee | grep '^'; }
    printf_color() { printf '%b' "$1" | tr -d '\t' | sed '/^%b$/d;s,\x1B\[ 0-9;]*[a-zA-Z],,g'; }
    ;;
  --debug)
    shift 1
    set -xo pipefail
    export SCRIPT_OPTS="--debug"
    export _DEBUG="on"
    __devnull() { tee || return 1; }
    __devnull2() { eval "$@" |& tee -p || return 1; }
    ;;
  --completions)
    if [ "$2" = "short" ]; then
      printf '%s\n' "-$SHORTOPTS" | sed 's|"||g;s|:||g;s|,|,-|g' | tr ',' '\n'
    elif [ "$2" = "long" ]; then
      printf '%s\n' "--$LONGOPTS" | sed 's|"||g;s|:||g;s|,|,--|g' | tr ',' '\n'
    elif [ "$2" = "array" ]; then
      printf '%s\n' "$ARRAY" | sed 's|"||g;s|:||g' | tr ',' '\n'
    elif [ "$2" = "list" ]; then
      printf '%s\n' "$LIST" | sed 's|"||g;s|:||g' | tr ',' '\n'
    else
      exit 1
    fi
    shift 2
    exit $?
    ;;
  --options)
    shift 1
    printf_blue "Current options for ${PROG:-$APPNAME}"
    [ -z "$SHORTOPTS" ] || __list_options "Short Options" "-${SHORTOPTS}" ',' '-' 4
    [ -z "$LONGOPTS" ] || __list_options "Long Options" "--${LONGOPTS}" ',' '--' 4
    [ -z "$ARRAY" ] || __list_options "Base Options" "${ARRAY}" ',' '' 4
    [ -z "$LIST" ] || __list_options "LIST Options" "${LIST}" ',' '' 4
    exit $?
    ;;
  --version)
    shift 1
    __version
    exit $?
    ;;
  --help)
    shift 1
    __help
    exit $?
    ;;
  --config)
    shift 1
    __gen_config
    exit $?
    ;;
  --silent)
    shift 1
    TRANSLATE_SILENT="true"
    ;;
  --dir)
    CWD_IS_SET="TRUE"
    TRANSLATE_CWD="$2"
    #[ -d "$TRANSLATE_CWD" ] || mkdir -p "$TRANSLATE_CWD" |& __devnull
    shift 2
    ;;
  --update)
    shift 1
    __update && printf_blue "translate bin has been updated"
    exit $?
    ;;
  -h)
    shift 1
    __execute_translate --help
    ;;
  --)
    shift 1
    break
    ;;
  esac
done
