VOLUMECTL_NOTIFY_CLIENT_NAME="${VOLUMECTL_NOTIFY_CLIENT_NAME:-$APPNAME}"
VOLUMECTL_NOTIFY_CLIENT_ICON="${VOLUMECTL_NOTIFY_CLIENT_ICON:-notification-new}"
VOLUMECTL_NOTIFY_CLIENT_URGENCY="${VOLUMECTL_NOTIFY_CLIENT_URGENCY:-normal}"
# - - - - - - - - - - - - - - - - - - - - - - - - -
