# - - - - - - - - - - - - - - - - - - - - - - - - -
# Color Settings
VOLUMECTL_OUTPUT_COLOR_1="${VOLUMECTL_OUTPUT_COLOR_1:-33}"
VOLUMECTL_OUTPUT_COLOR_2="${VOLUMECTL_OUTPUT_COLOR_2:-5}"
