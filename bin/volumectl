# Execute commands

# - - - - - - - - - - - - - - - - - - - - - - - - -
# begin main app
case "$1" in
up)
  shift 1
  __volume_up "${1:-$VOLUMECTL_DEFAULT_VOLUME_INCR}"
  ;;

down)
  shift 1
  __volume_down "${1:-$VOLUMECTL_DEFAULT_VOLUME_INCR}"
  ;;

toggle)
  shift 1
  __volume_toggle
  ;;

*)
  __volume_toggle
  ;;
esac
