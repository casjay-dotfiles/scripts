# begin main app
case "$1" in
email)
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __mailx "$SEND"
  __end_log $?
  exit
  ;;
discord)
  shift 1
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __discord "$SEND"
  __end_log $?
  exit
  ;;
slack)
  shift 1
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __slack "$SEND"
  __end_log $?
  exit
  ;;
telegram)
  shift 1
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __telegram "$SEND"
  __end_log $?
  exit
  ;;
pushbullet)
  shift 1
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __pushbullet "$SEND"
  __end_log $?
  exit
