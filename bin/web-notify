*)
  exitCode=0
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __slack "$*" || { printf_red "Failed to post to slack" && exitCode=$((exitCode + 1)); }
  __discord "$*" || { printf_red "Failed to post to discord" && exitCode=$((exitCode + 1)); }
  __telegram "$*" || { printf_red "Failed to post to telegram" && exitCode=$((exitCode + 1)); }
  __end_log $exitCode
  ;;
