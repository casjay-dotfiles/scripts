pushover)
  shift 1
  if [ $# -eq 0 ] && [ -p "/dev/stdin" ]; then
    SEND="$(cat -)"
  elif [ -f "$1" ]; then
    SEND="$(<"$1")"
  else
    SEND="$*"
  fi
  __pushover "$SEND"
  __end_log $?
  exit
