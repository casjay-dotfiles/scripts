# else
# SET_NEW_ARGS+=("$arg")
# fi
# done
# set -- "${SET_NEW_ARGS[@]}"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Set directory to first argument
# [ -d "$1" ] && __is_an_option "$1" && WIKIPEDIA_CWD="$1" && shift 1 || WIKIPEDIA_CWD="${WIKIPEDIA_CWD:-$PWD}"
WIKIPEDIA_CWD="$(realpath "${WIKIPEDIA_CWD:-$PWD}" 2>/dev/null)"
# if [ -d "$WIKIPEDIA_CWD" ] && cd "$WIKIPEDIA_CWD"; then
# if [ "$WIKIPEDIA_SILENT" != "true" ] && [ "$CWD_SILENCE" != "true" ]; then
# printf_cyan "Setting working dir to $WIKIPEDIA_CWD"
# fi
# else
# printf_exit "ðŸ’” $WIKIPEDIA_CWD does not exist ðŸ’”"
# fi
export WIKIPEDIA_CWD
