# [ -d "$1" ] && __is_an_option "$1" && XEPHYR_CWD="$1" && shift 1 || XEPHYR_CWD="${XEPHYR_CWD:-$PWD}"
XEPHYR_CWD="$(realpath "${XEPHYR_CWD:-$PWD}" 2>/dev/null)"
