YTDV_URL=("")
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
[ -n "$YTDV_BIN_FILE" ] && [ -z "$YTDV_BIN_NAME" ] && YTDV_BIN_NAME="$(basename -- "$YTDV_BIN_FILE")"
