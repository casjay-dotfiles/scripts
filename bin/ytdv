[ -d "$YTDV_TEMP_DIR" ] || mkdir -p "$YTDV_TEMP_DIR" |& __devnull
[ -d "$YTDV_CACHE_DIR" ] || mkdir -p "$YTDV_CACHE_DIR" |& __devnull
[ -d "$YTDV_CONFIG_DIR/archive" ] || mkdir -p "$YTDV_CONFIG_DIR/archive" |& __devnull
