#!/usr/bin/env bash
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
APPNAME_README="run_in_term"
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
