#SERVICES_LIST="\${PROCS_LIST:-\$SERVICES_LIST} "
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# networing info
DOMAINNAME="\${DOMAINNAME:-}"
HOSTNAME="\${HOSTNAME:-casjaysdev-GEN_SCRIPT_REPLACE_APPNAME}"
FULL_DOMAIN_NAME="\${FULL_DOMAIN_NAME:-\${DOMAINNAME:-\$HOSTNAME}}"
