# get ip addresses
CONTAINER_IP4_ADDRESS="\${CONTAINER_IP4_ADDRESS:-\$(__get_ip4)}"
CONTAINER_IP6_ADDRESS="\${CONTAINER_IP6_ADDRESS:-\$(__get_ip6)}"
