  echo ""

COPY ./rootfs/. /
COPY ./$GEN_DOCKERFILE_DOCKERFILE_NAME /root/docker/Dockerfile

RUN set -ex; \\
  echo ""

RUN \\
$(__setup_pkgs)

RUN \\
$(__init_packages)

RUN \\
$(__setup_files)

RUN set -ex \\
