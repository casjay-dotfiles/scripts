# Exit with error message
__exit_error() {
  local message="${1:-An error occurred}"
  printf_red "$message"
  exit ${2:-1}
}

# Exit with success message
__exit_success() {
  local message="${1:-Operation completed}"
  printf_green "$message"
  exit 0
}
.EE
.RE
.SS Input Validation Functions
.RS
.EX
# Check if argument provided
__require_arg() {
  [ -n "$1" ] || __exit_error "Argument required"
}

# Check if file exists
__require_file() {
  [ -f "$1" ] || __exit_error "File not found: $1"
}

# Check if directory exists
__require_dir() {
  [ -d "$1" ] || __exit_error "Directory not found: $1"
}
.EE
.RE
.SS Utility Functions
.RS
.EX
# Command exists check
__cmd_exists() {
  command -v "$1" &>/dev/null
}

# Run command with sudo if needed
__sudo_run() {
  if [ "$EUID" -eq 0 ]; then
    "$@"
  else
    sudo "$@"
  fi
}
.EE
.RE
