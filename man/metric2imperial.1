# Bi-directional temperature conversion
temp() {
    if [ "$1" = "c" ]; then
        metric2imperial f "$2"
    else
        # F to C: (F - 32) × 5/9
        result=$(echo "scale=2; ($2 - 32) * 5 / 9" | bc)
        echo "$2 fahrenheit is $result Celsius"
    fi
}

