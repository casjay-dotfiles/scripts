#!/bin/bash
# Weather notification script
temp_celsius=25
temp_fahrenheit=$(metric2imperial f $temp_celsius | awk '{print $5}')
echo "Current temperature: ${temp_celsius}°C (${temp_fahrenheit}°F)"

# Distance calculator
distance_km=42.195  # Marathon distance
distance_miles=$(metric2imperial km $distance_km | awk '{print $4}')
echo "Marathon: ${distance_km} km = ${distance_miles} miles"

# Height conversion
height_cm=180
height_feet=$(metric2imperial m $(echo "scale=2; $height_cm / 100" | bc) | awk '{print $4}')
echo "Height: ${height_cm} cm = ${height_feet} feet"
.EE
