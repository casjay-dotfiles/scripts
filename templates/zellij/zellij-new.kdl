// Zellij configuration for zellij-new
// KDL format configuration file

// Theme configuration
theme "dracula"

// General options
simplified_ui false
pane_frames true
mouse_mode true
scroll_buffer_size 10000
copy_on_select true
default_shell "bash"
auto_layout true
session_serialization true
pane_viewport_serialization false

// Copy command based on system
copy_command "xclip -selection clipboard" // Linux X11 - change to "wl-copy" for Wayland or "pbcopy" for macOS

// Default mode
default_mode "normal"

// Keybindings
keybinds {
    // Normal mode keybindings
    normal {
        // Session management
        bind "Ctrl d" { Detach; }
        
        // Tab management (equivalent to tmux windows)
        bind "Ctrl t" { NewTab; }
        bind "Ctrl n" { GoToNextTab; }
        bind "Ctrl p" { GoToPreviousTab; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }
        
        // Pane management
        bind "Alt \\" { NewPane "Right"; }
        bind "Alt /" { NewPane "Down"; }
        bind "Alt h" { MoveFocus "Left"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        bind "Alt l" { MoveFocus "Right"; }
        bind "Alt Left" { MoveFocus "Left"; }
        bind "Alt Down" { MoveFocus "Down"; }
        bind "Alt Up" { MoveFocus "Up"; }
        bind "Alt Right" { MoveFocus "Right"; }
        
        // Pane resizing
        bind "Alt +" { Resize "Increase"; }
        bind "Alt -" { Resize "Decrease"; }
        
        // Close pane
        bind "Alt x" { CloseFocus; }
        
        // Modes
        bind "Ctrl o" { SwitchToMode "locked"; }
        bind "Ctrl s" { SwitchToMode "scroll"; }
        bind "Ctrl r" { SwitchToMode "resize"; }
        bind "Ctrl e" { SwitchToMode "session"; }
        bind "Ctrl w" { SwitchToMode "pane"; }
        bind "Ctrl b" { SwitchToMode "tab"; }
        bind "Ctrl q" { Quit; }
    }
    
    // Locked mode (prefix mode similar to tmux)
    locked {
        bind "Ctrl o" { SwitchToMode "normal"; }
    }
    
    // Resize mode
    resize {
        bind "h" "Left" { Resize "Increase Left"; }
        bind "j" "Down" { Resize "Increase Down"; }
        bind "k" "Up" { Resize "Increase Up"; }
        bind "l" "Right" { Resize "Increase Right"; }
        bind "Ctrl h" { Resize "Decrease Left"; }
        bind "Ctrl j" { Resize "Decrease Down"; }
        bind "Ctrl k" { Resize "Decrease Up"; }
        bind "Ctrl l" { Resize "Decrease Right"; }
        bind "=" { Resize "Increase"; }
        bind "-" { Resize "Decrease"; }
        bind "Esc" { SwitchToMode "normal"; }
    }
    
    // Pane mode
    pane {
        bind "h" "Left" { MoveFocus "Left"; }
        bind "j" "Down" { MoveFocus "Down"; }
        bind "k" "Up" { MoveFocus "Up"; }
        bind "l" "Right" { MoveFocus "Right"; }
        bind "n" { NewPane; SwitchToMode "normal"; }
        bind "x" { CloseFocus; SwitchToMode "normal"; }
        bind "f" { ToggleFocusFullscreen; SwitchToMode "normal"; }
        bind "z" { TogglePaneFrames; SwitchToMode "normal"; }
        bind "w" { ToggleFloatingPanes; SwitchToMode "normal"; }
        bind "Esc" { SwitchToMode "normal"; }
    }
    
    // Tab mode
    tab {
        bind "h" "Left" { GoToPreviousTab; }
        bind "l" "Right" { GoToNextTab; }
        bind "n" { NewTab; SwitchToMode "normal"; }
        bind "x" { CloseTab; SwitchToMode "normal"; }
        bind "r" { 
            TabNameInput 0;
            SwitchToMode "normal";
        }
        bind "1" { GoToTab 1; SwitchToMode "normal"; }
        bind "2" { GoToTab 2; SwitchToMode "normal"; }
        bind "3" { GoToTab 3; SwitchToMode "normal"; }
        bind "4" { GoToTab 4; SwitchToMode "normal"; }
        bind "5" { GoToTab 5; SwitchToMode "normal"; }
        bind "6" { GoToTab 6; SwitchToMode "normal"; }
        bind "7" { GoToTab 7; SwitchToMode "normal"; }
        bind "8" { GoToTab 8; SwitchToMode "normal"; }
        bind "9" { GoToTab 9; SwitchToMode "normal"; }
        bind "Esc" { SwitchToMode "normal"; }
    }
    
    // Scroll mode
    scroll {
        bind "e" { EditScrollback; SwitchToMode "normal"; }
        bind "Ctrl c" { ScrollToBottom; SwitchToMode "normal"; }
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "Ctrl f" "PageDown" { PageScrollDown; }
        bind "Ctrl b" "PageUp" { PageScrollUp; }
        bind "d" { HalfPageScrollDown; }
        bind "u" { HalfPageScrollUp; }
        bind "Esc" { SwitchToMode "normal"; }
    }
    
    // Session mode
    session {
        bind "d" { Detach; }
        bind "Esc" { SwitchToMode "normal"; }
    }
}

// UI Configuration
ui {
    pane_frames {
        rounded_corners true
        hide_session_name false
    }
}

// Environment variables
env {
    ZELLIJ_AUTO_ATTACH "true"
    ZELLIJ_AUTO_EXIT "true"
}

// Dracula theme colors
themes {
    dracula {
        fg "#f8f8f2"
        bg "#282a36"
        black "#21222c"
        red "#ff5555"
        green "#50fa7b"
        yellow "#f1fa8c"
        blue "#bd93f9"
        magenta "#ff79c6"
        cyan "#8be9fd"
        white "#f8f8f2"
        orange "#ffb86c"
    }
}
